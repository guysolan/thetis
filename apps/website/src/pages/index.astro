---
import Layout from "@/layouts/Layout.astro";
import ThetisSchema from "@/schemas/ThetisSchema.astro";
import Image from "astro/components/Image.astro";
import { cn } from "../lib/utils";
import Reviews from "../components/reviews/Reviews.astro";
import EmailCTA from "../components/CTA/EmailCTA.astro";
import "@/styles/global.css";
import Testimonials from "../components/Testimonials.astro";
import NightSplintImage from "../assets/night-splint/achilles_rupture_night_splint_bed_thetis_medical.jpg";
import { buttonVariants } from "../components/ui/button";
import ProductTimeline from "../components/ProductTimeline.astro";
---

<ThetisSchema slot="head" />


<Layout
    title="Thetis Medical - Achilles Splint Specialists"
    description="Medical device company specializing in splints for injured Achilles Tendons. We sell an Achilles Rupture Night Splint and a Trauma Splint."
    image="https://thetismedical.com/images/night-splint.png"
>
  
    <main class="flex flex-col mx-auto w-full">
  
   

        <div class="relative bg-gradient-to-b from-primary/25 to-white py-16">
            <div class="mx-auto px-4 container">
                <div class="flex md:flex-row flex-col justify-between items-center gap-8">
                    <div class="space-y-6 md:w-1/2">
                        <h1 class="font-semibold text-[3rem] leading-normal">
                            <span class="font-semibold text-primary">Better Recovery</span> for Achilles Rupture Patients
                        </h1>

                        <p class="text-gray-700 text-lg leading-relaxed">
                            Experience breakthrough comfort and proven outcomes with our innovative Achilles splints - 
                            trusted by leading healthcare professionals worldwide.
                        </p>

                         <Image 
                            src={NightSplintImage} 
                            alt="Thetis Medical Achilles Rupture Night Splint"
                            class="group-hover:scale-[102%] group-hover:brightness-[0.85] block md:hidden shadow-lg hover:shadow-2xl rounded-xl transition-all duration-300" 
                        />
                        
                        <div class="flex sm:flex-row flex-col gap-4 pt-4">
                            <a href="/contact" 
                               class={cn(buttonVariants({ size: 'lg', variant: 'default' }), 
                               'w-full sm:w-auto text-center font-semibold')}>
                                Order Now
                            </a>
                            <a href="/night-splint" 
                               class={cn(buttonVariants({ size: 'lg', variant: 'outline' }), 
                               'w-full sm:w-auto text-center')}>
                                Learn More
                            </a>
                        </div>

                        <div class="flex sm:flex-row flex-col items-start sm:items-center gap-2 sm:gap-4 px-4 text-gray-600 text-md">
                            <div class="flex items-center gap-2">
                                <span class="text-primary">&#10003;</span>
                                Clinically Proven
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="text-primary">&#10003;</span>
                                NHS/FDA Approved
                            </div>
                            <div class="flex items-center gap-2">
                                <span class="text-primary">&#10003;</span>
                                Fast Delivery
                            </div>
                        </div>
                    </div>

                    <div class="md:block relative hidden md:w-5/12 group">
                        <Image 
                            src={NightSplintImage} 
                            alt="Thetis Medical Achilles Rupture Night Splint"
                            class="group-hover:scale-[102%] group-hover:brightness-[0.85] shadow-lg hover:shadow-2xl rounded-xl transition-all duration-300" 
                        />
                        <div class="bottom-0 left-0 absolute flex flex-col justify-end items-start opacity-0 group-hover:opacity-100 p-4 w-1/2 text-md transition-opacity duration-300">
                            <div class="mb-1 font-semibold text-md text-white">
                                Night Splint
                            </div>
                            <p class="text-md text-white leading-tight">
                                Sleep comfortably while your achilles rupture heals.
                            </p>
                            <a href="/night-splint" class="mt-3 text-lg text-white !underline underline-offset-2">
                                Order Now
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       

                <Reviews />

        <ProductTimeline     />

        <EmailCTA
            title="Sound Interesting?"
            paragraph="Want to get a sample, speak to us or just learn more?"
        />


        <Testimonials />
       
    </main>
</Layout>

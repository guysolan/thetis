---
import { getContentForSite } from '@thetis/content';
import BlogPost from '../../layouts/BlogPost.astro';

const siteContent = getContentForSite('thetis-medical');

export async function getStaticPaths() {
	const posts = await siteContent.getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.slug },
		props: post,
	}));
}

const post = Astro.props;
const { Content } = await post.render();
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>

---
import { buttonVariants } from "../components/ui/button";
import Layout from "../layouts/Layout.astro";
import EmailInput from "@/components/form/EmailInput.astro";
import IdInput from "@/components/form/IdInput.astro";
import TextArea from "@/components/form/TextArea.astro";
import FileInput from "@/components/form/FileInput.astro";
import HelperText from "@/components/form/HelperText.astro";
import Label from "@/components/form/Label.astro";
---

<Layout
    title="Thetis Medical - Returns"
    description="Medical device company specialising in splints for injured Achilles Tendons. We sell an Achilles Rupture Splint and a Trauma Splint."
    image="https://thetismedical.com/images/evidence-based-recovery"
>
    <main class="flex flex-col gap-y-8 my-8 px-2 lg:px-0 w-full lg:w-8/12">
        <h2 class="text-2xl">Create Return</h2>

        <!-- Friendly Return Policy Summary -->
        <div class="bg-yellow-50 p-6 border-yellow-400 border-l-4 rounded-lg">
            <h3 class="mb-3 font-semibold text-lg">
                ü§ù Before You Submit Your Return...
            </h3>
            <p class="mb-4 text-gray-700">
                We want to make sure we can process your return smoothly! Here
                are the most common reasons we can't accept returns:
            </p>
            <div class="space-y-3 text-gray-700 text-sm">
                <div class="flex items-start gap-2">
                    <span class="font-bold text-red-500">‚Ä¢</span>
                    <span
                        ><strong>Doctor didn't approve:</strong> We always recommend
                        checking with your healthcare provider first! üòÖ</span
                    >
                </div>
                <div class="flex items-start gap-2">
                    <span class="font-bold text-red-500">‚Ä¢</span>
                    <span
                        ><strong>Stretched or curling straps:</strong> Once stretched,
                        they won't provide proper support</span
                    >
                </div>
                <div class="flex items-start gap-2">
                    <span class="font-bold text-red-500">‚Ä¢</span>
                    <span
                        ><strong>Skin on straps or foam:</strong> We love you, but
                        we don't want your skin cells! üòÑ</span
                    >
                </div>
                <div class="flex items-start gap-2">
                    <span class="font-bold text-red-500">‚Ä¢</span>
                    <span
                        ><strong>Damaged packaging:</strong> We need ALL parts back
                        in good condition - every piece matters!</span
                    >
                </div>
            </div>
            <p class="mt-4 text-gray-600 text-sm">
                üí° <strong>Pro tip:</strong> If you're unsure about your doctor's
                approval, just ask them first! It saves everyone time and keeps our
                friendship intact. üòä
            </p>
        </div>

        <section>
            <!-- modify this form HTML and place wherever you want your form -->
            <form
                action="https://formspree.io/f/xrgwkooy"
                method="POST"
                enctype="multipart/form-data"
                class="flex flex-col gap-y-8"
            >
                <div class="flex gap-y-8 lg:gap-x-8 w-full">
                    <div class="w-full">
                        <EmailInput />
                    </div>
                    <div class="w-full">
                        <IdInput />
                    </div>
                </div>
                <div>
                    <Label labelFor="return-reason">Return Reason</Label>
                    <TextArea
                        name="return-reason"
                        id="return-reason"
                        placeholder="Please describe the reason for your return..."
                        required
                    />
                    <HelperText>
                        Please be as descriptive as possible. This will help us
                        return your money and improve our products for future
                        customers.
                    </HelperText>
                </div>
                <div>
                    <FileInput />
                    <HelperText>
                        Please add images to support your return reason as
                        required.
                    </HelperText>
                </div>
                <button
                    class={buttonVariants({
                        size: "xl",
                        variant: "default",
                        className: "lg:w-fit",
                    })}
                    type="submit">Send</button
                >
            </form>
        </section>
    </main>
</Layout>

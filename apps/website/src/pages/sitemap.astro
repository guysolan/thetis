---
import Layout from '../layouts/Layout.astro'

import { pages } from '../data/pages.ts'
import { articles } from '../data/articles.ts'
---

<Layout
    title="Thetis Medical Sitemap"
    description="Medical device company specialising in splints for injured Achilles Tendons. We sell an Achilles Rupture Night Splint and a Trauma Splint."
    image="https://thetismedical.com/images/dotty-logo"
>
    <section class="px-4 my-8 flex flex-col w-full max-w-[900px] mx-auto">
        <h1>Sitemap</h1>

        <div class="flex flex-col md:flex-row gap-x-8">
            <div class="flex-grow">
                <h2>Home</h2>
                <ul
                    class="w-full flex flex-col gap-x-6 pt-2 pb-4 list-disc pl-8"
                >
                    {
                        pages.map((page) => {
                            return (
                                <li>
                                    <a
                                        class="text-lg font-light"
                                        href={page.href}
                                    >
                                        {page.title}
                                    </a>
                                </li>
                            )
                        })
                    }
                </ul>
                <div class="flex-grow">
                    <h2>Frequently Asked Questions</h2>
                    <ul
                        class="w-full flex flex-col gap-x-6 pt-2 pb-4 list-disc pl-8"
                    >
                        {
                            articles.map((page) => {
                                return (
                                    <li>
                                        <a
                                            class="text-lg font-light"
                                            href={page.href}
                                        >
                                            {page.title}
                                        </a>
                                    </li>
                                )
                            })
                        }
                    </ul>
                </div>
            </div>
        </div>
    </section>
</Layout>

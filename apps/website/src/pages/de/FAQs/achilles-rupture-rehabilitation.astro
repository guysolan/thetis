---
import FaqSchemaAccordion from "../../../components/research/FaqSchemaAccordion.astro";
import NightSplintAdvert from "../../../components/products/night-splint/NightSplintAdvert.astro";
import FAQsLayout from "../../../layouts/FAQsLayout.astro";
import { getAlternateLanguages } from "../../../config/languages";
import {
    Dumbbell,
    Timer,
    Footprints,
    Zap,
    Trophy,
    Heart,
    Activity,
    Move,
    Weight,
    Target,
    CheckCircle,
    AlertCircle,
    Clock,
    ArrowRight,
} from "lucide-astro";

// Language configuration
const currentPath = Astro.url.pathname;
const alternateLanguages = getAlternateLanguages(currentPath, "de");

const exercisePhases = [
    {
        time: "Wochen 0-2",
        icon: Timer,
        title: "Frühe Erholungsphase",
        exercises: [
            {
                icon: Heart,
                title: "Sanfte Bewegung",
                items: [
                    "Leichte Wadenkontraktionen im Sitzen",
                    "Kleine Knöchelkreise (Fuß nach unten zeigen)",
                    "Fokus auf saubere und trockene Wunde",
                ],
            },
            {
                icon: Activity,
                title: "Oberkörper & Core",
                items: [
                    "Hüft- und Knieübungen mit Widerstandsbändern",
                    "Core-Stärkungsübungen",
                    "Oberkörper-Workouts zur Fitnesserhaltung",
                ],
            },
        ],
    },
    {
        time: "Wochen 2-6",
        icon: Footprints,
        title: "Gehphase",
        exercises: [
            {
                icon: ArrowRight,
                title: "Gehen im Stiefel",
                items: [
                    "Beginnen Sie mit dem Gehen im Stiefel mit Fersenkeilen",
                    "Üben Sie die richtige Gehtechnik",
                    "Erhöhen Sie schrittweise die Gehdistanz",
                ],
            },
            {
                icon: Move,
                title: "Frühe Übungen",
                items: [
                    "Sanfte Knöchelbewegungen (Knie gebeugt halten)",
                    "Leichte Wadenkontraktionen in verschiedenen Positionen",
                    "Heimtrainer wenn Wunde verheilt ist",
                ],
            },
        ],
    },
    {
        time: "Wochen 6-12",
        icon: Dumbbell,
        title: "Kraftaufbau",
        exercises: [
            {
                icon: Weight,
                title: "Wadenstärkung",
                items: [
                    "Zweibeinige Fersenheben auf einer Stufe",
                    "Sitzende Wadenheben mit leichten Gewichten",
                    "Gehübungen mit weniger Fersenhebung",
                ],
            },
            {
                icon: Activity,
                title: "Funktionelle Bewegung",
                items: [
                    "Grundlegende Kniebeugen und Ausfallschritte",
                    "Poolübungen für bessere Bewegung",
                    "Gleichgewichts- und Stabilitätsübungen",
                ],
            },
        ],
    },
    {
        time: "Wochen 12-24",
        icon: Zap,
        title: "Rückkehr zur Aktivität",
        exercises: [
            {
                icon: Target,
                title: "Fortgeschrittene Kraft",
                items: [
                    "Einbeinige Fersenheben",
                    "Sprung- und Hüpfübungen",
                    "Sportartspezifische Bewegungen",
                ],
            },
            {
                icon: CheckCircle,
                title: "Bewegungsqualität",
                items: [
                    "Fokus auf flüssige, natürliche Bewegung",
                    "Üben sportartspezifischer Fähigkeiten",
                    "Schrittweise Rückkehr zur vollen Aktivität",
                ],
            },
        ],
    },
    {
        time: "Meilensteine",
        icon: Trophy,
        title: "Wichtige Erholungsmeilensteine",
        exercises: [
            {
                icon: Clock,
                title: "Kraftziele",
                items: [
                    "Woche 8: Zweibeinige Fersenheben durch vollen Bewegungsbereich",
                    "Woche 12: Einbeinige Fersenheben",
                    "Woche 16: Bereit für dynamische Aktivitäten",
                    "Woche 24: Rückkehr zum Sport (erfordert >90% Kraft)",
                ],
            },
            {
                icon: AlertCircle,
                title: "Wichtige Hinweise",
                items: [
                    "Folgen Sie immer dem spezifischen Plan Ihres Physiotherapeuten",
                    "Stoppen Sie bei scharfen Schmerzen",
                    "Zeitplan kann je nach individueller Heilung variieren",
                    "Fokus auf Bewegungsqualität über Fortschrittsgeschwindigkeit",
                ],
            },
        ],
    },
];
---

<FAQsLayout
    title="Achillessehnenriss Rehabilitation: Wöchentlicher Leitfaden & Rückkehr-zum-Sport Meilensteine"
    description="Praktischer Erholungsfahrplan nach einem Achillessehnenriss – Gewichtsbelastung, Physio-Übungen, Autofahren und Rückkehr zum Sport."
    lang="de"
    alternateLanguages={alternateLanguages}
>
    <section id="faq-slide" class="faq slide">
        <div class="questions">
            <h2>Finden Sie Ihre Antwort:</h2>
            <a href="#q1"
                ><h3>Achilles-Reha-Zeitplan – was passiert jede Woche?</h3></a
            >
            <a href="#q2"
                ><h3>Wann kann ich mit der Physiotherapie beginnen?</h3></a
            >
            <a href="#q3"
                ><h3>
                    Wann ist es sicher, Gewicht auf meinen Fuß zu legen?
                </h3></a
            >
            <a href="#q4"
                ><h3>Beste Heimübungen nach einem Achillessehnenriss</h3></a
            >
            <a href="#q5"><h3>Wann kann ich wieder Auto fahren?</h3></a>
            <a href="#q6"><h3>Wie komme ich vom Gehen zum Laufen?</h3></a>
            <a href="#q7"><h3>Produkte, die die Reha erleichtern</h3></a>
            <a href="#q8"
                ><h3>Top-Tipps zur Vermeidung eines erneuten Risses</h3></a
            >
        </div>
        <div class="answers">
            <div id="q1"></div>
            <h2>Achilles-Reha-Zeitplan – was passiert jede Woche?</h2>
            <div>
                <p>
                    Die Erholung folgt normalerweise einem <a
                        href="/de/FAQs/achilles-rupture-timeline"
                        class="text-primary underline">wöchentlichen Fahrplan</a
                    >:
                </p>
                <ul class="flex flex-col gap-y-4 my-2">
                    <li class="!my-1 !py-0">
                        <strong>Wochen 0-2:</strong> Stiefel in Zehenspitzenposition
                        (Equinus), teilweise Gewichtsbelastung.
                    </li>
                    <li class="!my-1 !py-0">
                        <strong>Wochen 2-6:</strong> Schrittweise Fersenkeil-Reduktion,
                        volle Gewichtsbelastung, Beginn sanfter Isometrien.
                    </li>
                    <li class="!my-1 !py-0">
                        <strong>Wochen 6-10:</strong> Übergang aus dem Stiefel, doppelte
                        dann einbeinige Fersenheben.
                    </li>
                    <li class="!my-1 !py-0">
                        <strong>Monate 3-6:</strong> Laufübungen und sportartspezifisches
                        Training.
                    </li>
                    <li class="!my-1 !py-0">
                        <strong>6+ Monate:</strong> Rückkehr zum Wettkampf wenn Wadenkraft
                        ≥90% der anderen Seite.
                    </li>
                </ul>
            </div>

            <div id="q2"></div>
            <h2>Wann kann ich mit der Physiotherapie beginnen?</h2>
            <p>
                Die meisten Protokolle führen <strong
                    >geführte Physio um Woche 2-3</strong
                > für einfache Knöchel-Bewegungsfreiheit und sitzende Wadenaktivierung
                ein. Bis Wochen 6-10 werden Sie zu Widerstandsbändern und belastenden
                Fersenheben fortschreiten.
            </p>

            <div id="q3"></div>
            <h2>Wann ist es sicher, Gewicht auf meinen Fuß zu legen?</h2>
            <p>
                Die Evidenz unterstützt <strong
                    >frühe geschützte Gewichtsbelastung</strong
                > in einem Stiefel sobald der Komfort es erlaubt – oft innerhalb
                der ersten paar Tage. Dies fördert die Sehnenheilung und reduziert
                Steifheit. Halten Sie den Fuß nach unten gerichtet (lassen Sie den
                Knöchel nicht nach oben biegen) wann immer Sie stehen.
            </p>

            <div id="q4"></div>
            <h2>Beste Heimübungen nach einem Achillessehnenriss</h2>

            <div class="flex flex-col gap-y-8 mx-auto mt-8 w-full">
                {
                    exercisePhases.map((phase) => (
                        <div class="bg-primary/10 border border-primary/30 rounded-lg">
                            <div class="flex items-center gap-2 mb-4 p-4 pb-2 border-primary/30 border-b">
                                <phase.icon class="w-5 h-5 text-primary" />
                                <span class="font-medium text-primary text-lg">
                                    {phase.time}
                                </span>
                            </div>
                            <div class="space-y-4 p-4 pt-0">
                                {phase.exercises.map((exercise) => (
                                    <div>
                                        <div class="font-medium text-md text-neutral-700">
                                            {exercise.title}
                                        </div>
                                        <ul class="my-2 ml-4 text-sm list-disc list-inside">
                                            {exercise.items.map((item) => (
                                                <li class="!my-1 !py-0">
                                                    {item}
                                                </li>
                                            ))}
                                        </ul>
                                    </div>
                                ))}
                            </div>
                        </div>
                    ))
                }
            </div>

            <style>
                @media print {
                    .timeline-block {
                        break-inside: avoid;
                        page-break-inside: avoid;
                    }
                }

                html {
                    scroll-behavior: smooth;
                }
            </style>

            <p class="mt-4 text-muted-foreground text-sm">
                Denken Sie daran: Folgen Sie immer dem spezifischen Plan Ihres
                Physiotherapeuten und stoppen Sie bei scharfen Schmerzen. Ihr
                Zeitplan könnte je nach ärztlichem Rat und Ihrer Heilung anders
                sein.
            </p>

            <div id="q5"></div>
            <h2>Wann kann ich wieder Auto fahren?</h2>
            <p>
                Für <em>rechts</em>seitige Verletzungen empfehlen die meisten
                Chirurgen zu warten bis Sie eine Notbrems-Simulation in
                Turnschuhen durchführen können – typischerweise nach Woche 8-10
                sobald Sie aus dem Stiefel sind. Linksseitige Verletzungen in
                einem Automatikauto können früher zurückkehren. Prüfen Sie
                zuerst mit Ihrem Arzt und Versicherer.
            </p>

            <div id="q6"></div>
            <h2>Wie komme ich vom Gehen zum Laufen?</h2>
            <p>
                Beginnen Sie mit einem <strong>Jog-Walk-Programm</strong>: 1 Min
                Jog / 1 Min Walk x10 auf einer flachen Strecke wenn Sie 25
                einbeinige Fersenheben schmerzfrei durchführen können. Erhöhen
                Sie schrittweise die Jog-Intervalle und führen Sie
                Richtungswechsel ein.
            </p>

            <div id="q7"></div>
            <h2>Produkte, die die Erholung erleichtern</h2>
            <p>
                • <a
                    href="https://thetismedical.com/splint"
                    target="_blank"
                    rel="noopener">Achillessehnenriss-Schiene</a
                > – schlafen Sie bequem ohne Risiko eines erneuten Risses.<br />
                • <a
                    href="https://achilles-rupture.com/recovery-equipment-guide"
                    class="text-primary underline"
                    >Vollständiger Ausrüstungsleitfaden</a
                > vergleicht Stiefel, wasserdichte Abdeckungen und mehr.
            </p>

            <div id="q8"></div>
            <h2>Top-Tipps zur Vermeidung eines erneuten Risses</h2>
            <ul class="space-y-3">
                <li class="flex items-start gap-2 !my-4 !py-0">
                    <CheckCircle class="mt-0.5 w-5 h-5 text-primary" />
                    <span
                        >Tragen Sie den Stiefel oder die Schiene <em>jede</em> Nacht
                        für die vollen 10&nbsp;Wochen.</span
                    >
                </li>
                <li class="flex items-start gap-2 !my-4 !py-0">
                    <CheckCircle class="mt-0.5 w-5 h-5 text-primary" />

                    <span
                        >Entfernen Sie den Stiefel nur im Sitzen und lassen Sie
                        den Knöchel nie nach oben biegen.</span
                    >
                </li>
                <li class="flex items-start gap-2 !my-4 !py-0">
                    <CheckCircle class="mt-0.5 w-5 h-5 text-primary" />

                    <span
                        >Verwenden Sie Krücken für das Gleichgewicht bis Sie
                        ohne Hinken gehen können.</span
                    >
                </li>
                <li class="flex items-start gap-2 !my-4 !py-0">
                    <CheckCircle class="mt-0.5 w-5 h-5 text-primary" />

                    <span
                        >Folgen Sie dem Belastungsplan Ihres Physiotherapeuten –
                        Wadenkraft ist der Schlüssel.</span
                    >
                </li>
            </ul>
        </div>
    </section>

    <NightSplintAdvert />

    <FaqSchemaAccordion
        faqs={[
            {
                question: "Was ist der typische Achilles-Reha-Zeitplan?",
                answer: "Wochen 0-2: teilweise Gewichtsbelastung in einem Stiefel. Wochen 2-6: Fersenkeil-Reduktion & frühe Physio. Wochen 6-10: aus dem Stiefel, Fersenheben. Monate 3-6: Rückkehr-zum-Lauf-Übungen. 6+ Monate: uneingeschränkter Sport wenn Kraft >90%.",
            },
            {
                question: "Wann kann ich mit der Physiotherapie beginnen?",
                answer: "Normalerweise um Woche 2-3 für sanfte Bewegungsfreiheit und Isometrien, Fortschritt zu Widerstandsarbeit bis Woche 6-10.",
            },
            {
                question: "Wie schnell kann ich ohne Krücken gehen?",
                answer: "Viele Patienten werfen die Krücken zwischen Woche 2-4 weg sobald volle Gewichtsbelastung im Stiefel bequem ist.",
            },
            {
                question: "Wie weiß ich, dass ich bereit zum Laufen bin?",
                answer: "Zielen Sie auf 25 einbeinige Fersenheben und 90% Hop-Test-Symmetrie bevor Sie ein Lauf-Walk-Programm beginnen.",
            },
            {
                question: "Welche Ausrüstung hilft während der Reha?",
                answer: "Eine speziell angefertigte Nachtschiene, EVENup-Schuhausgleicher, wasserdichte Stiefelabdeckung und Therabands können alle die Reha erleichtern. Siehe unseren vollständigen Ausrüstungsleitfaden für Details.",
            },
        ]}
    />
</FAQsLayout>

---
import Layout from "../../layouts/Layout.astro";
import { getAlternateLanguages } from "../../config/languages";

// Language configuration
const currentPath = Astro.url.pathname;
const alternateLanguages = getAlternateLanguages(currentPath, "de");
---

<Layout
    title="Thetis Medical - Achillessehnenriss Behandlung & Rehabilitation"
    description="Spezialisierte Behandlung und Rehabilitation für Achillessehnenrisse. Professionelle medizinische Lösungen für eine vollständige Erholung."
    lang="de"
    alternateLanguages={alternateLanguages}
>
    <main class="mx-auto px-4 py-8 container">
        <section class="mb-12 text-center">
            <h1 class="mb-4 font-bold text-gray-900 text-4xl">
                Willkommen bei Thetis Medical
            </h1>
            <p class="mb-8 text-gray-600 text-xl">
                Spezialisierte Behandlung und Rehabilitation für
                Achillessehnenrisse
            </p>
            <div class="flex justify-center gap-4">
                <a
                    href="/de/splint"
                    class="bg-primary hover:bg-primary/90 px-6 py-3 rounded-lg text-white transition-colors"
                >
                    Unsere Produkte
                </a>
                <a
                    href="/de/FAQs/achilles-rupture-rehabilitation"
                    class="bg-gray-200 hover:bg-gray-300 px-6 py-3 rounded-lg text-gray-800 transition-colors"
                >
                    Erholungsleitfaden
                </a>
            </div>
        </section>

        <section class="gap-8 grid md:grid-cols-2 mb-12">
            <div class="bg-white shadow-md p-6 rounded-lg">
                <h2 class="mb-4 font-semibold text-2xl">
                    Achillessehnenriss-Schiene
                </h2>
                <p class="mb-4 text-gray-600">
                    Unsere speziell entwickelte Nachtschiene bietet Komfort und
                    Sicherheit während der Erholung von einem
                    Achillessehnenriss.
                </p>
                <a href="/de/splint" class="text-primary hover:underline">
                    Mehr erfahren →
                </a>
            </div>
            <div class="bg-white shadow-md p-6 rounded-lg">
                <h2 class="mb-4 font-semibold text-2xl">Rehabilitation</h2>
                <p class="mb-4 text-gray-600">
                    Vollständige Rehabilitationsprogramme für eine sichere und
                    effektive Rückkehr zur Aktivität nach einem
                    Achillessehnenriss.
                </p>
                <a
                    href="/de/recovery-pathway"
                    class="text-primary hover:underline"
                >
                    Mehr erfahren →
                </a>
            </div>
        </section>

        <section class="text-center">
            <h2 class="mb-6 font-bold text-3xl">Warum Thetis Medical?</h2>
            <div class="gap-6 grid md:grid-cols-3">
                <div class="text-center">
                    <div class="mb-2 text-4xl">🏥</div>
                    <h3 class="mb-2 font-semibold text-xl">
                        Medizinische Expertise
                    </h3>
                    <p class="text-gray-600">
                        Entwickelt von medizinischen Fachkräften mit jahrelanger
                        Erfahrung
                    </p>
                </div>
                <div class="text-center">
                    <div class="mb-2 text-4xl">🔬</div>
                    <h3 class="mb-2 font-semibold text-xl">
                        Evidenzbasierte Behandlung
                    </h3>
                    <p class="text-gray-600">
                        Alle Behandlungen basieren auf neuesten medizinischen
                        Erkenntnissen
                    </p>
                </div>
                <div class="text-center">
                    <div class="mb-2 text-4xl">💪</div>
                    <h3 class="mb-2 font-semibold text-xl">
                        Vollständige Erholung
                    </h3>
                    <p class="text-gray-600">
                        Unterstützung bei der Rückkehr zu Ihrem aktiven
                        Lebensstil
                    </p>
                </div>
            </div>
        </section>
    </main>
</Layout>

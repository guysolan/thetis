---
import Layout from "@/layouts/Layout.astro";
import Slide from "@/components/Slide.astro";
import NightSplintSchema from "@/schemas/NightSplintSchema.astro";
import DownloadList from "@/components/DownloadList.astro";
import SizeChart from "@/components/SizeChart.jsx";
import NightSplintFAQs from "@/components/NightSplintFAQs.tsx";
import ReviewCarousel from "@/components/reviews/ReviewCarousel";
import SleepInYourWellies from "@/components/SleepInYourWellies.tsx";
import NightSplintUsage from "@/components/products/night-splint/NightSplintUsage.astro";
import NightSplintInstructions from "@/components/products/night-splint/night-splint-instructions/index.astro";
import NightSplintHero from "../../components/products/night-splint/NightSplintHero.astro";
import ValuePropositions from "../../components/products/night-splint/ValuePropositions.astro";
import KeyFeatures from "../../components/products/night-splint/KeyFeatures.astro";
import Reviews from "@/components/reviews/InfiniteReviews.astro";
import BuyNowCallout from "../../components/products/night-splint/BuyNowCallout.astro";
import HighlightedWord from "../../components/HighlightedWord";
---

<Fragment slot="head">
    <NightSplintSchema />
</Fragment>

<Layout
    title="Achilles Tendon Rupture Splint"
    description="Thetis Medical's Achilles rupture splint to make sleeping more pleasant and bearable. The brace straps to the leg to prevent further tendon injury."
    image="https://thetismedical.com/images/green-shell.png"
>
    <main class="">
        <NightSplintHero />

        <section class="bg-gray-50 py-12">
            <div class="mx-auto px-4 container">
                <div class="mx-auto max-w-3xl">
                    <h2 class="mb-6 font-semibold text-3xl">
                        Sleeping with an Achilles Rupture: Boot vs. Splint
                    </h2>
                    <div class="prose prose-lg">
                        <p class="mb-4">
                            After an Achilles rupture, proper night-time
                            protection is crucial for healing. You have two main
                            options:
                        </p>

                        <h3 class="mt-6 mb-3 font-semibold text-xl">
                            Option 1: Sleep in Your Boot
                        </h3>
                        <p class="mb-4">
                            While effective, sleeping in a walking boot can be
                            uncomfortable and disruptive to your sleep quality.
                            The bulkiness and weight can make it difficult to
                            find a comfortable position.
                        </p>

                        <h3 class="mt-6 mb-3 font-semibold text-xl">
                            Option 2: Use Thetis Medical's Night Splint
                        </h3>
                        <p class="mb-4">
                            Our specialized night splint offers a more
                            comfortable alternative. Simply keep crutches by
                            your bed for bathroom visits. The splint is:
                        </p>
                        <ul class="mb-4 pl-6 list-disc">
                            <li>Lightweight and less bulky than a boot</li>
                            <li>Designed specifically for night-time use</li>
                            <li>
                                Provides proper tendon protection while you
                                sleep
                            </li>
                            <li>Allows for better sleep quality and comfort</li>
                        </ul>
                        <p>
                            Many patients report significantly better sleep
                            quality when using our splint compared to sleeping
                            in their boot.
                        </p>
                    </div>
                </div>
            </div>
        </section>

        <div class="mt-8 lg:mt-16">
            <SleepInYourWellies client:load />
        </div>

        <Reviews />

        <ValuePropositions />

        <KeyFeatures />

        <BuyNowCallout buttonText="Buy Now" buttonHref="/buy-now">
            <span slot="title"
                >Ready for <HighlightedWord>Real Relief?</HighlightedWord></span
            >
            <span slot="body">
                Tired of sleepless nights and discomfort from your boot? Our
                splint is lightweight, easy to use, and trusted by thousands for
                a good night's sleep. Experience the difference — wake up rested
                and on track for recovery.
            </span>
        </BuyNowCallout>

        <section class="flex flex-col items-center py-16">
            <div
                class="flex flex-col items-center mx-auto px-8 md:px-0 text-center"
            >
                <h2 class="mb-6 font-semibold text-3xl">
                    Ready for More Comfortable Recovery?
                </h2>
                <p class="mb-8 text-gray-700 text-xl">
                    Join thousands of patients who've improved their recovery
                    experience
                </p>
            </div>
            <ReviewCarousel client:load />
        </section>

        <div class="relative mx-auto mt-8 w-full">
            <iframe
                class="shadow-lg mx-auto rounded-lg w-full max-w-[300px] md:hover:max-w-[60vw] md:max-w-[50vw] lg:hover:max-w-[70vw] hover:max-w-[80vw] aspect-video transition-all duration-300 cursor-pointer"
                title="Night-Splint-Application"
                src="https://www.youtube.com/embed/T09Xnwaqbm0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
            >
            </iframe>
        </div>

        <NightSplintUsage />

        <NightSplintInstructions />

        <Slide title="Sizing">
            <SizeChart />
        </Slide>

        <Slide title="Downloads">
            <DownloadList
                downloads={[
                    {
                        title: "Splint Instructions.pdf",
                        href: "/images/documents/screen-instructions-individual.pdf",
                    },
                    {
                        title: "Splint Information Brochure.pdf",
                        href: "/documents/information-brochure-night-splint.pdf",
                    },
                    {
                        title: "Splint Flier.pdf",
                        href: "/documents/achilles-rupture-splint-flier-v3.pdf",
                    },
                ]}
            />
        </Slide>

        <BuyNowCallout
            buttonText="Buy Now"
            buttonHref="/buy-now"
            secondaryButtonText="Order for Clinic"
            secondaryButtonHref="/order-wholesale"
        >
            <span slot="title">Order Your Splint Today</span>
            <span slot="body">
                Don't let pain or poor sleep slow your recovery. Patients and
                clinicians agree: this splint brings <HighlightedWord
                    >comfort</HighlightedWord
                >, <HighlightedWord>peace of mind</HighlightedWord>, and <HighlightedWord
                    >better rest</HighlightedWord
                >—night after night.
            </span>
        </BuyNowCallout>

        <Slide title="FAQs">
            <NightSplintFAQs client:load />
        </Slide>
    </main>

    <script>
        fetch("https://extreme-ip-lookup.com/json/?key=mRicTdUafjFRd3Ufqftq")
            .then((res) => res.json())
            .then((response) => {
                console.log("Country: ", response.country);
                try {
                    // Check if on Splint Page
                    const shopify = document.getElementById(
                        "shopify-buy-button-wrapper",
                    );
                    const amazon = document.getElementById(
                        "amazon-buy-button-wrapper",
                    );

                    if (response.country === "United Kingdom") {
                        amazon?.remove();
                    } else {
                        shopify?.remove();
                    }
                } catch (error) {
                    // console.log(error)
                }
            })
            .catch((reason: any) => {
                console.log(reason);
                // console.log('Request failed');
            });
    </script>

    <style>
        @keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in-up {
            animation: fadeInUp 0.6s ease-out forwards;
            opacity: 0;
        }
    </style>
</Layout>

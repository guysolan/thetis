---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import { ArrowLeft, DollarSign, Banknote } from "lucide-react";
import { CashbackClaimForm } from "@/components/CashbackClaimForm";
---

<Layout
    title="Claim Your Cashback | Thetis Medical"
    description="Claim your £10 / $15 cashback for your approved video review. Enter your details and receive payment via PayPal or bank transfer."
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div class="mx-auto px-4 py-16 md:py-24 max-w-4xl text-center">
                <a
                    href="/splint-customer"
                    class="inline-flex items-center gap-2 mb-6 font-medium text-primary hover:text-primary/80 text-sm"
                >
                    <ArrowLeft className="w-4 h-4" />
                    Back to Special Offers
                </a>
                <div
                    class="inline-flex items-center gap-2 bg-primary/10 dark:bg-primary/20 mb-4 px-4 py-2 rounded-full font-semibold text-primary text-sm"
                >
                    <Banknote className="w-4 h-4" />
                    Claim Your Reward
                </div>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl"
                >
                    Claim Your <HighlightedWord>Cashback</HighlightedWord>
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl"
                >
                    Congratulations! Your video review has been approved.
                    Complete the form below to receive your £10 / $15 cashback
                    via PayPal or bank transfer.
                </p>
            </div>
        </ColorGradient>

        <section class="py-12 md:py-16">
            <div class="mx-auto px-4 max-w-2xl">
                <div
                    class="bg-white dark:bg-neutral-800 shadow-lg p-8 border border-neutral-200 dark:border-neutral-700 rounded-xl"
                >
                    <CashbackClaimForm client:load />
                </div>

                <div
                    class="bg-neutral-50 dark:bg-neutral-900 mt-8 p-6 rounded-xl"
                >
                    <h3
                        class="mb-4 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                    >
                        Payment Information
                    </h3>
                    <ul
                        class="space-y-2 text-neutral-600 dark:text-neutral-400 text-sm"
                    >
                        <li>
                            • Cashback amount: <strong>£10 GBP</strong> or <strong
                                >$15 USD</strong>
                        </li>
                        <li>• Payment methods: PayPal or Bank Transfer</li>
                        <li>
                            • Processing time: 7-10 business days after claim
                        </li>
                        <li>
                            • You'll receive a confirmation email once payment
                            is sent
                        </li>
                    </ul>
                </div>
            </div>
        </section>
    </main>
</Layout>

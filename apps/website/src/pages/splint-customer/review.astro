---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import { Video, Check, ArrowLeft, Banknote, Image } from "lucide-react";
import { VideoReviewForm } from "@/components/VideoReviewForm";
---

<Layout
    title="Submit Video Review - Earn £10/$15 Cashback | Thetis Medical"
    description="Upload your video or photo review of our night splint and earn £10 / $15 cashback if approved. Help others while earning back!"
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div class="mx-auto px-4 py-16 md:py-24 max-w-4xl text-center">
                <a
                    href="/splint-customer"
                    class="inline-flex items-center gap-2 mb-6 font-medium text-primary hover:text-primary/80 text-sm"
                >
                    <ArrowLeft className="w-4 h-4" />
                    Back to Special Offers
                </a>
                <div
                    class="inline-flex items-center gap-2 bg-primary/10 dark:bg-primary/20 mb-4 px-4 py-2 rounded-full font-semibold text-primary text-sm"
                >
                    <Banknote className="w-4 h-4" />
                    Earn £10 / $15 Cashback
                </div>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl"
                >
                    Submit Your <HighlightedWord>Review</HighlightedWord>
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl"
                >
                    Share your experience with our night splint and help others
                    on their recovery journey. If your review is approved,
                    you'll receive <strong>£10 or $15 cashback</strong>.
                </p>
            </div>
        </ColorGradient>

        <!-- Review Guidelines -->
        <section class="py-12 md:py-16">
            <div class="mx-auto px-4 max-w-3xl">
                <div
                    class="bg-primary/10 dark:bg-primary/20 mb-8 p-6 border border-primary/20 dark:border-primary/30 rounded-xl"
                >
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-xl"
                    >
                        Review Guidelines
                    </h2>
                    <ul
                        class="space-y-3 text-neutral-700 dark:text-neutral-300"
                    >
                        <li class="flex items-start gap-3">
                            <Check
                                className="mt-0.5 w-5 h-5 text-primary shrink-0"
                            />
                            <span>
                                <strong>Video:</strong> At least 30 seconds long
                                showing your experience
                            </span>
                        </li>
                        <li class="flex items-start gap-3">
                            <Check
                                className="mt-0.5 w-5 h-5 text-primary shrink-0"
                            />
                            <span>
                                <strong>Photos:</strong> Clear images of you using
                                the splint (alternative to video)
                            </span>
                        </li>
                        <li class="flex items-start gap-3">
                            <Check
                                className="mt-0.5 w-5 h-5 text-primary shrink-0"
                            />
                            <span>
                                Share honest feedback about your experience with
                                the splint
                            </span>
                        </li>
                        <li class="flex items-start gap-3">
                            <Check
                                className="mt-0.5 w-5 h-5 text-primary shrink-0"
                            />
                            <span>
                                Show how you use the splint (for sleeping,
                                resting, etc.)
                            </span>
                        </li>
                        <li class="flex items-start gap-3">
                            <Check
                                className="mt-0.5 w-5 h-5 text-primary shrink-0"
                            />
                            <span>
                                Keep it respectful and appropriate for all
                                audiences
                            </span>
                        </li>
                    </ul>
                </div>

                <!-- Upload Form -->
                <div
                    class="bg-white dark:bg-neutral-800 shadow-lg p-8 border border-neutral-200 dark:border-neutral-700 rounded-xl"
                >
                    <VideoReviewForm client:load />
                </div>

                <!-- What Happens Next -->
                <div
                    class="bg-neutral-50 dark:bg-neutral-900 mt-8 p-6 rounded-xl"
                >
                    <h3
                        class="mb-4 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                    >
                        What Happens Next?
                    </h3>
                    <ol
                        class="space-y-3 text-neutral-600 dark:text-neutral-400 text-sm list-decimal list-inside"
                    >
                        <li>
                            We'll review your submission (usually within 3-5
                            business days)
                        </li>
                        <li>
                            If approved, you'll receive an email with a link to
                            claim your cashback
                        </li>
                        <li>
                            Complete the <a
                                href="/splint-customer/claim-cashback"
                                class="text-primary hover:underline"
                                >cashback claim form</a
                            > with your payment details
                        </li>
                        <li>
                            Cashback is paid via PayPal or bank transfer within
                            7-10 business days
                        </li>
                        <li>
                            Your review may be featured on our website (with
                            your permission)
                        </li>
                    </ol>
                </div>

                <!-- Already submitted? -->
                <div class="mt-8 text-center">
                    <p
                        class="mb-3 text-neutral-600 dark:text-neutral-400 text-sm"
                    >
                        Already submitted and approved?
                    </p>
                    <a
                        href="/splint-customer/claim-cashback"
                        class="inline-flex items-center gap-2 font-medium text-primary hover:text-primary/80"
                    >
                        <Banknote className="w-4 h-4" />
                        Claim Your Cashback →
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>

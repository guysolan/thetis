---
import Layout from "../layouts/Layout.astro";
import Slide from "@/components/Slide.astro";
import TraumaSplintInstructions from "@/components/products/trauma-splint/trauma-splint-instructions/index.astro";
import Quote from "@/components/Quote.astro";
import SizeChart from "@/components/SizeChart.tsx";
import { ClientRouter } from "astro:transitions";
import DownloadList from "@/components/DownloadList.astro";
import EvidenceChart from '@/components/products/trauma-splint/EvidenceChart.astro';
import TraumaSplintHero from '@/components/products/trauma-splint/TraumaSplintHero.astro';
import TraumaSplintProsCons from '../components/products/trauma-splint/TraumaSplintProsCons.astro';
---

<Fragment slot="head">
  <ClientRouter />
</Fragment>

<Layout
    title="Trauma Splint for Torn Achilles Tendons"
    description="An Achilles splint designed to replace plaster of paris casts in A&E / Emergency Rooms. It can save patients and doctors costs by saving time."
    image="https://thetismedical.com/images/A&E.png"
>
    <main>
      <TraumaSplintHero />
   
    <Slide id="testimonials" title="Testimonials">
        <Quote
            title="This splint saves patients and staff time. It also facilitates an efficient pathway for scanning and making decisions about treatment."
            author="Musculo-Skeletal Radiologist, Past UKRCO Vice President and BSSR Council"
        />
    </Slide>

    <Slide
        title="Plaster of Paris vs Trauma Splint"
    >
        <TraumaSplintProsCons />
    </Slide>

    <EvidenceChart />

 
   <TraumaSplintInstructions />
    <Slide title="Sizing">
        <SizeChart />
    </Slide>
    <Slide title="Downloads">
        <DownloadList
            title="Information for Patients"
            downloads={[
                {
                    title: 'Trauma-Instructions.pdf',
                    href: '/images/documents/trauma-splint/trauma_splint_instructions.pdf',
                },
                {
                    title: 'Trauma Splint Brochure.pdf',
                    href: '/images/documents/information-brochure-trauma-splint.pdf',
                },
            ]}
        />
    </Slide>

</main>

</Layout>

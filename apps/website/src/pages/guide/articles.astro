---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import {
    BookOpen,
    ArrowRight,
    Mail,
    GraduationCap,
    Calendar,
} from "lucide-react";

const phases = [
    {
        slug: "weeks-0-1",
        title: "Week 0-1: First Week After Rupture",
        description:
            "Emergency care, A&E expectations, blood clot prevention, pain management, and essential survival tips.",
        topics: [
            "What to expect at A&E",
            "Blood clot warning signs",
            "Pain management",
            "Elevation techniques",
        ],
    },
    {
        slug: "weeks-1-3",
        title: "Weeks 1-3: Treatment Decision",
        description:
            "Surgery vs conservative treatment, choosing your walking boot, and setting up for recovery.",
        topics: [
            "Surgery vs non-operative",
            "Aircast vs VACOped",
            "Home setup",
            "Crutch techniques",
        ],
    },
    {
        slug: "weeks-4-6",
        title: "Weeks 4-6: Progressive Recovery",
        description:
            "Weight bearing progression, early exercises, and managing daily life.",
        topics: [
            "Weight bearing guide",
            "Early exercises",
            "Sleep solutions",
            "Work considerations",
        ],
    },
    {
        slug: "weeks-7-9",
        title: "Weeks 7-9: Final Boot Phase",
        description:
            "Preparing to transition out of your boot, increasing activity, and building confidence.",
        topics: [
            "Wedge removal schedule",
            "Balance exercises",
            "Swimming and hydrotherapy",
            "Mental recovery",
        ],
    },
    {
        slug: "weeks-10-12",
        title: "Weeks 10-12: Boot Transition",
        description:
            "Moving from boot to shoes, building strength, and returning to normal walking.",
        topics: [
            "First steps without boot",
            "Shoe recommendations",
            "Gait retraining",
            "Calf strengthening",
        ],
    },
    {
        slug: "weeks-13-25",
        title: "Weeks 13-25: Progressive Strengthening",
        description:
            "Building strength and endurance, returning to activities, and preventing re-injury.",
        topics: [
            "Heel raise progression",
            "Return to driving",
            "Activity guidelines",
            "Scar management",
        ],
    },
    {
        slug: "week-26-plus",
        title: "Week 26+: Return to Sport",
        description:
            "Full recovery assessment, return to running and sport, and long-term outlook.",
        topics: [
            "Sport-specific training",
            "Running progression",
            "Re-rupture prevention",
            "Long-term expectations",
        ],
    },
];
---

<Layout
    title="Free Achilles Recovery Articles | Week-by-Week Guides | Thetis Medical"
    description="Free comprehensive guides for each phase of Achilles rupture recovery. Expert information from emergency care to returning to sport. No signup required."
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div class="mx-auto px-4 py-16 md:py-24 max-w-4xl text-center">
                <span
                    class="inline-flex items-center gap-2 bg-green-100 dark:bg-green-900 mb-4 px-3 py-1 rounded-full font-semibold text-green-800 dark:text-green-200 text-sm"
                >
                    <BookOpen className="w-4 h-4" />
                    100% Free — No Signup Required
                </span>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl"
                >
                    <HighlightedWord>Recovery</HighlightedWord> Articles
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl"
                >
                    Detailed guides for every phase of your Achilles rupture
                    recovery. From the first moments after injury to returning
                    to sport — everything you need to know, completely free.
                </p>

                <div
                    class="flex flex-wrap justify-center gap-6 text-neutral-600 dark:text-neutral-400 text-sm"
                >
                    <div class="flex items-center gap-2">
                        <Calendar className="w-4 h-4 text-primary" />
                        <span>7 detailed phases</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <BookOpen className="w-4 h-4 text-primary" />
                        <span>6+ months coverage</span>
                    </div>
                </div>
            </div>
        </ColorGradient>

        <!-- Phase Articles -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-5xl">
                <div class="mb-12 text-center">
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                    >
                        Browse by Recovery Phase
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400"
                    >
                        Click any phase to read the full article. No signup
                        required.
                    </p>
                </div>

                <div class="space-y-6">
                    {
                        phases.map((phase, index) => (
                            <a
                                href={`/guide/${phase.slug}`}
                                class="group block bg-white hover:bg-neutral-50 dark:bg-neutral-800 dark:hover:bg-neutral-750 p-6 border border-neutral-200 hover:border-primary/50 dark:border-neutral-700 rounded-xl transition-all"
                            >
                                <div class="flex md:flex-row flex-col gap-6">
                                    <div class="flex justify-center items-center bg-primary/10 rounded-xl w-16 h-16 font-bold text-primary text-xl shrink-0">
                                        {index + 1}
                                    </div>
                                    <div class="flex-1">
                                        <h3 class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 group-hover:text-primary text-xl transition-colors">
                                            {phase.title}
                                        </h3>
                                        <p class="mb-4 text-neutral-600 dark:text-neutral-400">
                                            {phase.description}
                                        </p>
                                        <div class="flex flex-wrap gap-2">
                                            {phase.topics.map((topic) => (
                                                <span class="bg-neutral-100 dark:bg-neutral-700 px-3 py-1 rounded-full text-neutral-600 dark:text-neutral-400 text-xs">
                                                    {topic}
                                                </span>
                                            ))}
                                        </div>
                                    </div>
                                    <div class="flex items-center text-primary">
                                        <ArrowRight className="w-5 h-5 transition-transform group-hover:translate-x-1" />
                                    </div>
                                </div>
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Want More? Section -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-5xl">
                <div class="mb-12 text-center">
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                    >
                        Want More Guidance?
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400"
                    >
                        These articles are a great start. For a more
                        personalized experience, consider our other free and
                        paid options.
                    </p>
                </div>

                <div class="gap-6 grid md:grid-cols-3">
                    <!-- Email Course -->
                    <div
                        class="bg-white dark:bg-neutral-800 p-6 border border-neutral-200 dark:border-neutral-700 rounded-xl"
                    >
                        <div
                            class="flex justify-center items-center bg-green-100 dark:bg-green-900 mb-4 rounded-full w-12 h-12"
                        >
                            <Mail
                                className="w-6 h-6 text-green-700 dark:text-green-300"
                            />
                        </div>
                        <span
                            class="inline-block bg-green-100 dark:bg-green-900 mb-2 px-2 py-0.5 rounded text-green-700 dark:text-green-300 text-xs"
                        >
                            Free
                        </span>
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                        >
                            Email Course
                        </h3>
                        <p
                            class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            Get recovery tips delivered to your inbox, timed to
                            your injury date. The right information at the right
                            time.
                        </p>
                        <a
                            href="/guide/emails"
                            class={cn(
                                buttonVariants({
                                    variant: "outline",
                                    size: "sm",
                                }),
                                "w-full justify-center gap-2",
                            )}
                        >
                            Learn More
                            <ArrowRight className="w-4 h-4" />
                        </a>
                    </div>

                    <!-- Essentials -->
                    <div
                        class="bg-white dark:bg-neutral-800 p-6 border border-neutral-200 dark:border-neutral-700 rounded-xl"
                    >
                        <div
                            class="flex justify-center items-center bg-primary/10 mb-4 rounded-full w-12 h-12"
                        >
                            <BookOpen className="w-6 h-6 text-primary" />
                        </div>
                        <span
                            class="inline-block bg-neutral-100 dark:bg-neutral-700 mb-2 px-2 py-0.5 rounded text-neutral-600 dark:text-neutral-400 text-xs"
                        >
                            £29
                        </span>
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                        >
                            Essentials Course
                        </h3>
                        <p
                            class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            31 structured lessons with exercises, checklists,
                            and questions to ask your surgeon.
                        </p>
                        <a
                            href="/guide/essentials"
                            class={cn(
                                buttonVariants({
                                    variant: "outline",
                                    size: "sm",
                                }),
                                "w-full justify-center gap-2",
                            )}
                        >
                            Learn More
                            <ArrowRight className="w-4 h-4" />
                        </a>
                    </div>

                    <!-- Professional -->
                    <div
                        class="bg-white dark:bg-neutral-800 p-6 border border-primary/30 dark:border-primary/50 rounded-xl"
                    >
                        <div
                            class="flex justify-center items-center bg-amber-100 dark:bg-amber-900 mb-4 rounded-full w-12 h-12"
                        >
                            <GraduationCap
                                className="w-6 h-6 text-amber-700 dark:text-amber-300"
                            />
                        </div>
                        <span
                            class="inline-block bg-amber-100 dark:bg-amber-900 mb-2 px-2 py-0.5 rounded text-amber-700 dark:text-amber-300 text-xs"
                        >
                            £99
                        </span>
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                        >
                            Professional Course
                        </h3>
                        <p
                            class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            Expert surgeon video lessons, return-to-sport
                            protocols, and priority support.
                        </p>
                        <a
                            href="/guide/professionals"
                            class={cn(
                                buttonVariants({
                                    variant: "default",
                                    size: "sm",
                                }),
                                "w-full justify-center gap-2",
                            )}
                        >
                            Learn More
                            <ArrowRight className="w-4 h-4" />
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Simple CTA -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-2xl text-center">
                <h2
                    class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-2xl"
                >
                    Start Reading Now
                </h2>
                <p class="mb-6 text-neutral-600 dark:text-neutral-400">
                    Pick the phase that matches where you are in your recovery.
                </p>
                <a
                    href="/guide/weeks-0-1"
                    class={cn(
                        buttonVariants({
                            variant: "default",
                            size: "lg",
                        }),
                        "gap-2",
                    )}
                >
                    <BookOpen className="w-4 h-4" />
                    Start with Week 0-1
                </a>
            </div>
        </section>
    </main>
</Layout>

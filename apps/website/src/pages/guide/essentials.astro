---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import {
    Moon,
    Droplets,
    ShoppingCart,
    ExternalLink,
    BookOpen,
    GraduationCap,
    Heart,
    Check,
    ArrowRight,
    Mail,
} from "lucide-react";

const features = [
    "31 easy-to-digest lessons",
    "Questions for your surgeon",
    "Physio exercises with illustrations",
    "Product recommendations",
    "Boot comparison guide (Aircast vs VACOped)",
    "Sleep and washing solutions",
    "Week-by-week recovery timeline",
    "What's normal vs what's urgent",
];

const whatYoullLearn = [
    {
        title: "Week 0: Emergency Care",
        description: "What just happened, A&E expectations, blood clot prevention, and choosing your walking boot.",
    },
    {
        title: "Week 1-2: Home Setup",
        description: "Setting up your recovery station, elevation techniques, sleeping solutions, and what's normal vs urgent.",
    },
    {
        title: "Week 3-6: First Movements",
        description: "Safe exercises, early mobility within your boot, and progressive weight bearing.",
    },
    {
        title: "Week 7+: Return to Activity",
        description: "Transitioning out of the boot, building strength, and returning to normal life.",
    },
];
---

<Layout
    title="Recovery Essentials - Complete Recovery Guide | Thetis Medical"
    description="31 lessons covering every stage of Achilles rupture recovery. Expert guidance, physio exercises, and practical tips. Start your journey with confidence."
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div class="mx-auto px-4 py-16 md:py-24 max-w-4xl text-center">
                <span
                    class="inline-flex items-center gap-2 bg-primary/10 mb-4 px-3 py-1 rounded-full font-semibold text-primary text-sm"
                >
                    <BookOpen className="w-4 h-4" />
                    31 Lessons
                </span>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl"
                >
                    <HighlightedWord>Recovery</HighlightedWord> Essentials
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl"
                >
                    Everything you need to know about Achilles rupture recovery — from choosing your boot to sleeping comfortably. 31 structured lessons to guide you through every stage.
                </p>

                <!-- Price -->
                <div class="mb-8">
                    <span class="font-bold text-neutral-900 dark:text-neutral-100 text-4xl">£29</span>
                    <span class="text-neutral-500 dark:text-neutral-400 text-lg"> one-time</span>
                </div>

                <!-- CTA buttons -->
                <div class="flex sm:flex-row flex-col justify-center gap-4">
                    <a
                        href="https://guide.thetismedical.com/essentials"
                        target="_blank"
                        rel="noopener noreferrer"
                        class={cn(
                            buttonVariants({
                                variant: "default",
                                size: "lg",
                            }),
                            "justify-center gap-2",
                        )}
                    >
                        <ExternalLink className="w-4 h-4" />
                        Start Essentials Course
                    </a>
                    <a
                        href="/achilles-rupture-splint"
                        class={cn(
                            buttonVariants({
                                variant: "outline",
                                size: "lg",
                            }),
                            "justify-center gap-2",
                        )}
                    >
                        <Moon className="w-4 h-4" />
                        Shop Night Splint
                    </a>
                </div>
            </div>
        </ColorGradient>

        <!-- What's Included -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-4xl">
                <div class="mb-12 text-center">
                    <h2 class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl">
                        What's Included
                    </h2>
                    <p class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400">
                        Comprehensive coverage of your entire recovery journey.
                    </p>
                </div>

                <div class="gap-4 grid md:grid-cols-2">
                    {features.map((feature) => (
                        <div class="flex items-center gap-3 bg-neutral-50 dark:bg-neutral-800 p-4 rounded-xl">
                            <div class="flex justify-center items-center bg-primary/10 rounded-full w-8 h-8 shrink-0">
                                <Check className="w-4 h-4 text-primary" />
                            </div>
                            <span class="text-neutral-700 dark:text-neutral-300">{feature}</span>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Why We're Called Thetis -->
        <section
            class="bg-gradient-to-b from-primary/5 to-transparent py-16 md:py-24"
        >
            <div class="mx-auto px-4 max-w-4xl text-center">
                <p
                    class="mb-4 font-medium text-primary text-sm uppercase tracking-widest"
                >
                    Why we're called Thetis
                </p>
                <h2
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-3xl md:text-4xl"
                >
                    Named after <HighlightedWord
                        >Achilles' Mother</HighlightedWord
                    >
                </h2>
                <p
                    class="mb-4 text-neutral-600 dark:text-neutral-400 text-lg leading-relaxed"
                >
                    In Greek mythology, Thetis was a sea nymph who devoted
                    herself to protecting her son Achilles. When he was injured,
                    she was always there — caring for him, guiding his recovery,
                    and ensuring he could return to strength.
                </p>
                <p
                    class="mb-8 font-medium text-neutral-700 dark:text-neutral-300 text-lg"
                >
                    We carry that spirit forward. When you rupture your Achilles
                    tendon, we're here to help you through every step — just as
                    Thetis cared for Achilles.
                </p>

                <!-- What We Offer -->
                <div class="gap-6 grid md:grid-cols-2 mt-12">
                    <div
                        class="bg-white dark:bg-neutral-800 shadow-md hover:shadow-lg p-6 rounded-xl transition-shadow"
                    >
                        <div
                            class="flex justify-center items-center bg-primary/10 mx-auto mb-4 rounded-full w-12 h-12"
                        >
                            <Moon className="w-6 h-6 text-primary" />
                        </div>
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-xl"
                        >
                            Recovery Products
                        </h3>
                        <p
                            class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            Our <strong>Thetis Night Splint</strong> lets you ditch
                            the heavy boot at bedtime. Sleep comfortably while keeping
                            your Achilles protected.
                        </p>
                        <a
                            href="/achilles-rupture-splint"
                            class={cn(
                                buttonVariants({
                                    variant: "outline",
                                    size: "sm",
                                }),
                                "gap-2",
                            )}
                        >
                            <ShoppingCart className="w-4 h-4" />
                            Shop Splint
                        </a>
                    </div>

                    <div
                        class="bg-white dark:bg-neutral-800 shadow-md hover:shadow-lg p-6 rounded-xl transition-shadow"
                    >
                        <div
                            class="flex justify-center items-center bg-primary/10 mx-auto mb-4 rounded-full w-12 h-12"
                        >
                            <GraduationCap className="w-6 h-6 text-primary" />
                        </div>
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-xl"
                        >
                            Recovery Courses
                        </h3>
                        <p
                            class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            Free and premium <strong>week-by-week guides</strong> for patients
                            and clinicians. Recover with confidence.
                        </p>
                        <a
                            href="/guide/free"
                            class={cn(
                                buttonVariants({
                                    variant: "outline",
                                    size: "sm",
                                }),
                                "gap-2",
                            )}
                        >
                            <BookOpen className="w-4 h-4" />
                            Free Email Course
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- The Sleeping Problem -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-4xl">
                <div class="mb-12 text-center">
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                    >
                        The Sleeping Problem Nobody Mentions
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400"
                    >
                        Both Aircast and VACOped boots are hot, heavy, and
                        uncomfortable to sleep in. But removing your boot at
                        night risks re-rupture. There's a better solution.
                    </p>
                </div>

                <div
                    class="bg-white dark:bg-neutral-800 shadow-lg p-8 rounded-2xl"
                >
                    <div class="flex md:flex-row flex-col items-center gap-8">
                        <div class="flex-1">
                            <span
                                class="inline-flex items-center bg-primary/10 mb-4 px-3 py-1 rounded-full font-semibold text-primary text-sm"
                            >
                                Recommended by Specialists
                            </span>
                            <h3
                                class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-2xl"
                            >
                                Thetis Achilles Rupture Splint
                            </h3>
                            <p
                                class="mb-4 text-neutral-600 dark:text-neutral-400"
                            >
                                The <strong>Thetis Night Splint</strong> is specifically
                                designed for sleeping. It's lightweight, breathable,
                                and maintains the correct plantarflexed position.
                            </p>
                            <ul class="space-y-2 mb-6">
                                <li
                                    class="flex items-start gap-2 text-neutral-600 dark:text-neutral-400"
                                >
                                    <Moon
                                        className="flex-shrink-0 mt-0.5 w-5 h-5 text-primary"
                                    />
                                    <span
                                        ><strong>Sleep comfortably</strong> — much
                                        lighter than your walking boot</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-2 text-neutral-600 dark:text-neutral-400"
                                >
                                    <Droplets
                                        className="flex-shrink-0 mt-0.5 w-5 h-5 text-primary"
                                    />
                                    <span
                                        ><strong>Shower safely</strong> — maintains
                                        protection while washing your foot</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-2 text-neutral-600 dark:text-neutral-400"
                                >
                                    <ShoppingCart
                                        className="flex-shrink-0 mt-0.5 w-5 h-5 text-primary"
                                    />
                                    <span
                                        ><strong>Washable liner</strong> — better
                                        hygiene than boot liners</span
                                    >
                                </li>
                            </ul>
                            <a
                                href="/achilles-rupture-splint"
                                class={cn(
                                    buttonVariants({
                                        variant: "default",
                                        size: "default",
                                    }),
                                    "gap-2",
                                )}
                            >
                                Learn More About the Splint
                            </a>
                        </div>
                        <div class="flex-1 max-w-sm">
                            <img
                                src="/images/night-splint.png"
                                alt="Thetis Achilles Rupture Night Splint"
                                class="shadow-md rounded-xl"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- What You'll Learn -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-4xl">
                <h2
                    class="mb-12 font-bold text-neutral-900 dark:text-neutral-100 text-3xl text-center"
                >
                    What You'll Learn
                </h2>

                <div class="gap-6 grid md:grid-cols-2">
                    {whatYoullLearn.map((item) => (
                        <div class="bg-neutral-50 dark:bg-neutral-800 p-6 rounded-xl">
                            <h3 class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg">
                                {item.title}
                            </h3>
                            <p class="text-neutral-600 dark:text-neutral-400 text-sm">
                                {item.description}
                            </p>
                        </div>
                    ))}
                </div>
            </div>
        </section>

        <!-- Choosing Your Boot -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-4xl">
                <h2
                    class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl text-center"
                >
                    Choosing Your Walking Boot
                </h2>
                <p
                    class="mx-auto mb-12 max-w-2xl text-neutral-600 dark:text-neutral-400 text-center"
                >
                    The Essentials course includes a detailed comparison of the two main
                    boot options: Aircast and VACOped.
                </p>

                <div class="gap-6 grid md:grid-cols-2">
                    <div class="bg-white dark:bg-neutral-800 p-6 rounded-xl">
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                        >
                            Aircast
                        </h3>
                        <p
                            class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            Lightweight, affordable (~£120), widely available.
                            Uses removable wedges to set ankle angle.
                        </p>
                        <ul
                            class="space-y-1 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            <li>✓ Budget-friendly</li>
                            <li>✓ Easy to adjust</li>
                            <li>✗ Not waterproof</li>
                            <li>✗ Fixed position</li>
                        </ul>
                    </div>
                    <div class="bg-white dark:bg-neutral-800 p-6 rounded-xl">
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                        >
                            VACOped
                        </h3>
                        <p
                            class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            Premium option (~£300), hinged mechanism with
                            adjustable range of motion.
                        </p>
                        <ul
                            class="space-y-1 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            <li>✓ Better ankle position</li>
                            <li>✓ May preserve muscle better</li>
                            <li>✓ Waterproof (with setup)</li>
                            <li>✗ More expensive</li>
                        </ul>
                    </div>
                </div>

                <div class="mt-8 text-center">
                    <p
                        class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                    >
                        <strong>Pro tip:</strong> Whichever boot you use, the Thetis
                        night splint makes sleeping and showering much easier.
                    </p>
                </div>
            </div>
        </section>

        <!-- Not Ready? Try Free -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-2xl text-center">
                <div class="bg-neutral-50 dark:bg-neutral-800 p-8 rounded-2xl">
                    <Mail className="mx-auto mb-4 w-10 h-10 text-primary" />
                    <h2 class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-2xl">
                        Not Ready to Commit?
                    </h2>
                    <p class="mb-6 text-neutral-600 dark:text-neutral-400">
                        Start with our free email course. Get weekly recovery tips delivered to your inbox, based on your injury date.
                    </p>
                    <a
                        href="/guide"
                        class={cn(
                            buttonVariants({
                                variant: "outline",
                                size: "default",
                            }),
                            "gap-2",
                        )}
                    >
                        <Mail className="w-4 h-4" />
                        Try Free Course First
                    </a>
                </div>
            </div>
        </section>

        <!-- Final CTA -->
        <section class="bg-primary/5 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-2xl text-center">
                <h2
                    class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                >
                    Ready to Start Your Recovery?
                </h2>
                <p class="mb-4 text-neutral-600 dark:text-neutral-400">
                    Access all 31 lessons and learn everything you need for a successful Achilles rupture recovery.
                </p>
                <p class="mb-8 font-bold text-neutral-900 dark:text-neutral-100 text-3xl">
                    £29 <span class="font-normal text-neutral-500 text-lg">one-time</span>
                </p>
                <div class="flex sm:flex-row flex-col justify-center gap-4">
                    <a
                        href="https://guide.thetismedical.com/essentials"
                        target="_blank"
                        rel="noopener noreferrer"
                        class={cn(
                            buttonVariants({
                                variant: "default",
                                size: "lg",
                            }),
                            "justify-center gap-2",
                        )}
                    >
                        <ExternalLink className="w-4 h-4" />
                        Start Essentials Course
                    </a>
                    <a
                        href="/buy-now"
                        class={cn(
                            buttonVariants({
                                variant: "outline",
                                size: "lg",
                            }),
                            "justify-center gap-2",
                        )}
                    >
                        <ShoppingCart className="w-4 h-4" />
                        Shop Recovery Products
                    </a>
                </div>
            </div>
        </section>
    </main>
</Layout>


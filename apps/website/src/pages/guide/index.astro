---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import {
    Mail,
    Calendar,
    BookOpen,
    GraduationCap,
    ArrowRight,
    Clock,
} from "lucide-react";

const phases = [
    {
        slug: "weeks-0-1",
        title: "Week 0-1",
        description: "Emergency care & first week",
    },
    {
        slug: "weeks-1-3",
        title: "Weeks 1-3",
        description: "Treatment decision",
    },
    {
        slug: "weeks-4-6",
        title: "Weeks 4-6",
        description: "Progressive recovery",
    },
    { slug: "weeks-7-9", title: "Weeks 7-9", description: "Final boot phase" },
    {
        slug: "weeks-10-12",
        title: "Weeks 10-12",
        description: "Boot transition",
    },
    { slug: "weeks-13-25", title: "Weeks 13-25", description: "Strengthening" },
    { slug: "week-26-plus", title: "Week 26+", description: "Return to sport" },
];
---

<Layout
    title="Achilles Recovery Guide | Free Resources & Courses | Thetis Medical"
    description="Free recovery articles, personalized email course, and structured lessons for Achilles rupture recovery. Expert guidance from injury to returning to sport."
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div class="mx-auto px-4 py-16 md:py-24 max-w-4xl text-center">
                <span
                    class="inline-flex items-center gap-2 bg-primary/10 mb-4 px-3 py-1 rounded-full font-semibold text-primary text-sm"
                >
                    Free + Paid Options
                </span>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl"
                >
                    Your <HighlightedWord>Recovery</HighlightedWord> Guide
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl"
                >
                    Everything you need to know about Achilles rupture recovery.
                    Start with free articles and email course, or go deeper with
                    our structured lessons.
                </p>
            </div>
        </ColorGradient>

        <!-- Four Options -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-5xl">
                <div class="gap-6 grid md:grid-cols-2">
                    <!-- Recovery Articles (Free) -->
                    <a
                        href="/guide/articles"
                        class="group block bg-white hover:bg-neutral-50 dark:bg-neutral-800 p-6 border border-neutral-200 hover:border-primary/50 dark:border-neutral-700 rounded-xl transition-all"
                    >
                        <div class="flex items-center gap-4 mb-4">
                            <div
                                class="flex justify-center items-center bg-green-100 dark:bg-green-900 rounded-xl w-14 h-14"
                            >
                                <BookOpen
                                    className="w-7 h-7 text-green-700 dark:text-green-300"
                                />
                            </div>
                            <div>
                                <span
                                    class="inline-block bg-green-100 dark:bg-green-900 mb-1 px-2 py-0.5 rounded text-green-700 dark:text-green-300 text-xs font-semibold"
                                >
                                    Free
                                </span>
                                <h3
                                    class="font-semibold text-neutral-900 dark:text-neutral-100 text-xl group-hover:text-primary transition-colors"
                                >
                                    Recovery Articles
                                </h3>
                            </div>
                        </div>
                        <p class="mb-4 text-neutral-600 dark:text-neutral-400">
                            Detailed guides for each phase of recovery. Read
                            anytime, no signup required.
                        </p>
                        <div
                            class="flex items-center text-primary font-medium text-sm"
                        >
                            Browse Articles
                            <ArrowRight
                                className="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1"
                            />
                        </div>
                    </a>

                    <!-- Email Course (Free) -->
                    <a
                        href="/guide/emails"
                        class="group block bg-white hover:bg-neutral-50 dark:bg-neutral-800 p-6 border border-neutral-200 hover:border-primary/50 dark:border-neutral-700 rounded-xl transition-all"
                    >
                        <div class="flex items-center gap-4 mb-4">
                            <div
                                class="flex justify-center items-center bg-green-100 dark:bg-green-900 rounded-xl w-14 h-14"
                            >
                                <Mail
                                    className="w-7 h-7 text-green-700 dark:text-green-300"
                                />
                            </div>
                            <div>
                                <span
                                    class="inline-block bg-green-100 dark:bg-green-900 mb-1 px-2 py-0.5 rounded text-green-700 dark:text-green-300 text-xs font-semibold"
                                >
                                    Free
                                </span>
                                <h3
                                    class="font-semibold text-neutral-900 dark:text-neutral-100 text-xl group-hover:text-primary transition-colors"
                                >
                                    Email Course
                                </h3>
                            </div>
                        </div>
                        <p class="mb-4 text-neutral-600 dark:text-neutral-400">
                            Personalized emails timed to your injury date. The
                            right information arrives exactly when you need it.
                        </p>
                        <div
                            class="flex items-center text-primary font-medium text-sm"
                        >
                            Learn More
                            <ArrowRight
                                className="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1"
                            />
                        </div>
                    </a>

                    <!-- Essentials Course (Paid) -->
                    <a
                        href="/guide/essentials"
                        class="group block bg-white hover:bg-neutral-50 dark:bg-neutral-800 p-6 border border-neutral-200 hover:border-primary/50 dark:border-neutral-700 rounded-xl transition-all"
                    >
                        <div class="flex items-center gap-4 mb-4">
                            <div
                                class="flex justify-center items-center bg-primary/10 rounded-xl w-14 h-14"
                            >
                                <BookOpen className="w-7 h-7 text-primary" />
                            </div>
                            <div>
                                <span
                                    class="inline-block bg-neutral-100 dark:bg-neutral-700 mb-1 px-2 py-0.5 rounded text-neutral-600 dark:text-neutral-400 text-xs font-semibold"
                                >
                                    £29
                                </span>
                                <h3
                                    class="font-semibold text-neutral-900 dark:text-neutral-100 text-xl group-hover:text-primary transition-colors"
                                >
                                    Essentials Course
                                </h3>
                            </div>
                        </div>
                        <p class="mb-4 text-neutral-600 dark:text-neutral-400">
                            31 structured lessons with exercises, checklists,
                            boot comparisons, and questions for your surgeon.
                        </p>
                        <div
                            class="flex items-center text-primary font-medium text-sm"
                        >
                            Learn More
                            <ArrowRight
                                className="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1"
                            />
                        </div>
                    </a>

                    <!-- Professional Course (Paid) -->
                    <a
                        href="/guide/professionals"
                        class="group block bg-white hover:bg-neutral-50 dark:bg-neutral-800 p-6 border-2 border-primary/30 hover:border-primary rounded-xl transition-all"
                    >
                        <div class="flex items-center gap-4 mb-4">
                            <div
                                class="flex justify-center items-center bg-amber-100 dark:bg-amber-900 rounded-xl w-14 h-14"
                            >
                                <GraduationCap
                                    className="w-7 h-7 text-amber-700 dark:text-amber-300"
                                />
                            </div>
                            <div>
                                <span
                                    class="inline-block bg-amber-100 dark:bg-amber-900 mb-1 px-2 py-0.5 rounded text-amber-700 dark:text-amber-300 text-xs font-semibold"
                                >
                                    £99
                                </span>
                                <h3
                                    class="font-semibold text-neutral-900 dark:text-neutral-100 text-xl group-hover:text-primary transition-colors"
                                >
                                    Professional Course
                                </h3>
                            </div>
                        </div>
                        <p class="mb-4 text-neutral-600 dark:text-neutral-400">
                            Expert video lessons from specialist surgeons,
                            return-to-sport protocols, and priority support.
                        </p>
                        <div
                            class="flex items-center text-primary font-medium text-sm"
                        >
                            Learn More
                            <ArrowRight
                                className="ml-2 w-4 h-4 transition-transform group-hover:translate-x-1"
                            />
                        </div>
                    </a>
                </div>
            </div>
        </section>

        <!-- Quick Phase Links -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-5xl">
                <div class="mb-12 text-center">
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                    >
                        Jump to Your Phase
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400"
                    >
                        Quick access to free articles for each recovery phase.
                    </p>
                </div>

                <div class="flex flex-wrap justify-center gap-3">
                    {
                        phases.map((phase) => (
                            <a
                                href={`/guide/${phase.slug}`}
                                class="flex flex-col items-center bg-white dark:bg-neutral-800 hover:bg-primary/5 px-4 py-3 border border-neutral-200 hover:border-primary/50 dark:border-neutral-700 rounded-xl transition-all text-center"
                            >
                                <span class="font-semibold text-neutral-900 dark:text-neutral-100 text-sm">
                                    {phase.title}
                                </span>
                                <span class="text-neutral-500 dark:text-neutral-400 text-xs">
                                    {phase.description}
                                </span>
                            </a>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Simple CTA -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-2xl text-center">
                <h2
                    class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-2xl"
                >
                    Not Sure Where to Start?
                </h2>
                <p class="mb-6 text-neutral-600 dark:text-neutral-400">
                    Start with our free email course. We'll send you the right
                    information at the right time based on your injury date.
                </p>
                <a
                    href="/guide/emails"
                    class={cn(
                        buttonVariants({
                            variant: "default",
                            size: "lg",
                        }),
                        "gap-2",
                    )}
                >
                    <Mail className="w-4 h-4" />
                    Start Email Course
                </a>
            </div>
        </section>
    </main>
</Layout>

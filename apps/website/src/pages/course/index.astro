---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import NightSplintAdvert from "@/components/products/night-splint/NightSplintAdvert.astro";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import {
    Mail,
    BookOpen,
    GraduationCap,
    ArrowRight,
    Check,
    Star,
    Clock,
    Calendar,
    Video,
    Zap,
} from "lucide-react";
---

<Layout
    title="Achilles Recovery Courses | Free & Paid Options | Thetis Medical"
    description="Choose your path to Achilles rupture recovery. Free email course, Essentials (£29), or Professional (£99) with expert video guidance."
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div class="mx-auto px-4 pt-8 md:pt-12 pb-16 md:pb-24 max-w-4xl text-center">
                <span
                    class="inline-flex items-center gap-2 bg-primary/10 mb-6 px-4 py-1.5 rounded-full font-medium text-primary text-sm uppercase tracking-wide"
                >
                    <GraduationCap className="w-4 h-4" />
                    Recovery Programs
                </span>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl lg:text-6xl leading-tight"
                >
                    Your <HighlightedWord>Recovery</HighlightedWord> Journey Starts Here
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl leading-relaxed"
                >
                    Expert guidance for every stage of your Achilles rupture recovery.
                    Start free or choose a structured course for deeper support.
                </p>
                <div class="flex flex-wrap justify-center gap-6 text-neutral-500 dark:text-neutral-400 text-sm">
                    <div class="flex items-center gap-2">
                        <Clock className="w-4 h-4 text-primary" />
                        <span>6+ months of guidance</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <Video className="w-4 h-4 text-primary" />
                        <span>Expert video lessons</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <Calendar className="w-4 h-4 text-primary" />
                        <span>Timed to your injury</span>
                    </div>
                </div>
                
                <!-- Already purchased link -->
                <div class="mt-8 pt-4 border-t border-primary/20">
                    <a
                        href="https://course.thetismedical.com/claim"
                        class="inline-flex items-center gap-2 text-primary hover:text-primary/80 transition-colors"
                    >
                        <ArrowRight className="w-4 h-4" />
                        Already purchased? Access your course →
                    </a>
                </div>
            </div>
        </ColorGradient>

        <!-- Three Course Options -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-6xl">
                <div class="gap-8 grid md:grid-cols-3">
                    <!-- Email Course (Free) -->
                    <a
                        href="/course/emails"
                        class="group flex flex-col bg-white hover:bg-primary/5 dark:bg-neutral-800 dark:hover:bg-primary/10 hover:shadow-lg p-6 md:p-8 border-2 border-primary/30 hover:border-primary/50 dark:border-primary/40 dark:hover:border-primary/60 rounded-2xl h-full transition-all duration-300"
                    >
                        <div class="flex items-center gap-4 mb-4">
                            <div
                                class="flex justify-center items-center bg-primary/20 dark:bg-primary/30 rounded-xl w-14 h-14"
                            >
                                <Mail
                                    className="w-7 h-7 text-primary dark:text-primary/80"
                                />
                            </div>
                            <div>
                                <span
                                    class="inline-block bg-primary/20 dark:bg-primary/30 mb-1 px-2 py-0.5 rounded font-semibold text-primary dark:text-primary/80 text-xs uppercase tracking-wide"
                                >
                                    FREE
                                </span>
                                <h3
                                    class="font-semibold text-neutral-900 dark:group-hover:text-primary/80 dark:text-neutral-100 group-hover:text-primary text-xl transition-colors"
                                >
                                    Email Course
                                </h3>
                            </div>
                        </div>

                        <p class="mb-6 text-neutral-600 dark:text-neutral-400 text-sm leading-relaxed">
                            Personalized emails timed to your injury date. The
                            right information arrives exactly when you need it.
                        </p>

                        <ul class="flex-grow space-y-3 mb-6">
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/20 dark:bg-primary/30 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary dark:text-primary/80" />
                                </div>
                                6+ months of guidance
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/20 dark:bg-primary/30 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary dark:text-primary/80" />
                                </div>
                                Timed to your injury date
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/20 dark:bg-primary/30 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary dark:text-primary/80" />
                                </div>
                                Automatic delivery
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/20 dark:bg-primary/30 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary dark:text-primary/80" />
                                </div>
                                Milestone reminders
                            </li>
                        </ul>

                        <div class="mb-4">
                            <span class="font-bold text-neutral-900 dark:text-neutral-100 text-3xl">Free</span>
                        </div>

                        <div class="flex items-center font-medium text-primary dark:text-primary/80 text-sm transition-transform group-hover:translate-x-1">
                            Start Free
                            <ArrowRight className="ml-2 w-4 h-4" />
                        </div>
                    </a>

                    <!-- Essentials Course (£29) -->
                    <a
                        href="/course/essentials"
                        class="group flex flex-col bg-white hover:bg-neutral-50 dark:bg-neutral-800 dark:hover:bg-neutral-750 hover:shadow-lg p-6 md:p-8 border-2 border-primary/30 hover:border-primary/60 dark:border-primary/40 dark:hover:border-primary rounded-2xl h-full transition-all duration-300"
                    >
                        <div class="flex items-center gap-4 mb-4">
                            <div
                                class="flex justify-center items-center bg-primary/10 rounded-xl w-14 h-14"
                            >
                                <BookOpen className="w-7 h-7 text-primary" />
                            </div>
                            <div>
                                <span
                                    class="inline-block bg-neutral-100 dark:bg-neutral-700 mb-1 px-2 py-0.5 rounded font-semibold text-neutral-600 dark:text-neutral-300 text-xs uppercase tracking-wide"
                                >
                                    POPULAR
                                </span>
                                <h3
                                    class="font-semibold text-neutral-900 dark:text-neutral-100 group-hover:text-primary text-xl transition-colors"
                                >
                                    Essentials
                                </h3>
                            </div>
                        </div>

                        <p class="mb-6 text-neutral-600 dark:text-neutral-400 text-sm leading-relaxed">
                            31 structured lessons with exercises, checklists,
                            boot comparisons, and questions for your surgeon.
                        </p>

                        <ul class="flex-grow space-y-3 mb-6">
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/10 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary" />
                                </div>
                                31 structured lessons
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/10 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary" />
                                </div>
                                Questions for your surgeon
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/10 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary" />
                                </div>
                                Physio exercises with illustrations
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/10 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary" />
                                </div>
                                Boot comparison guide
                            </li>
                        </ul>

                        <div class="mb-4">
                            <span class="font-bold text-neutral-900 dark:text-neutral-100 text-3xl">£29</span>
                            <span class="ml-1 text-neutral-500 dark:text-neutral-400 text-sm">one-time</span>
                        </div>

                        <div class="flex items-center font-medium text-primary text-sm transition-transform group-hover:translate-x-1">
                            Learn More
                            <ArrowRight className="ml-2 w-4 h-4" />
                        </div>
                    </a>

                    <!-- Pro Course (£99) -->
                    <a
                        href="/course/professionals"
                        class="group relative flex flex-col bg-white hover:bg-neutral-50 dark:bg-neutral-800 dark:hover:bg-neutral-750 hover:shadow-xl p-6 md:p-8 border-2 border-primary hover:border-primary rounded-2xl h-full transition-all duration-300"
                    >
                        <div class="top-0 right-4 absolute bg-primary px-3 py-1 rounded-b-lg font-semibold text-white text-xs uppercase tracking-wide">
                            BEST VALUE
                        </div>

                        <div class="flex items-center gap-4 mb-4">
                            <div
                                class="flex justify-center items-center bg-amber-100 dark:bg-amber-900 rounded-xl w-14 h-14"
                            >
                                <GraduationCap
                                    className="w-7 h-7 text-amber-700 dark:text-amber-300"
                                />
                            </div>
                            <div>
                                <div class="flex items-center gap-1 mb-1">
                                    <Star className="fill-amber-500 w-3 h-3 text-amber-500" />
                                    <span
                                        class="font-semibold text-amber-600 dark:text-amber-400 text-xs uppercase tracking-wide"
                                    >
                                        PREMIUM
                                    </span>
                                </div>
                                <h3
                                    class="font-semibold text-neutral-900 dark:text-neutral-100 group-hover:text-primary text-xl transition-colors"
                                >
                                    Professional
                                </h3>
                            </div>
                        </div>

                        <p class="mb-6 text-neutral-600 dark:text-neutral-400 text-sm leading-relaxed">
                            Expert video lessons from specialist surgeons,
                            return-to-sport protocols, and priority support.
                        </p>

                        <ul class="flex-grow space-y-3 mb-6">
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/10 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary" />
                                </div>
                                <strong class="text-neutral-900 dark:text-neutral-100">Everything in Essentials</strong>
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/10 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary" />
                                </div>
                                Surgeon video lessons
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/10 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary" />
                                </div>
                                Return-to-sport protocols
                            </li>
                            <li class="flex items-start gap-3 text-neutral-600 dark:text-neutral-400 text-sm">
                                <div class="flex justify-center items-center bg-primary/10 mt-0.5 rounded-full w-5 h-5 shrink-0">
                                    <Check className="w-3 h-3 text-primary" />
                                </div>
                                Priority expert support
                            </li>
                        </ul>

                        <div class="mb-4">
                            <span class="font-bold text-neutral-900 dark:text-neutral-100 text-3xl">£99</span>
                            <span class="ml-1 text-neutral-500 dark:text-neutral-400 text-sm">one-time</span>
                        </div>

                        <div class="flex items-center font-medium text-primary text-sm transition-transform group-hover:translate-x-1">
                            Learn More
                            <ArrowRight className="ml-2 w-4 h-4" />
                        </div>
                    </a>
                </div>
            </div>
        </section>

        <!-- Why Thetis Section -->
        <section class="bg-gradient-to-b from-primary/5 to-transparent py-16 md:py-24">
            <div class="mx-auto px-4 max-w-4xl text-center">
                <p class="mb-4 font-medium text-primary text-sm uppercase tracking-widest">
                    Why we're called Thetis
                </p>
                <h2 class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-3xl md:text-4xl">
                    Named after <HighlightedWord>Achilles' Mother</HighlightedWord>
                </h2>
                <p class="mb-4 text-neutral-600 dark:text-neutral-400 text-lg leading-relaxed">
                    In Greek mythology, Thetis was a sea nymph who devoted
                    herself to protecting her son Achilles. When he was injured,
                    she was always there — caring for him, guiding his recovery,
                    and ensuring he could return to strength.
                </p>
                <p class="font-medium text-neutral-700 dark:text-neutral-300 text-lg">
                    We carry that spirit forward. When you rupture your Achilles
                    tendon, we're here to help you through every step — just as
                    Thetis cared for Achilles.
                </p>
            </div>
        </section>

        <!-- Night Splint Advert -->
        <NightSplintAdvert lang="en" />

        <!-- Simple CTA -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-2xl text-center">
                <div class="flex justify-center items-center bg-primary/20 dark:bg-primary/30 mx-auto mb-6 rounded-full w-16 h-16">
                    <Mail className="w-8 h-8 text-primary dark:text-primary/80" />
                </div>
                <h2
                    class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-2xl md:text-3xl"
                >
                    Not Sure Where to Start?
                </h2>
                <p class="mb-8 text-neutral-600 dark:text-neutral-400 text-lg">
                    Start with our free email course. We'll send you the right
                    information at the right time based on your injury date.
                </p>
                <a
                    href="/course/emails"
                    class={cn(
                        buttonVariants({
                            variant: "default",
                            size: "lg",
                        }),
                        "gap-2",
                    )}
                >
                    <Mail className="w-4 h-4" />
                    Start Free Email Course
                </a>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Add smooth hover animations */
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
    }
</style>


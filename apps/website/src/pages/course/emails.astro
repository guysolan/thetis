---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import NightSplintAdvert from "@/components/products/night-splint/NightSplintAdvert.astro";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import CourseCTA from "@/components/CTA/CourseCTA.astro";
import {
    Mail,
    Calendar,
    Clock,
    Check,
    ArrowRight,
    Target,
    Brain,
    Shield,
    Zap,
} from "lucide-react";

// Email course value propositions based on achilles-course-plan.md
const whyPersonalizedEmails = [
    {
        icon: Calendar,
        title: "Timed to Your Injury",
        description:
            "You enter your rupture date, and emails arrive exactly when you need that information. Week 4 advice comes in week 4 ‚Äî not before, not after.",
    },
    {
        icon: Target,
        title: "Right Information, Right Time",
        description:
            "Recovery is overwhelming. Instead of searching through articles, the relevant guidance comes to your inbox automatically when it matters.",
    },
    {
        icon: Shield,
        title: "Don't Miss Critical Steps",
        description:
            "Blood clot prevention in week 1, weight bearing progression in week 4, boot transition in week 10. We make sure you don't miss any crucial milestones.",
    },
    {
        icon: Brain,
        title: "Reduce Anxiety",
        description:
            "Knowing what's normal and what's urgent ‚Äî delivered just when you might start wondering. You're never left guessing.",
    },
];

const emailTimeline = [
    {
        week: "Day 0-7",
        title: "Emergency Care & Initial Assessment",
        topics: [
            "What just happened",
            "A&E expectations",
            "Blood clot prevention",
            "Choosing your boot",
        ],
    },
    {
        week: "Week 1-2",
        title: "Home Setup & Early Recovery",
        topics: [
            "Setting up your recovery station",
            "Elevation techniques",
            "Sleeping safely",
            "What's normal vs urgent",
        ],
    },
    {
        week: "Week 3-6",
        title: "First Movements",
        topics: [
            "Safe exercises",
            "Early mobility in boot",
            "Progressive weight bearing",
            "Managing daily life",
        ],
    },
    {
        week: "Week 7-10",
        title: "Final Boot Phase",
        topics: [
            "Wedge removal schedule",
            "Building confidence",
            "Preparing for transition",
            "Mental recovery",
        ],
    },
    {
        week: "Week 10-12",
        title: "Boot Transition",
        topics: [
            "First steps without boot",
            "Shoe recommendations",
            "Gait retraining",
            "Calf strengthening",
        ],
    },
    {
        week: "Week 13+",
        title: "Return to Activity",
        topics: [
            "Progressive strengthening",
            "Return to running",
            "Sport-specific training",
            "Long-term outlook",
        ],
    },
];

const comparison = [
    {
        aspect: "Access to Information",
        articles: "You search for what you need",
        emails: "Information comes to you",
    },
    {
        aspect: "Timing",
        articles: "Generic ‚Äî read anytime",
        emails: "Personalized to your recovery date",
    },
    {
        aspect: "Reminders",
        articles: "None ‚Äî you need to remember",
        emails: "Automatic ‚Äî never miss a step",
    },
    {
        aspect: "Effort Required",
        articles: "Active ‚Äî you find what you need",
        emails: "Passive ‚Äî it finds you",
    },
];
---

<Layout
    title="Free Personalized Email Course | Achilles Recovery | Thetis Medical"
    description="Free email course for Achilles rupture recovery. Personalized guidance timed to your injury date. The right information arrives exactly when you need it."
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div
                class="mx-auto px-4 pt-8 md:pt-12 pb-16 md:pb-24 max-w-4xl text-center"
            >
                <span
                    class="inline-flex items-center gap-2 bg-primary/20 dark:bg-primary/30 mb-6 px-4 py-1.5 rounded-full font-medium text-primary dark:text-primary/80 text-sm uppercase tracking-wide"
                >
                    <Mail className="w-4 h-4" />
                    100% Free
                </span>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl lg:text-6xl leading-tight"
                >
                    Recovery Guidance <HighlightedWord
                        >Delivered</HighlightedWord
                    > to You
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl leading-relaxed"
                >
                    Enter your rupture date once. Get the right information
                    delivered to your inbox at the right time. Week 4 advice
                    comes in week 4 ‚Äî automatically.
                </p>

                <div
                    class="flex flex-wrap justify-center gap-6 mb-8 text-neutral-500 dark:text-neutral-400 text-sm"
                >
                    <div class="flex items-center gap-2">
                        <Clock
                            className="w-4 h-4 text-primary dark:text-primary/80"
                        />
                        <span>6+ months of guidance</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <Calendar
                            className="w-4 h-4 text-primary dark:text-primary/80"
                        />
                        <span>Timed to your injury</span>
                    </div>
                    <div class="flex items-center gap-2">
                        <Zap
                            className="w-4 h-4 text-primary dark:text-primary/80"
                        />
                        <span>Zero effort required</span>
                    </div>
                </div>

                <a
                    href="/course"
                    class={cn(
                        buttonVariants({
                            variant: "default",
                            size: "lg",
                        }),
                        "gap-2",
                    )}
                >
                    <Mail className="w-4 h-4" />
                    Sign Up Free
                </a>
            </div>
        </ColorGradient>

        <!-- Why Personalized Emails -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-5xl">
                <div class="mb-12 text-center">
                    <p
                        class="mb-4 font-medium text-primary dark:text-primary/80 text-sm uppercase tracking-widest"
                    >
                        Why Personalized Emails?
                    </p>
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl md:text-4xl"
                    >
                        The Right Information, Right Time
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg"
                    >
                        Recovery is overwhelming enough without having to
                        remember what to search for. Let the information come to
                        you.
                    </p>
                </div>

                <div class="gap-6 grid md:grid-cols-2">
                    {
                        whyPersonalizedEmails.map((item) => {
                            const IconComponent = item.icon;
                            return (
                                <div class="group flex items-start gap-4 bg-white hover:bg-primary/5 dark:bg-neutral-800 dark:hover:bg-primary/10 hover:shadow-md p-6 border border-neutral-200 hover:border-primary/30 dark:border-neutral-700 dark:hover:border-primary/40 rounded-xl transition-all duration-300">
                                    <div class="flex justify-center items-center bg-primary/20 dark:bg-primary/30 dark:group-hover:bg-primary/40 group-hover:bg-primary/30 rounded-xl w-12 h-12 transition-colors shrink-0">
                                        <IconComponent className="w-6 h-6 text-primary dark:text-primary/80" />
                                    </div>
                                    <div>
                                        <h3 class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg">
                                            {item.title}
                                        </h3>
                                        <p class="text-neutral-600 dark:text-neutral-400 text-sm leading-relaxed">
                                            {item.description}
                                        </p>
                                    </div>
                                </div>
                            );
                        })
                    }
                </div>
            </div>
        </section>

        <!-- How It Works -->
        <section
            class="bg-gradient-to-b from-primary/10 dark:from-primary/10 to-neutral-50 dark:to-neutral-900 py-16 md:py-24"
        >
            <div class="mx-auto px-4 max-w-4xl">
                <div class="mb-12 text-center">
                    <p
                        class="mb-4 font-medium text-primary dark:text-primary/80 text-sm uppercase tracking-widest"
                    >
                        Simple Process
                    </p>
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl md:text-4xl"
                    >
                        How It Works
                    </h2>
                </div>

                <div class="gap-8 grid md:grid-cols-3">
                    <div class="relative text-center">
                        <div
                            class="flex justify-center items-center bg-primary dark:bg-primary shadow-lg mx-auto mb-4 rounded-full w-14 h-14 font-bold text-primary-foreground text-xl"
                        >
                            1
                        </div>
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                        >
                            Enter Your Date
                        </h3>
                        <p
                            class="text-neutral-600 dark:text-neutral-400 text-sm leading-relaxed"
                        >
                            Tell us when you ruptured your Achilles. Takes 30
                            seconds.
                        </p>
                        <!-- Connector line on desktop -->
                        <div
                            class="hidden md:block top-7 right-0 absolute bg-primary/30 dark:bg-primary/40 w-1/2 h-0.5 translate-x-1/2"
                        >
                        </div>
                    </div>
                    <div class="relative text-center">
                        <div
                            class="flex justify-center items-center bg-primary dark:bg-primary shadow-lg mx-auto mb-4 rounded-full w-14 h-14 font-bold text-primary-foreground text-xl"
                        >
                            2
                        </div>
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                        >
                            We Calculate Timing
                        </h3>
                        <p
                            class="text-neutral-600 dark:text-neutral-400 text-sm leading-relaxed"
                        >
                            We figure out exactly which phase of recovery you're
                            in.
                        </p>
                        <!-- Connector line on desktop -->
                        <div
                            class="hidden md:block top-7 left-0 absolute bg-primary/30 dark:bg-primary/40 w-1/2 h-0.5 -translate-x-1/2"
                        >
                        </div>
                        <div
                            class="hidden md:block top-7 right-0 absolute bg-primary/30 dark:bg-primary/40 w-1/2 h-0.5 translate-x-1/2"
                        >
                        </div>
                    </div>
                    <div class="relative text-center">
                        <div
                            class="flex justify-center items-center bg-primary dark:bg-primary shadow-lg mx-auto mb-4 rounded-full w-14 h-14 font-bold text-primary-foreground text-xl"
                        >
                            3
                        </div>
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg"
                        >
                            Emails Arrive Automatically
                        </h3>
                        <p
                            class="text-neutral-600 dark:text-neutral-400 text-sm leading-relaxed"
                        >
                            Relevant guidance arrives in your inbox at the right
                            time.
                        </p>
                        <!-- Connector line on desktop -->
                        <div
                            class="hidden md:block top-7 left-0 absolute bg-primary/30 dark:bg-primary/40 w-1/2 h-0.5 -translate-x-1/2"
                        >
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Email Timeline -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-5xl">
                <div class="mb-12 text-center">
                    <p
                        class="mb-4 font-medium text-primary dark:text-primary/80 text-sm uppercase tracking-widest"
                    >
                        Your Timeline
                    </p>
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl md:text-4xl"
                    >
                        What You'll Receive
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg"
                    >
                        Each email is timed to when you need that specific
                        information.
                    </p>
                </div>

                <div class="space-y-4">
                    {
                        emailTimeline.map((email, index) => (
                            <div class="group flex md:flex-row flex-col gap-4 bg-white hover:bg-primary/5 dark:bg-neutral-800 dark:hover:bg-primary/10 hover:shadow-md p-5 md:p-6 border border-neutral-200 hover:border-primary/30 dark:border-neutral-700 dark:hover:border-primary/40 rounded-xl transition-all duration-300 timeline-item">
                                <div class="flex items-center gap-3 md:w-28 shrink-0">
                                    <div class="md:hidden flex justify-center items-center bg-primary/20 dark:bg-primary/30 rounded-lg w-10 h-10">
                                        <Calendar className="w-5 h-5 text-primary dark:text-primary/80" />
                                    </div>
                                    <span class="font-semibold text-primary dark:text-primary/80">
                                        {email.week}
                                    </span>
                                </div>
                                <div class="flex-1">
                                    <h3 class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg">
                                        {email.title}
                                    </h3>
                                    <div class="flex flex-wrap gap-2">
                                        {email.topics.map((topic) => (
                                            <span class="bg-primary/20 dark:bg-primary/20 px-3 py-1.5 rounded-full font-medium text-primary dark:text-primary/80 text-xs">
                                                {topic}
                                            </span>
                                        ))}
                                    </div>
                                </div>
                                <div class="hidden md:flex items-center">
                                    <ArrowRight className="w-5 h-5 text-neutral-300 dark:group-hover:text-primary/80 dark:text-neutral-600 group-hover:text-primary transition-colors transition-transform group-hover:translate-x-1" />
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Comparison: Articles vs Emails -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-4xl">
                <div class="mb-12 text-center">
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                    >
                        Articles vs Email Course
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400"
                    >
                        Both are free. Here's how they differ.
                    </p>
                </div>

                <div
                    class="bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-xl overflow-hidden"
                >
                    <table class="w-full">
                        <thead>
                            <tr
                                class="border-neutral-200 dark:border-neutral-700 border-b"
                            >
                                <th
                                    class="p-4 font-semibold text-neutral-900 dark:text-neutral-100 text-left"
                                >
                                </th>
                                <th
                                    class="p-4 font-semibold text-neutral-900 dark:text-neutral-100 text-center"
                                >
                                    üìñ Articles
                                </th>
                                <th
                                    class="bg-primary/5 p-4 font-semibold text-neutral-900 dark:text-neutral-100 text-center"
                                >
                                    ‚úâÔ∏è Email Course
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            {
                                comparison.map((row, index) => (
                                    <tr
                                        class={
                                            index < comparison.length - 1
                                                ? "border-b border-neutral-200 dark:border-neutral-700"
                                                : ""
                                        }
                                    >
                                        <td class="p-4 font-medium text-neutral-700 dark:text-neutral-300 text-sm">
                                            {row.aspect}
                                        </td>
                                        <td class="p-4 text-neutral-600 dark:text-neutral-400 text-sm text-center">
                                            {row.articles}
                                        </td>
                                        <td class="bg-primary/5 p-4 text-neutral-700 dark:text-neutral-300 text-sm text-center">
                                            {row.emails}
                                        </td>
                                    </tr>
                                ))
                            }
                        </tbody>
                    </table>
                </div>

                <div class="mt-8 text-center">
                    <p
                        class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                    >
                        <strong>Both are free.</strong> Articles are always available.
                        Emails add personalized timing.
                    </p>
                    <div class="flex flex-wrap justify-center gap-4">
                        <a
                            href="/FAQs/achilles-rupture-timeline"
                            class={cn(
                                buttonVariants({
                                    variant: "outline",
                                    size: "default",
                                }),
                                "gap-2",
                            )}
                        >
                            Browse Articles
                        </a>
                        <a
                            href="/course"
                            class={cn(
                                buttonVariants({
                                    variant: "default",
                                    size: "default",
                                }),
                                "gap-2",
                            )}
                        >
                            <Mail className="w-4 h-4" />
                            Sign Up for Emails
                        </a>
                    </div>
                </div>
            </div>
        </section>

        <!-- Upgrade Options -->
        <CourseCTA lang="en" variant="full" />

        <!-- Night Splint Advert -->
        <NightSplintAdvert lang="en" />

        <!-- Final CTA -->
        <section class="bg-primary/10 dark:bg-primary/10 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-2xl text-center">
                <div
                    class="flex justify-center items-center bg-primary/20 dark:bg-primary/30 mx-auto mb-6 rounded-full w-16 h-16"
                >
                    <Mail
                        className="w-8 h-8 text-primary dark:text-primary/80"
                    />
                </div>
                <h2
                    class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-2xl md:text-3xl"
                >
                    Start Your Personalized Recovery
                </h2>
                <p class="mb-8 text-neutral-600 dark:text-neutral-400 text-lg">
                    Enter your rupture date and start receiving guidance exactly
                    when you need it. Takes 30 seconds. Completely free.
                </p>
                <a
                    href="/course"
                    class={cn(
                        buttonVariants({
                            variant: "default",
                            size: "lg",
                        }),
                        "gap-2",
                    )}
                >
                    <Mail className="w-4 h-4" />
                    Sign Up Free
                </a>
            </div>
        </section>
    </main>
</Layout>

<style>
    /* Timeline hover effects */
    :global(.timeline-item:hover) {
        @apply scale-[1.01] transition-transform duration-200 transform;
    }

    html {
        scroll-behavior: smooth;
    }
</style>

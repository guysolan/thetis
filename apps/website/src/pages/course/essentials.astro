---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import {
    Moon,
    Droplets,
    ShoppingCart,
    ExternalLink,
    BookOpen,
    GraduationCap,
    Heart,
    Check,
    ArrowRight,
    Mail,
} from "lucide-react";
import CourseBuyButton from "@/components/CourseBuyButton";
import {
    fetchCoursePrice,
    SHOPIFY_COURSE_PRODUCTS,
} from "@/lib/shopify-course-price";

// Fetch price from Shopify (default to GB, can be enhanced with country detection)
const priceData = await fetchCoursePrice(
    SHOPIFY_COURSE_PRODUCTS.ESSENTIALS_COURSE,
    "GB",
);
const formattedPrice = priceData?.formattedPrice || "£29.99";
const priceAmount = priceData?.amount || "29.99";
const currencyCode = priceData?.currencyCode || "GBP";

const features = [
    "31 easy-to-digest lessons",
    "Questions for your surgeon",
    "Physio exercises with illustrations",
    "Product recommendations",
    "Boot comparison guide (Aircast vs VACOped)",
    "Sleep and washing solutions",
    "Week-by-week recovery timeline",
    "What's normal vs what's urgent",
];

const whatYoullLearn = [
    {
        title: "Week 0: Emergency Care",
        description:
            "What just happened, A&E expectations, blood clot prevention, and choosing your walking boot.",
    },
    {
        title: "Week 1-2: Home Setup",
        description:
            "Setting up your recovery station, elevation techniques, sleeping solutions, and what's normal vs urgent.",
    },
    {
        title: "Week 3-6: First Movements",
        description:
            "Safe exercises, early mobility within your boot, and progressive weight bearing.",
    },
    {
        title: "Week 7+: Return to Activity",
        description:
            "Transitioning out of the boot, building strength, and returning to normal life.",
    },
];
---

<Layout
    title="Recovery Essentials - Complete Recovery Guide | Thetis Medical"
    description="31 lessons covering every stage of Achilles rupture recovery. Expert guidance, physio exercises, and practical tips. Start your journey with confidence."
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div class="mx-auto px-4 py-16 md:py-24 max-w-4xl text-center">
                <span
                    class="inline-flex items-center gap-2 bg-primary/10 mb-4 px-3 py-1 rounded-full font-semibold text-primary text-sm"
                >
                    <BookOpen className="w-4 h-4" />
                    31 Lessons
                </span>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl"
                >
                    <HighlightedWord>Recovery</HighlightedWord> Essentials
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl"
                >
                    Everything you need to know about Achilles rupture recovery
                    — from choosing your boot to sleeping comfortably. 31
                    structured lessons to guide you through every stage.
                </p>

                <!-- Price -->
                <div class="mb-8">
                    <span
                        class="font-bold text-neutral-900 dark:text-neutral-100 text-4xl"
                        id="course-price"
                    >
                        {formattedPrice}
                    </span>
                    <span
                        class="text-neutral-500 dark:text-neutral-400 text-lg"
                    >
                        one-time</span
                    >
                </div>

                <!-- CTA buttons -->
                <div
                    class="flex sm:flex-row flex-col justify-center items-center gap-4"
                >
                    <CourseBuyButton
                        productId={SHOPIFY_COURSE_PRODUCTS.ESSENTIALS_COURSE}
                        variant="default"
                        className="text-lg"
                        client:load
                    >
                        Add to Cart
                    </CourseBuyButton>
                    <a
                        href="/achilles-rupture-splint"
                        class={cn(
                            buttonVariants({
                                variant: "outline",
                                size: "lg",
                            }),
                            "justify-center gap-2",
                        )}
                    >
                        <Moon className="w-4 h-4" />
                        Shop Night Splint
                    </a>
                </div>
            </div>
        </ColorGradient>

        <!-- What's Included -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-4xl">
                <div class="mb-12 text-center">
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                    >
                        What's Included
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400"
                    >
                        Comprehensive coverage of your entire recovery journey.
                    </p>
                </div>

                <div class="gap-4 grid md:grid-cols-2">
                    {
                        features.map((feature) => (
                            <div class="flex items-center gap-3 bg-neutral-50 dark:bg-neutral-800 p-4 rounded-xl">
                                <div class="flex justify-center items-center bg-primary/10 rounded-full w-8 h-8 shrink-0">
                                    <Check className="w-4 h-4 text-primary" />
                                </div>
                                <span class="text-neutral-700 dark:text-neutral-300">
                                    {feature}
                                </span>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Why We're Called Thetis -->
        <section
            class="bg-gradient-to-b from-primary/5 to-transparent py-12 md:py-16"
        >
            <div class="mx-auto px-4 max-w-3xl text-center">
                <p
                    class="mb-2 font-medium text-primary text-xs uppercase tracking-widest"
                >
                    Why we're called Thetis
                </p>
                <h2
                    class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-2xl md:text-3xl"
                >
                    Named after <HighlightedWord
                        >Achilles' Mother</HighlightedWord
                    >
                </h2>
                <p
                    class="text-neutral-600 dark:text-neutral-400 text-base leading-relaxed"
                >
                    In Greek mythology, Thetis was a sea nymph who protected her
                    son Achilles. We carry that spirit forward — helping you
                    through every step of recovery.
                </p>
            </div>
        </section>

        <!-- The Sleeping Problem -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-12 md:py-16">
            <div class="mx-auto px-4 max-w-4xl">
                <div class="mb-8 text-center">
                    <h2
                        class="mb-3 font-bold text-neutral-900 dark:text-neutral-100 text-2xl md:text-3xl"
                    >
                        The Sleeping Problem Nobody Mentions
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400"
                    >
                        Both Aircast and VACOped boots are hot, heavy, and
                        uncomfortable to sleep in. But removing your boot at
                        night risks re-rupture. There's a better solution.
                    </p>
                </div>

                <div
                    class="bg-white dark:bg-neutral-800 shadow-md p-6 md:p-8 rounded-xl"
                >
                    <div class="flex md:flex-row flex-col items-center gap-6">
                        <div class="flex-1">
                            <span
                                class="inline-flex items-center bg-primary/10 mb-3 px-3 py-1 rounded-full font-semibold text-primary text-xs"
                            >
                                Recommended by Specialists
                            </span>
                            <h3
                                class="mb-3 font-bold text-neutral-900 dark:text-neutral-100 text-xl md:text-2xl"
                            >
                                Thetis Achilles Rupture Splint
                            </h3>
                            <p
                                class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                            >
                                The <strong>Thetis Night Splint</strong> is specifically
                                designed for sleeping. It's lightweight, breathable,
                                and maintains the correct plantarflexed position.
                            </p>
                            <ul class="space-y-2 mb-4">
                                <li
                                    class="flex items-start gap-2 text-neutral-600 dark:text-neutral-400 text-sm"
                                >
                                    <Moon
                                        className="flex-shrink-0 mt-0.5 w-4 h-4 text-primary"
                                    />
                                    <span
                                        ><strong>Sleep comfortably</strong> — much
                                        lighter than your walking boot</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-2 text-neutral-600 dark:text-neutral-400 text-sm"
                                >
                                    <Droplets
                                        className="flex-shrink-0 mt-0.5 w-4 h-4 text-primary"
                                    />
                                    <span
                                        ><strong>Shower safely</strong> — maintains
                                        protection while washing</span
                                    >
                                </li>
                                <li
                                    class="flex items-start gap-2 text-neutral-600 dark:text-neutral-400 text-sm"
                                >
                                    <ShoppingCart
                                        className="flex-shrink-0 mt-0.5 w-4 h-4 text-primary"
                                    />
                                    <span
                                        ><strong>Washable liner</strong> — better
                                        hygiene than boot liners</span
                                    >
                                </li>
                            </ul>
                            <a
                                href="/achilles-rupture-splint"
                                class={cn(
                                    buttonVariants({
                                        variant: "default",
                                        size: "sm",
                                    }),
                                    "gap-2",
                                )}
                            >
                                Learn More
                            </a>
                        </div>
                        <div class="flex-1 max-w-xs">
                            <img
                                src="/images/night-splint.png"
                                alt="Thetis Achilles Rupture Night Splint"
                                class="shadow-md rounded-xl"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- What You'll Learn -->
        <section class="py-12 md:py-16">
            <div class="mx-auto px-4 max-w-4xl">
                <h2
                    class="mb-8 font-bold text-neutral-900 dark:text-neutral-100 text-2xl md:text-3xl text-center"
                >
                    What You'll Learn
                </h2>
                <div class="gap-4 grid md:grid-cols-2">
                    {
                        whatYoullLearn.map((item) => (
                            <div class="bg-neutral-50 dark:bg-neutral-800 p-5 rounded-lg">
                                <h3 class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100">
                                    {item.title}
                                </h3>
                                <p class="text-neutral-600 dark:text-neutral-400 text-sm">
                                    {item.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Choosing Your Boot -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-12 md:py-16">
            <div class="mx-auto px-4 max-w-4xl">
                <h2
                    class="mb-3 font-bold text-neutral-900 dark:text-neutral-100 text-2xl md:text-3xl text-center"
                >
                    Choosing Your Walking Boot
                </h2>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-sm text-center"
                >
                    The Essentials course includes a detailed comparison of
                    Aircast and VACOped boots.
                </p>
                <div class="gap-4 grid md:grid-cols-2 mb-6">
                    <div class="bg-white dark:bg-neutral-800 p-5 rounded-lg">
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100"
                        >
                            Aircast
                        </h3>
                        <p
                            class="mb-3 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            Lightweight, affordable (~£120), uses removable
                            wedges.
                        </p>
                        <ul
                            class="space-y-1 text-neutral-600 dark:text-neutral-400 text-xs"
                        >
                            <li>✓ Budget-friendly</li>
                            <li>✓ Easy to adjust</li>
                            <li>✗ Not waterproof</li>
                        </ul>
                    </div>
                    <div class="bg-white dark:bg-neutral-800 p-5 rounded-lg">
                        <h3
                            class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100"
                        >
                            VACOped
                        </h3>
                        <p
                            class="mb-3 text-neutral-600 dark:text-neutral-400 text-sm"
                        >
                            Premium (~£300), hinged mechanism with adjustable
                            range.
                        </p>
                        <ul
                            class="space-y-1 text-neutral-600 dark:text-neutral-400 text-xs"
                        >
                            <li>✓ Better ankle position</li>
                            <li>✓ May preserve muscle better</li>
                            <li>✓ Waterproof (with setup)</li>
                        </ul>
                    </div>
                </div>
                <p
                    class="text-neutral-600 dark:text-neutral-400 text-sm text-center"
                >
                    <strong>Pro tip:</strong> Whichever boot you use, the Thetis
                    night splint makes sleeping and showering much easier.
                </p>
            </div>
        </section>

        <!-- Not Ready? Try Free -->
        <section class="py-12 md:py-16">
            <div class="mx-auto px-4 max-w-2xl text-center">
                <div class="bg-neutral-50 dark:bg-neutral-800 p-6 rounded-xl">
                    <Mail className="mx-auto mb-3 w-8 h-8 text-primary" />
                    <h2
                        class="mb-3 font-bold text-neutral-900 dark:text-neutral-100 text-xl"
                    >
                        Not Ready to Commit?
                    </h2>
                    <p
                        class="mb-4 text-neutral-600 dark:text-neutral-400 text-sm"
                    >
                        Start with our free email course. Get weekly recovery
                        tips delivered to your inbox.
                    </p>
                    <a
                        href="/course/emails"
                        class={cn(
                            buttonVariants({
                                variant: "outline",
                                size: "sm",
                            }),
                            "gap-2",
                        )}
                    >
                        <Mail className="w-4 h-4" />
                        Try Free Course First
                    </a>
                </div>
            </div>
        </section>

        <!-- Final CTA -->
        <section class="bg-primary/5 py-12 md:py-16">
            <div class="mx-auto px-4 max-w-2xl text-center">
                <h2
                    class="mb-3 font-bold text-neutral-900 dark:text-neutral-100 text-2xl md:text-3xl"
                >
                    Ready to Start Your Recovery?
                </h2>
                <p class="mb-4 text-neutral-600 dark:text-neutral-400">
                    Access all 31 lessons and learn everything you need for a
                    successful recovery.
                </p>
                <p
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                    id="course-price-bottom"
                >
                    {formattedPrice}
                    <span class="font-normal text-neutral-500 text-lg"
                        >one-time</span
                    >
                </p>
                <div
                    class="flex sm:flex-row flex-col justify-center items-center gap-4"
                >
                    <CourseBuyButton
                        productId={SHOPIFY_COURSE_PRODUCTS.ESSENTIALS_COURSE}
                        variant="link"
                        className="text-lg"
                        client:load
                    >
                        Add to Cart
                    </CourseBuyButton>
                    <a
                        href="/buy-now"
                        class={cn(
                            buttonVariants({
                                variant: "outline",
                                size: "lg",
                            }),
                            "justify-center gap-2",
                        )}
                    >
                        <ShoppingCart className="w-4 h-4" />
                        Shop Recovery Products
                    </a>
                </div>
            </div>
        </section>
    </main>

    <!-- Client-side price update script -->
    <script
        define:vars={{ productId: SHOPIFY_COURSE_PRODUCTS.ESSENTIALS_COURSE }}
    >
        (async function () {
            try {
                // Detect country
                let countryCode = "GB";
                try {
                    const geoResponse = await fetch("https://ipapi.co/json/");
                    if (geoResponse.ok) {
                        const geoData = await geoResponse.json();
                        countryCode = geoData.country_code || "GB";
                    }
                } catch (e) {
                    console.error("Failed to detect country:", e);
                }

                // Fetch price for detected country
                const productGid = `gid://shopify/Product/${productId}`;
                const query = `
                    query getProductPrice($country: CountryCode) @inContext(country: $country) {
                        product(id: "${productGid}") {
                            variants(first: 1) {
                                edges {
                                    node {
                                        price {
                                            amount
                                            currencyCode
                                        }
                                    }
                                }
                            }
                        }
                    }
                `;

                const response = await fetch(
                    "https://shop.thetismedical.com/api/2024-01/graphql.json",
                    {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json",
                            "X-Shopify-Storefront-Access-Token":
                                "784883c28d6484a8804b44ae00adfb99",
                        },
                        body: JSON.stringify({
                            query,
                            variables: { country: countryCode },
                        }),
                    },
                );

                if (response.ok) {
                    const data = await response.json();
                    const variant =
                        data?.data?.product?.variants?.edges?.[0]?.node;
                    if (variant?.price) {
                        const amount = parseFloat(variant.price.amount);
                        const currencyCode = variant.price.currencyCode;

                        const formatter = new Intl.NumberFormat(
                            currencyCode === "GBP"
                                ? "en-GB"
                                : currencyCode === "USD"
                                  ? "en-US"
                                  : "en-GB",
                            {
                                style: "currency",
                                currency: currencyCode,
                                minimumFractionDigits: 2,
                                maximumFractionDigits: 2,
                            },
                        );

                        const formattedPrice = formatter.format(amount);

                        // Update price displays
                        const priceElements = document.querySelectorAll(
                            "#course-price, #course-price-bottom",
                        );
                        priceElements.forEach((el) => {
                            if (el) {
                                el.textContent = formattedPrice;
                            }
                        });
                    }
                }
            } catch (error) {
                console.error("Failed to update price:", error);
            }
        })();
    </script>
</Layout>

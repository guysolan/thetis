---
import Layout from "@/layouts/Layout.astro";
import ColorGradient from "@/components/ColorGradient.astro";
import HighlightedWord from "@/components/HighlightedWord";
import { buttonVariants } from "@/components/ui/button";
import { cn } from "@/lib/utils";
import StickyAddToCart from "@/components/StickyAddToCart";
import {
    Moon,
    Droplets,
    ShoppingCart,
    ExternalLink,
    BookOpen,
    GraduationCap,
    Heart,
    Check,
    ArrowRight,
    Mail,
} from "lucide-react";
import CourseBuyButton from "@/components/CourseBuyButton.astro";
import {
    fetchCoursePrice,
    SHOPIFY_COURSE_PRODUCTS,
} from "@/lib/shopify-course-price";

// Fetch price from Shopify (default to GB, can be enhanced with country detection)
const priceData = await fetchCoursePrice(
    SHOPIFY_COURSE_PRODUCTS.ESSENTIALS_COURSE,
    "GB",
);
const formattedPrice = priceData?.formattedPrice || "£29.99";
const priceAmount = priceData?.amount || "29.99";
const currencyCode = priceData?.currencyCode || "GBP";

const features = [
    "31 easy-to-digest lessons",
    "Questions for your surgeon",
    "Physio exercises with illustrations",
    "Product recommendations",
    "Boot comparison guide (Aircast vs VACOped)",
    "Sleep and washing solutions",
    "Week-by-week recovery timeline",
    "What's normal vs what's urgent",
];

const whatYoullLearn = [
    {
        title: "Week 0: Emergency Care",
        description:
            "What just happened, A&E expectations, blood clot prevention, and choosing your walking boot.",
    },
    {
        title: "Week 1-2: Home Setup",
        description:
            "Setting up your recovery station, elevation techniques, sleeping solutions, and what's normal vs urgent.",
    },
    {
        title: "Week 3-6: First Movements",
        description:
            "Safe exercises, early mobility within your boot, and progressive weight bearing.",
    },
    {
        title: "Week 7+: Return to Activity",
        description:
            "Transitioning out of the boot, building strength, and returning to normal life.",
    },
];
---

<Layout
    title="Recovery Essentials - Complete Recovery Guide | Thetis Medical"
    description="31 lessons covering every stage of Achilles rupture recovery. Expert guidance, physio exercises, and practical tips. Start your journey with confidence."
    image="https://thetismedical.com/images/night-splint.png"
    lang="en"
>
    <main>
        <ColorGradient>
            <div class="mx-auto px-4 py-16 md:py-24 max-w-4xl text-center">
                <span
                    class="inline-flex items-center gap-2 bg-primary/10 mb-4 px-3 py-1 rounded-full font-semibold text-primary text-sm"
                >
                    <BookOpen className="w-4 h-4" />
                    31 Lessons
                </span>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-5xl"
                >
                    <HighlightedWord>Recovery</HighlightedWord> Essentials
                </h1>
                <p
                    class="mx-auto mb-8 max-w-2xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl"
                >
                    Everything you need to know about Achilles rupture recovery
                    — from choosing your boot to sleeping comfortably. 31
                    structured lessons to guide you through every stage.
                </p>

                <!-- Price -->
                <div class="mb-8">
                    <span
                        class="font-bold text-neutral-900 dark:text-neutral-100 text-4xl"
                        id="course-price"
                    >
                        {formattedPrice}
                    </span>
                    <span
                        class="text-neutral-500 dark:text-neutral-400 text-lg"
                    >
                        one-time</span
                    >
                </div>

                <!-- CTA buttons -->
                <div class="flex sm:flex-row flex-col justify-center gap-4">
                    <CourseBuyButton
                        productId={SHOPIFY_COURSE_PRODUCTS.ESSENTIALS_COURSE}
                    />
                    <a
                        href="/achilles-rupture-splint"
                        class={cn(
                            buttonVariants({
                                variant: "outline",
                                size: "lg",
                            }),
                            "justify-center gap-2",
                        )}
                    >
                        <Moon className="w-4 h-4" />
                        Shop Night Splint
                    </a>
                </div>
            </div>
        </ColorGradient>

        <!-- What's Included -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-4xl">
                <div class="mb-12 text-center">
                    <h2
                        class="mb-4 font-bold text-neutral-900 dark:text-neutral-100 text-3xl"
                    >
                        What's Included
                    </h2>
                    <p
                        class="mx-auto max-w-2xl text-neutral-600 dark:text-neutral-400"
                    >
                        Comprehensive coverage of your entire recovery journey.
                    </p>
                </div>

                <div class="gap-4 grid md:grid-cols-2">
                    {
                        features.map((feature) => (
                            <div class="flex items-center gap-3 bg-neutral-50 dark:bg-neutral-800 p-4 rounded-xl">
                                <div class="flex justify-center items-center bg-primary/10 rounded-full w-8 h-8 shrink-0">
                                    <Check className="w-4 h-4 text-primary" />
                                </div>

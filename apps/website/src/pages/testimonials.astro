---
import Layout from '../layouts/Layout.astro'
import { testimonials } from '../data/testimonials'
import { Card, CardContent, CardFooter, CardHeader, CardTitle } from '../components/ui/card.tsx'
import { Star } from 'lucide-astro';

---

<Layout
	title='Thetis Medical Testimonials'
	description='Testimonials and reviews of the Thetis Medical Achilles Rupture Night Splints.'
	image='https://thetismedical.com/images/dotty-logo'>
	<section class='px-4 my-8 flex flex-col w-full max-w-[900px] mx-auto'>
		<h1 class="text-slate-900 text-2xl mb-8">Testimonials</h1>

		<div class='flex flex-col md:flex-row gap-x-8'>
			<div class='flex-grow'>
				<ul class='w-full flex flex-col gap-6'>
					{
						testimonials.map((product) => {
							return (
								<li>
									<h3 class='text-xl font-semibold text-slate-800 mb-4'>{product.name}</h3>
									<ul class='flex flex-col gap-4'>
										{product.testimonials.map((t) => {
											return (
												<li>
													<Card>
														<CardHeader>
															<CardTitle className='text-lg text-slate-800'>
																{t.author}
															</CardTitle>
															<p class="text-md text-slate-800 font-medium">{t.details}</p>
														</CardHeader>
														<CardContent className='text-md text-slate-950 font-normal'>
															{t.quote}
														</CardContent>
													</Card>
												</li>
											)
										})}
									</ul>

									<ul class="flex flex-col gap-4">
                                     <h4 class={`mt-8 text-lg slate-700 font-semibold ${!product?.reviews?.length&&'hidden'}`}>Reviews and Ratings</h4>
										{product.reviews?.map((r) => {
											return (
												<li>
                                                    
													<Card>
														<CardHeader>
															<CardTitle className='text-lg text-slate-800'>
																{r.title}
															</CardTitle>
															<p>{r.date}</p>
															<div class="flex flex-row flex-gap-1">
																<Star class="fill-amber-300 stroke-amber-500"/>
																<Star class="fill-amber-300 stroke-amber-500"/>
																<Star class="fill-amber-300 stroke-amber-500"/>
																<Star class="fill-amber-300 stroke-amber-500"/>
																<Star class="fill-amber-300 stroke-amber-500"/>
															</div>
															<p class="text-md text-slate-800 font-semibold">{r.rating}</p>

															

														</CardHeader>
														<CardContent className='text-md text-slate-950 font-normal'>
															<p>{r.body}</p>
														</CardContent>
														<CardFooter className="capitalize">{r.author}</CardFooter>
													</Card>
												</li>
											)
										})}
									</ul>
								</li>
							)
						})
					}
				</ul>
			</div>
		</div>
	</section>
</Layout>

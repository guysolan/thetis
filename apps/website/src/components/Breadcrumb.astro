---
import {
    Breadcrumb,
    BreadcrumbItem,
    BreadcrumbLink,
    BreadcrumbList,
    BreadcrumbPage,
    BreadcrumbSeparator,
} from "@thetis/ui/breadcrumb";
import { ChevronRight, Home } from "lucide-react";

interface Props {
    items: Array<{
        label: string;
        href?: string;
    }>;
}

const { items } = Astro.props;
---

<Breadcrumb class="mb-4">
    <BreadcrumbList>
        <BreadcrumbItem>
            <BreadcrumbLink href="/">
                <Home className="w-4 h-4" />
            </BreadcrumbLink>
        </BreadcrumbItem>
        {items.map((item, index) => (
            <>
                <BreadcrumbSeparator>
                    <ChevronRight className="w-4 h-4" />
                </BreadcrumbSeparator>
                <BreadcrumbItem>
                    {index === items.length - 1 || !item.href
                        ? (
                            <BreadcrumbPage>{item.label}</BreadcrumbPage>
                        )
                        : (
                            <BreadcrumbLink href={item.href}>
                                {item.label}
                            </BreadcrumbLink>
                        )}
                </BreadcrumbItem>
            </>
        ))}
    </BreadcrumbList>
</Breadcrumb>


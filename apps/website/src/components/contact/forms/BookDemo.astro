---
import Label from "@/components/form/Label.astro";
import Input from "@/components/form/Input.astro";
import TextArea from "../../form/TextArea.astro";
import FormWrap from "../FormWrap.astro";
import OptOut from "../../form/OptOut.astro";
---

<FormWrap formId="mkgbgaoj">
    <div class="space-y-8 w-full">
        <h2
            class="font-semibold text-neutral-950 text-2xl md:text-3xl leading-[105%]"
        >
            Book a Product Demo
        </h2>
        <div class="space-y-4">
            <p class="text-gray-800 text-lg leading-relaxed">
                Experience our Achilles Rupture Splint in person. Our
                representative will visit your practice to demonstrate the
                product's features and benefits, helping you make an informed
                decision for your patients.
            </p>
        </div>

        <div class="space-y-6">
            <div class="form-group">
                <Label labelFor="email">Email Address</Label>
                <Input name="email" type="email" required={true} />
            </div>

            <div class="form-group">
                <Label labelFor="address">Practice Address</Label>
                <TextArea
                    name="address"
                    rows={3}
                    required={true}
                    placeholder="Please provide your complete practice address"
                />
            </div>

            <div class="form-group">
                <Label labelFor="preferred_timing">Preferred Timing</Label>
                <TextArea
                    name="preferred_timing"
                    rows={2}
                    required={true}
                    placeholder="Please indicate your preferred timing (e.g., Wednesday morning, Thursday afternoon, etc.)"
                />
            </div>

            <button
                type="submit"
                class="bg-primary hover:bg-primary/90 hover:shadow-md px-8 py-4 rounded-lg w-full md:w-auto font-medium text-white transition-all"
            >
                Schedule Demo
            </button>
        </div>
    </div>
</FormWrap>

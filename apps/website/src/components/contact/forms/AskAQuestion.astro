---
import { inputStyle } from '@/components/form/Input.astro';
---

<form
    autocomplete="on"
    action="https://formspree.io/f/mdobaqwr"
    method="POST"
    class="flex-grow border-neutral-300 bg-white/80 shadow-lg hover:shadow-xl backdrop-blur-sm p-12 border rounded-2xl w-full transition-all"
>
    <div class="space-y-8 w-full">
        <h2 class="font-semibold text-2xl text-neutral-950 md:text-3xl leading-[105%]">Ask a Question</h2>
        <p class="text-gray-800 text-lg leading-relaxed">
            Have questions about our products? We're here to help.
        </p>
    
        <div class="space-y-6">
            <div class="form-group">
                <label for="name" class="block mb-2 font-medium text-sm">Name</label>
                <input
                    required
                    id="name"
                    name="name"
                    type="text"
                    class={`${inputStyle} w-full rounded-lg bg-white/90`}
                />
            </div>

            <div class="form-group">
                <label for="email" class="block mb-2 font-medium text-sm">Email</label>
                <input
                    required
                    id="email"
                    name="email"
                    type="email"
                    class={`${inputStyle} w-full rounded-lg bg-white/90`}
                />
            </div>
        
            <div class="form-group">
                <label for="message" class="block mb-2 font-medium text-sm">Message</label>
                <textarea
                    id="message"
                    name="message"
                    rows="4"
                    maxlength="1000"
                    class={`${inputStyle} w-full rounded-lg resize-none bg-white/90`}
                ></textarea>
            </div>

            <div class="flex items-center gap-2">
                <input
                    class="border-gray-300 rounded w-4 h-4"
                    id="opt-out"
                    name="opt-out"
                    type="checkbox"
                />
                <label for="opt-out" class="text-base text-gray-600">Opt out of further communications.</label>
            </div>

            <button
                type="submit"
                class="bg-primary hover:bg-primary/90 hover:shadow-md px-8 py-4 rounded-lg w-full md:w-auto font-medium text-white transition-all"
            >
                Send Message
            </button>
        </div>
    </div>
</form>
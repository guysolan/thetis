---
import { Button, buttonVariants } from "@/components/ui/button";
import Slide from "@/components/Slide.astro";
import { cn } from "@/lib/utils";
import { Input } from "@thetis/ui/input";
interface Props {
  title: string;
  paragraph: string;
}

const { title, paragraph }: Props = Astro.props;
---

<Slide 
  background="green" 
  className="relative shadow-lg hover:shadow-xl mx-auto rounded-[2rem] max-w-screen-lg transition-shadow duration-300 overflow-hidden group"
>
    <!-- Lighter gradient background with texture -->
    <div class="absolute inset-0 bg-gradient-to-br from-primary/50 via-primary/70 to-primary/40"></div>
    <div class="absolute inset-0 bg-[url('/noise.png')] opacity-5 mix-blend-overlay"></div>

    <form
        autocomplete="on"
        action="https://formspree.io/f/xbjvlval"
        method="POST"
        class="relative z-10 flex flex-col justify-center items-center space-y-8 my-8 w-full"
    >
        <div class="group-hover:scale-105 flex flex-col justify-center items-center space-y-3 w-full transition-all duration-300">
            <h2 class="group-hover:text-white font-semibold text-3xl text-white/95 md:text-4xl">{title}</h2>
            <p class="text-lg text-slate-800 md:text-xl">{paragraph}</p>
        </div>

        <div class="group-hover:scale-110 flex gap-x-3 w-full max-w-sm transition-all duration-300">
            <Input 
                type="email"
                name="email"
                className='h-14'
                placeholder="Enter your email"
            />
            <Button
                type="submit"
                value="send"
                className="h-14 transition-all duration-300"
            >
                Subscribe <i data-lucide-name="arrow-right"></i>
            </Button>
        </div>
    </form>
</Slide>

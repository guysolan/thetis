---
import { buttonVariants } from '../ui/button'
import { cn } from '../../lib/utils'
---

<form
    autocomplete="on"
    action="https://formspree.io/f/xbjvlval"
    method="POST"
    class="flex flex-col justify-center items-center mt-4 w-full max-w-sm"
>
    <input type="hidden" name="_subject" value="Footer newsletter signup" />
    <input type="hidden" name="source" value="footer_subscribe" />
    <div class="flex flex-col gap-2 w-full">
        <input
            class="border-2 border-gray-200 bg-black px-2 py-2 rounded-lg w-full h-10 lg:h-12 font-light text-sm text-white placeholder:text-gray-400"
            required
            name="email"
            type="email"
            placeholder="Email"
            autocomplete="email"
        />
        <input
            class="border-2 border-gray-200 bg-black px-2 py-2 rounded-lg w-full h-10 lg:h-12 font-light text-sm text-white placeholder:text-gray-400"
            name="phone"
            type="tel"
            placeholder="Phone (optional, for SMS tips)"
            autocomplete="tel"
        />
    </div>
    <button
        type="submit"
        value="send"
        class={cn(
            buttonVariants({ size: 'sm' }),
            'mt-3 w-full h-10 lg:h-12'
        )}
    >
        Subscribe
    </button>
</form>

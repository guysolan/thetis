---
const reviews = { number: 166, average: 4.5 };
---
<div class="flex flex-row flex-wrap justify-start items-start gap-x-4 gap-y-2 text-lg">
  <!-- Remove w-full -->
  <div class="flex items-center">
    <p class="font-semibold">{reviews.average}</p>
    <div class="w-[100px] lg:w-[130px]">
      <img src="/images/4.7-Stars.svg" alt="4.5 Stars" />
    </div>
  </div>
  <p class="text-gray-600">{reviews?.number} ratings</p>
</div>

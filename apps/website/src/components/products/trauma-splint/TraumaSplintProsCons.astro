---
import ProsConsSection from "@/components/pros-cons/ProsConsSection.astro";
---

<div class="mx-auto lg:py-16 space-8">
    <div class="lg:gap-12 space-y-8 lg:grid lg:grid-cols-2">
        <!-- Problem Section -->
        <ProsConsSection 
            type="negative"
            title="The Problem with Plaster"
            description="Traditional plaster of paris casts are heavy, rigid, and can cause significant discomfort during the 10-week rehabilitation period. They cannot be removed and pose hygiene challenges."
            items={[
                "Slow to Apply",
                "Training Required",
                "Must remote to scan",
                "Prone to Damage"
            ]}
        />

        <!-- Solution Section -->
        <ProsConsSection 
            type="positive"
            title="Our Solution"
            description="A revolutionary lightweight, comfort-focused splint that makes recovery more bearable."
            items={[
                "Quick to Apply",
                "No Training Required",
                "Removable for Hygiene",
                "Durable"
            ]}
        />
    </div>
</div>
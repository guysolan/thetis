---
import { buttonVariants } from "@/components/ui/button";
import { cn } from '@thetis/ui/cn';
import HighlightedWord from '../../HighlightedWord';
import BulkOrders from '../../buy-button/BulkOrders';
import FreeAndSecure from '../../buy-button/FreeAndSecure';
---

<section class="bg-gradient-to-b from-primary/20 to-white mt-0 pt-16 lg:pt-32 pb-16 hero-section">
    <div class="mx-auto px-4 container">
        <h1 class="mb-6 lg:px-24 font-semibold text-4xl text-center text-gray-900 md:text-5xl">
            The <HighlightedWord>Modern</HighlightedWord> Solution for Achilles Tendon <HighlightedWord>Rupture</HighlightedWord>
        </h1>
        <p class="mx-auto mb-8 max-w-3xl text-center text-gray-700 text-xl">
            A convenient splint for suspected Achilles rupture, designed for immediate application in A&E/ER. Maintains optimal foot position until specialist consultation.
        </p>

        <div class="flex lg:flex-row flex-col gap-4 lg:gap-8 my-2">
            <iframe
                class="group-hover:scale-[102%] relative shadow-lg group-hover:shadow-xl rounded-lg w-full lg:max-w-[45vw] h-full transition-all duration-300 aspect-video"
                title="Trauma-Splint-Application"
                src="https://www.youtube.com/embed/t-MAXbiqQkU"
                allowfullscreen>
            </iframe>

            <div class="space-y-6 w-full text-left">
                <div class="space-y-4">
                    <h2 class="font-semibold text-2xl">Available to Medical Professionals</h2>
                    <div class="flex flex-col gap-2">
                        <div class="flex items-center gap-2">
                            <span class="text-neutral-700 dark:text-neutral-300">&#10003;</span>
                            <span>No Training Required</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-neutral-700 dark:text-neutral-300">&#10003;</span>
                            <span>Immediate Application</span>
                        </div>
                        <div class="flex items-center gap-2">
                            <span class="text-neutral-700 dark:text-neutral-300">&#10003;</span>
                            <span>NHS Approved</span>
                        </div>
                    </div>
                </div>

                <div class="flex flex-col gap-8">
                    <div class="flex sm:flex-row lg:flex-row flex-col gap-4">
                        <a
                            href="/order-wholesale"
                            class={cn(buttonVariants({ variant: "default", size: "lg" }), "w-full sm:w-auto")}
                        >Order Now</a>
                    </div>
                    <FreeAndSecure />
                    <BulkOrders />
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    .animate-fade-in-up {
        animation: fadeInUp 0.6s ease-out forwards;
        opacity: 0;
    }
</style>
---
import HighlightedWord from '../../HighlightedWord';
import BulkOrders from '../../buy-button/BulkOrders';
import FreeAndSecure from '../../buy-button/FreeAndSecure';
import BuyButtonVariants from '../buy-button/BuyButtonVariants.tsx';
import { Image } from 'astro:assets';
import ColorGradient from '@/components/ColorGradient.astro';
import nightSplint from "@/components/products/images/night-splint/night_splint_bed_top_square.jpg";

---

<ColorGradient>
    <div class="mx-auto px-4 max-w-7xl text-center">
        <h1 class="mx-w-4xl mb-6 font-semibold text-4xl text-gray-900 md:text-5xl leading-[105%] md:leading-[120%]">
            The <HighlightedWord>Only</HighlightedWord> Night Splint for Achilles Tendon <HighlightedWord>Rupture</HighlightedWord>
        </h1>
        <p class="mx-auto mb-8 max-w-3xl text-gray-700 text-xl">
            Finally, a comfortable solution for night-time recovery. Designed alongside surgeons to protect your healing Achilles while you rest.
        </p>
           <div class="flex lg:flex-row flex-col gap-4 lg:gap-8 my-2">
          <Image
            height={1000}
            width={666}
            class="group-hover:scale-[102%] relative shadow-lg group-hover:shadow-xl rounded-lg w-full lg:max-w-[45vw] h-full max-h-[100vw] transition-all duration-300 object-cover"
            src={nightSplint}
            alt="Night Splint Render"
            
          />

      <div class="space-y-8 w-full text-left">
        <BuyButtonVariants client:load />
        <div class="flex flex-col gap-8">
          <FreeAndSecure />
          <BulkOrders  />
        </div>
      </div>
    </div>
    </div>
    </ColorGradient>
---
import HighlightedWord from "@/components/HighlightedWord.tsx";
---

<style>
    .feature-card {
        border-color: transparent;
        transition: all 0.5s ease-in-out;
    }

    .feature-card.highlighted {
        border-color: hsl(161, 60%, 40%);
    }
    .feature-card.highlighted svg {
        transition: all 0.5s ease-in-out;
        scale: 1.1;
    }
</style>

<section class="py-16">

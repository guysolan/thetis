                </p>
            </div>
        </div>
    </div>
</section>

<script>
    function highlightNextCard() {
        const cards = document.querySelectorAll(".feature-card");
        const currentIndex = Array.from(cards).findIndex((card) =>
            card.classList.contains("highlighted"),
        );

        // Remove highlight from current card
        if (currentIndex !== -1) {
            cards[currentIndex].classList.remove("highlighted");
        }

        // Add highlight to next card
        const nextIndex = (currentIndex + 1) % cards.length;
        cards[nextIndex].classList.add("highlighted");
    }

    // Start with first card highlighted
    const firstCard = document.querySelector(".feature-card");
    if (firstCard) {
        firstCard.classList.add("highlighted");
    }

    // Change highlight every 3 seconds
    setInterval(highlightNextCard, 1000);
</script>

---
import { buttonVariants } from "../../../components/ui/button";
import PriceDisplay from "@/components/PriceDisplay";

const { buttonText, buttonHref, secondaryButtonText, secondaryButtonHref } =
    Astro.props;
---

<div
    class="flex flex-col items-center gap-3 bg-primary/10 shadow-lg mx-auto my-8 px-8 py-8 border border-primary/30 rounded-xl max-w-2xl text-center"
>
    <div class="mb-1 font-semibold text-2xl md:text-3xl">
        <slot name="title" />
    </div>
    <div class="mb-2 text-gray-800 dark:text-gray-200 text-lg">
        <slot name="body" />
    </div>
    <div class="flex justify-center mb-2">
        <PriceDisplay size="lg" client:load />
    </div>
    <div class="flex sm:flex-row flex-col justify-center gap-2 w-full">
        <a
            href={buttonHref}
            class={buttonVariants({ variant: "default", size: "lg" })}
        >
            {buttonText}
        </a>
        {
            secondaryButtonText && secondaryButtonHref && (
                <a
                    href={secondaryButtonHref}
                    class={buttonVariants({ variant: "outline", size: "lg" })}
                >
                    {secondaryButtonText}
                </a>
            )
        }
    </div>
</div>

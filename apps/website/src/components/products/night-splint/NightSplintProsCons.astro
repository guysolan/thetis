---
import ProsConsSection from "@/components/pros-cons/ProsConsSection.astro";
---

<div class="mx-auto px-4 py-16">
    <div class="flex md:flex-row flex-col gap-8 lg:gap-16 lg:px-8">
        <!-- Problem Section -->
        <ProsConsSection 
            type="negative"
            title="Problems with the Boot"
            description="Currently, patients wear a large, outdoor, orthopaedic boot, day and night, for the 10 week rehabilitation. This like wearing hiking boots for 10 weeks, and sleeping in them..."
            items={[
                "Hot & Sweaty",
                "Collects Dirt & Debris",
                "Uncomfortable in Bed",
                "Bulky & Heavy"
            ]}
        />

        <!-- Solution Section -->
        <ProsConsSection 
            type="positive"
            title="Our Solution"
            description="A lightweight, comfort-focused splint designed for night-time wear. Its breathable design and anatomical shape ensures comfort while maintaining proper foot position. Perfect for sleeping and resting during your recovery."
            items={[
                "Breathable & Cool",
                "Anatomically Contoured",
                "Ultra-Lightweight",
                "Slim & Comfortable"
            ]}
        />
    </div>
</div>
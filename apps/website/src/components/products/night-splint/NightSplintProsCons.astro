---
import ProsConsSection from "@/components/pros-cons/ProsConsSection.astro";
---

<div class="mx-auto px-4 py-16">
    <div class="lg:gap-12 space-y-12 lg:grid lg:grid-cols-2">
        <!-- Problem Section -->
        <ProsConsSection 
            type="negative"
            title="The Problem with Boot"
            description="Currently, patients wear a large, outdoor, orthopaedic boot, day and night, for the 10 week rehabilitation. This is analogous to wearing hiking boots for 10 weeks, and sleeping in them."
            items={[
                "Hot & Sweaty",
                "Collects Dirt & Debris",
                "Uncomfortable in Bed",
                "Bulky & Heavy"
            ]}
        />

        <!-- Solution Section -->
        <ProsConsSection 
            type="positive"
            title="Our Solution"
            description="A revolutionary lightweight, comfort-focused splint that makes recovery more bearable."
            items={[
                "Breathable & Cool",
                "Anatomically Contoured",
                "Ultra-Lightweight",
                "Slim & Comfortable"
            ]}
        />
    </div>
</div>
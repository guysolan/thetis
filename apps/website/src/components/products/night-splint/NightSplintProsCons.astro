---
import ProsConsSection from "@/components/pros-cons/ProsConsSection.astro";
---

<div class="mx-auto px-4 py-16 max-w-7xl">
    <div class="flex md:flex-row flex-col gap-8 lg:gap-16 lg:px-8">
        <ProsConsSection
            type="positive"
            title="Better Sleep"
            description="The splint's lightweight design and breathable materials make it much more comfortable than sleeping in a boot."
            items={[
                "Lightweight & Cool",
                "Easy to Put On",
                "Comfortable All Night",
                "No More Boot Discomfort",
            ]}
        />

        <ProsConsSection
            type="positive"
            title="Proper Healing"
            description="Maintains the correct foot position while you sleep, supporting your Achilles recovery journey."
            items={[
                "Optimal Foot Position",
                "Secure Support",
                "Doctor-Approved Design",
                "Perfect for Recovery",
            ]}
        />
    </div>
</div>

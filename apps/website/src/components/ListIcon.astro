---
import { CheckCircle, MinusCircle, Info, CircleDot } from "lucide-astro";

interface Props {
  type?: "positive" | "negative" | "neutral" | "info";
}

const { type = "positive" } = Astro.props;

const iconMap = {
  positive: {
    icon: CheckCircle,
    color: "text-green-400",
    label: "Positive indicator",
  },
  negative: {
    icon: MinusCircle,
    color: "text-red-400",
    label: "Negative indicator",
  },
  neutral: {
    icon: CircleDot,
    color: "text-gray-400",
    label: "Neutral indicator",
  },
  info: {
    icon: Info,
    color: "text-blue-400",
    label: "Information indicator",
  },
};

const { icon: Icon, color, label } = iconMap[type];
---

<li class="flex items-center gap-2 min-h-12 text-lg">
  <Icon
    size={28}
    strokeWidth={3.5}
    class={`flex-shrink-0 drop-shadow-md animate-fade-in-up ${color} animate-appear`}
    aria-label={label}
  />
  <span><slot /></span>
</li>

<style>
  :global(svg) {
    stroke-linecap: round;
    stroke-linejoin: round;
  }

  @keyframes appear {
    from {
      opacity: 0;
      transform: scale(0.8);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  :global(.animate-appear) {
    animation: appear 0.2s ease-out forwards;
  }
</style>
---
import { inputStyle } from './Input.astro'
import { cn } from '../../lib/utils'

interface Props {
    id?: string;
    name: string;
    required?: boolean;
    placeholder?: string;
    rows?: number;
    maxlength?: number;
}

const { id, name, required, placeholder }: Props = Astro.props;
---

<textarea
    id={id??name}
    name={name}
    rows="4"
    required={required}
    class={cn(inputStyle, 'resize-none')}
    placeholder={placeholder}></textarea>
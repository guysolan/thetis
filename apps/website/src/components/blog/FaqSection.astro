---
interface Props {
    title: string;
    links: Array<{
        href: string;
        text: string;
    }>;
    readMoreLink: string;
}

const { title, links, readMoreLink } = Astro.props;
import SlideTitle from '../SlideTitle.astro';
import { buttonVariants } from '@/components/ui/button';
import { cn } from '@/lib/utils';
import { ArrowRight } from 'lucide-astro';
---

<section class="border-gray-100 bg-white shadow-sm hover:shadow-lg p-6 md:p-8 border rounded-xl transition-all duration-300 group">
    <SlideTitle title={title} />
    <div class="mt-8">
        <ul class="space-y-4 mb-8">
            {links.map(link => (
                <li class="group/item">
                    <a 
                        href={link.href} 
                        class="flex items-center gap-3 hover:bg-gray-50 p-3 rounded-lg font-medium text-gray-700 text-lg hover:text-primary transition-all duration-200"
                    >
                        <ArrowRight
                        size={20} 
                            class="group-hover/item:text-primary text-primary/60 transition-all duration-200" 
                        />
                        <span class="text-lg leading-relaxed">{link.text}</span>
                    </a>
                </li>
            ))}
        </ul>
        <a 
            href={readMoreLink}
            class={cn(
                buttonVariants({ variant: "outline", size: "lg" }), 
                "w-full sm:w-auto bg-white hover:bg-primary hover:text-white border-primary/20 text-primary transition-all duration-300 font-medium"
            )}
        >
            Read Full Article
            <ArrowRight class="ml-2 w-4 h-4" />
        </a>
    </div>
</section>
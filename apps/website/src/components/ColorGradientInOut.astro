---
import { cn } from "@/lib/utils";

const { className, size = "md" } = Astro.props;
---

<section>
   <div
      class={cn(
         "bg-gradient-to-t from-primary/10 to-white",
         size === "sm" && "h-8",
         size === "md" && "h-12",
         size === "lg" && "h-24",
      )}
   >
   </div>
   <div class={cn("bg-primary/10 py-8", className)}>
      <slot />
   </div>
   <div
      class={cn(
         "bg-gradient-to-b from-primary/10 to-white",
         size === "sm" && "h-8",
         size === "md" && "h-12",
         size === "lg" && "h-24",
      )}
   >
   </div>
</section>

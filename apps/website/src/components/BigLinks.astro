---
export interface Props {
  active: "night" | "trauma";
}
const { active } = Astro.props;
---

<div class="mx-auto py-4 w-3/4">
    <div class="flex items-center gap-x-2 bg-primary/20 p-1.5 rounded-xl">
        <a
            class={`w-full px-4 py-3 md:px-6 md:py-4 flex items-center justify-center text-lg font-medium 
            transition-all duration-200 rounded-lg
            ${active === 'night' 
                ? 'bg-white text-black shadow-sm' 
                : 'text-gray-600 hover:text-gray-800 hover:bg-white/50'
            }`}
            href="./night-splint">Night</a
        >
        <a
            class={`w-full px-4 py-3 md:px-6 md:py-4 flex items-center justify-center text-lg font-medium 
            transition-all duration-200 rounded-lg
            ${active === 'trauma' 
                ? 'bg-white text-black shadow-sm' 
                : 'text-gray-600 hover:text-gray-800 hover:bg-white/50'
            }`}
            href="./trauma-splint">Trauma</a
        >
    </div>
</div>

---
export interface Props {
    active: 'night' | 'trauma'
}
const { active } = Astro.props
---

<div class="gap-x-4 w-full px-4 py-8 flex items-center justify-between">
    <a
        class={`w-full px-3 py-6 md:px-4 md:py-8 flex items-center justify-center text-xl font-semibold hover:bg-black hover:text-white focus:bg-black focus:text-white  ${
            active === 'night' && 'border-[3px] border-black'
        }`}
        href="./night-splint">Night</a
    >
    <a
        class={`w-full px-3 py-6 md:px-4 md:py-8 flex items-center justify-center text-xl font-semibold hover:bg-black hover:text-white focus:bg-black focus:text-white   ${
            active === 'trauma' && 'border-[3px] border-black'
        }`}
        href="./trauma-splint">Trauma</a
    >
</div>

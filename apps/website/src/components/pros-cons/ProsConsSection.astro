---
import ListIcon from "@/components/ListIcon.astro";
const { title, description, items, type } = Astro.props;
const bgColor = type === "negative" ? "red" : "primary";
import { cn } from "@/lib/utils";
---

<div
    class={cn(
        type === "negative"
            ? "bg-red-50 bg-gradient-to-br from-red-50 via-red-100 to-red-50"
            : "bg-primary/10 bg-gradient-to-br from-primary/10 via-primary/20 to-primary/10",
        `relative shadow-lg p-8 rounded-3xl transform transition-all hover:-translate-y-1 duration-300 overflow-hidden`,
        "w-full",
    )}
>
    <!-- Decorative background elements -->
    <div
        class={cn(
            "-top-16 -right-16 absolute opacity-20 blur-2xl rounded-full w-32 h-32",
            type === "negative" ? "bg-red-200" : "bg-primary/30",
        )}
    >
    </div>
    <div
        class={cn(
            "-bottom-8 -left-8 absolute opacity-20 blur-2xl rounded-full w-24 h-24",
            type === "negative" ? "bg-red-300" : "bg-primary/40",
        )}
    >
    </div>

    <div class="z-10 relative">
        <h3
            class={cn(
                "mb-4 font-semibold text-3xl",
                type === "negative" ? "text-red-900" : "text-primary",
            )}
        >
            {title}
        </h3>
        <p
            class={cn(
                "mb-8",
                type === "negative" ? "text-red-800/80" : "text-primary/80",
            )}
        >
            {description}
        </p>

        <div class="gap-8 grid grid-cols-2">
            {
                items.map((item, index) => (
                    <div class="space-y-4" key={index}>
                        <ListIcon type={type}>{item}</ListIcon>
                    </div>
                ))
            }
        </div>
    </div>
</div>

---
interface Download {
    href: string
    title: string
}
interface Props {
    title: string
    downloads: Download[]
}
const { title, downloads } = Astro.props
---

<div class="space-y-4 w-full">
    <h2 class="text-lg md:text-xl">{title}</h2>
    <ul class="flex flex-col gap-y-8 pl-8">
        {
            downloads.map((download) => (
                <li>
                    <a
                        class="text-lg font-light underline underline-offset-2  "
                        href={download.href}
                        target="_blank"
                    >
                        {download.title}
                    </a>
                </li>
            ))
        }
    </ul>
</div>

---
import Layout from "./Layout.astro";
import ContactInfo from "@/components/ContactInfo.astro";
import type { Lang } from "@/config/languages.ts";

const { lang = "en" } = Astro.props as { lang: Lang };

const content = {
    en: {
        title: "Thetis Medical - Contact Us",
        description:
            "Place bulk orders and ask questions to Thetis Medical with their contact form.",
    },
    de: {
        title: "Thetis Medical - Kontaktiere uns",
        description:
            "Platziere Bulk-Bestellungen und stelle Fragen an Thetis Medical mit ihrem Kontaktformular.",
    },
    fr: {
        title: "Thetis Medical - Contactez-nous",
        description:
            "Placez des commandes en vrac et posez des questions Ã  Thetis Medical avec leur formulaire de contact.",
    },
    es: {
        title: "Thetis Medical - Contacta con nosotros",
        description:
            "Coloca pedidos en masa y haz preguntas a Thetis Medical con su formulario de contacto.",
    },
    it: {
        title: "Thetis Medical - Contattaci",
        description:
            "Inserisci ordini in massa e fai domande a Thetis Medical con il loro modulo di contatto.",
    },
};
const currentContent = content[lang];
---

<Layout
    title={currentContent.title}
    description={currentContent.description}
    lang={lang}
>
    <main
        class="flex md:flex-row flex-col-reverse bg-gradient-to-b from-primary/25 to-white w-full min-h-screen"
    >
        <section
            class="flex items-center p-0 md:pl-16 lg:pl-24 w-full md:w-1/3"
        >
            <ContactInfo lang={lang} />
        </section>
        <section class="flex p-4 md:p-16 lg:p-24 py-16 w-full md:w-2/3">
            <slot />
        </section>
    </main>
</Layout>

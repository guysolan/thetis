---
import Layout from './Layout.astro';
import ContactInfo from '@/components/contact/ContactInfo.astro';
---

<Layout
    title="Thetis Medical - Contact Us"
    description="Place bulk orders and ask questions to Thetis Medical with their contact form."
    image="https://thetismedical.com/images/icons/socials/achilles-drawing-image.png"
    hideFooter={true}
    logoColor="white"
>
    <main class="flex md:flex-row flex-col-reverse bg-gradient-to-b from-primary/25 to-white w-full min-h-screen">
        <section class="flex items-center p-0 md:pl-16 lg:pl-24 w-full md:w-1/3">
            <ContactInfo />
        </section>
        <section class="flex py-16 p-4 md:p-16 lg:p-24 w-full md:w-2/3">
            <slot />
        </section>  
    </main>
</Layout>
---
export interface Props {
    title: string
    description: string
    image?: string
    bodyClass?: string
    hideFooter?: boolean
    logoColor?: 'black' | 'white'
    name?: string
}

import { cn } from '../lib/utils'

const { title, description, image, bodyClass, hideFooter, logoColor } =
    Astro.props

import GoogleTagHead from './GoogleTagHead.astro'
import GoogleTagBody from './GoogleTagBody.astro'
import BaseHead from './BaseHead.astro'
import Nav from './Nav.astro'
import Footer from './Footer.astro'
import ShopifyBuyButton2 from '../components/ShopifyBuyButton2.astro'
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <GoogleTagHead />
        <link
            href="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.css"
            rel="stylesheet"
        />
        <BaseHead title={title} description={description} image={image} />
        <slot name="head" />
    </head>

    <body class={cn(bodyClass, 'pt-16 overflow-y-auto overflow-x-hidden')}>
        <GoogleTagBody />
        <ShopifyBuyButton2 />

        <Nav />
        <slot />
        {!hideFooter && <Footer />}
        <script type="text/partytown" src="@/services/lucide.ts"></script>
        <script type="text/partytown" src="@/services/location"></script>
        <script
            is:inline
            defer
            type="text/partytown"
            src="//s3.amazonaws.com/downloads.mailchimp.com/js/mc-validate.js"
        ></script>
        <script
            type="text/partytown"
            src="https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.8.1/flowbite.min.js"
        ></script>
        <!-- <script is:inline type="text/partytown" type="text/partytown">
            ;(function ($) {
                window.fnames = new Array()
                window.ftypes = new Array()
                fnames[0] = 'EMAIL'
                ftypes[0] = 'email'
            })(jQuery)
            var $mcj = jQuery.noConflict(true)
        </script> -->
    </body>
</html>

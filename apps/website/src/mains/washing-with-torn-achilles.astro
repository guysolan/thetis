                                {problem.icon === "thermometer" && <ThermometerSun className="w-6 h-6 text-red-600" />}
                                {problem.icon === "wind" && <Wind className="w-6 h-6 text-red-600" />}
                                {problem.icon === "footprints" && <Footprints className="w-6 h-6 text-red-600" />}
                            </div>
                            <h3 class="mb-2 font-semibold text-neutral-900 text-lg">{problem.title}</h3>
                            <p class="text-neutral-600 text-sm">{problem.description}</p>
                        </div>
                    ))}

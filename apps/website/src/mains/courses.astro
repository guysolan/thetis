const t = content[lang];
---

<Layout title={t.title} description={t.description} image={t.image} lang={lang}>
    <main>
        <!-- Hero Section -->
        <ColorGradient>
            <div class="mx-auto px-4 py-16 md:py-24 max-w-5xl text-center">
                <p
                    class="mb-4 font-medium text-primary text-sm uppercase tracking-widest"
                >
                    {t.tagline}
                </p>
                <h1
                    class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-4xl md:text-6xl"
                >
                    {t.heading}
                    <HighlightedWord>{t.headingHighlight}</HighlightedWord>
                    {t.headingEnd}
                </h1>
                <p
                    class="mx-auto max-w-3xl text-neutral-600 dark:text-neutral-400 text-lg md:text-xl"
                >
                    {t.intro}
                </p>
            </div>
        </ColorGradient>

        <!-- Course Cards -->
        <section class="bg-neutral-50 dark:bg-neutral-900 py-16 md:py-24">
            <div class="mx-auto px-4 max-w-5xl">
                <div class="gap-8 grid md:grid-cols-2">
                    {
                        t.courses.map((course) => (
                            <div
                                class={cn(
                                    "shadow-lg hover:shadow-xl p-8 rounded-2xl transition-all",
                                    course.highlighted
                                        ? "bg-gradient-to-br from-primary/10 via-primary/5 to-primary/15 border-2 border-primary/30 dark:border-primary/50"
                                        : "bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700",
                                )}
                            >
                                <div class="flex justify-between items-center mb-4">
                                    <span
                                        class={cn(
                                            "inline-flex items-center px-3 py-1 rounded-full font-semibold text-sm",
                                            course.highlighted
                                                ? "bg-primary/20 text-primary"
                                                : "bg-green-100 text-green-800 dark:bg-green-900 dark:text-green-200",
                                        )}
                                    >
                                        {course.price}
                                    </span>
                                    <span class="text-neutral-500 dark:text-neutral-400 text-sm">
                                        {course.priceNote}
                                    </span>
                                </div>

                                <h3 class="mb-3 font-bold text-neutral-900 dark:text-neutral-100 text-2xl">
                                    {course.title}
                                </h3>

                                <p class="mb-6 text-neutral-600 dark:text-neutral-400">
                                    {course.description}
                                </p>

                                <ul class="space-y-3 mb-8">
                                    {course.features.map((feature) => (
                                        <li class="flex items-start gap-2 text-neutral-700 dark:text-neutral-300">
                                            <span class="mt-1 text-primary">
                                                ✓
                                            </span>
                                            <span>{feature}</span>
                                        </li>
                                    ))}
                                </ul>

                                <a
                                    href={course.ctaHref}
                                    class={cn(
                                        buttonVariants({
                                            variant: course.highlighted
                                                ? "default"
                                                : "outline",
                                            size: "lg",
                                        }),
                                        "w-full justify-center",
                                    )}
                                >
                                    {course.cta}
                                </a>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Why Choose Us -->
        <section class="py-16 md:py-24">
            <div class="mx-auto px-4 max-w-5xl">
                <h2
                    class="mb-12 font-bold text-neutral-900 dark:text-neutral-100 text-3xl md:text-4xl text-center"
                >
                    {t.whyChoose}
                </h2>

                <div class="gap-6 grid sm:grid-cols-2 lg:grid-cols-4">
                    {
                        t.reasons.map((reason) => (
                            <div class="p-6 text-center">
                                <h3 class="mb-2 font-semibold text-neutral-900 dark:text-neutral-100 text-lg">
                                    {reason.title}
                                </h3>
                                <p class="text-neutral-600 dark:text-neutral-400 text-sm">
                                    {reason.description}
                                </p>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>
    </main>
</Layout>

                href: "/research/incidence",
                icon: Users,
                audience: "both",
            },
        ],
    },
};

const currentContent = content[lang];
---

<Layout
    title={currentContent.title}
    description={currentContent.description}
    lang={lang}
>
    <ColorGradient>
        <div class="mx-auto max-w-3xl">
            <h1 class="mb-6 font-bold text-4xl">{currentContent.title}</h1>

            <div class="mb-12">
                <p class="mb-4 text-gray-700 text-lg">
                    {currentContent.intro}
                </p>
            </div>

            <div class="gap-6 grid">
                {
                    currentContent.resources.map((resource) => (
                        <a
                            href={resource.href}
                            class="group block bg-white shadow-sm hover:shadow-md p-6 border border-gray-100 rounded-lg transition-shadow"
                        >
                            <div class="flex items-start gap-4">
                                <div class="mt-1">
                                    <resource.icon class="w-6 h-6 text-emerald-600" />
                                </div>
                                <div class="flex-1">
                                    <div class="flex justify-between items-center">
                                        <h2 class="font-semibold group-hover:text-emerald-600 text-xl transition-colors">
                                            {resource.title}
                                        </h2>
                                        <ArrowRight class="opacity-0 group-hover:opacity-100 w-5 h-5 text-emerald-600 transition-opacity" />
                                    </div>
                                    <p class="mt-2 text-gray-600">
                                        {resource.description}
                                    </p>
                                    <div class="mt-3">
                                        {resource.audience === "patients" ? (
                                            <span class="inline-flex items-center bg-blue-50 px-2 py-1 rounded-full font-medium text-blue-700 text-xs">
                                                {currentContent.patientResource}
                                            </span>
                                        ) : (
                                            <span class="inline-flex items-center bg-emerald-50 px-2 py-1 rounded-full font-medium text-emerald-700 text-xs">
                                                {
                                                    currentContent.patientProviderResource
                                                }
                                            </span>
                                        )}
                                    </div>
                                </div>
                            </div>
                        </a>
                    ))
                }
            </div>
        </div>
    </ColorGradient>

    <div class="bg-gray-50 mx-4 md:mx-auto mt-12 p-6 rounded-lg md:max-w-3xl">
        <h2 class="mb-4 font-semibold text-xl">{currentContent.aboutTitle}</h2>
        <p class="text-gray-700">
            {currentContent.aboutText}
        </p>
    </div>
</Layout>

const currentSleepContent = sleepContent[lang as keyof typeof sleepContent] || sleepContent.en;
---

<Fragment slot="head">
    <SleepingSplintSchema />
    <slot name="head" />
</Fragment>

<Layout
    title={currentContent.title}
    description={currentContent.description}
    image={currentContent.image}
    lang={lang}
>
    <main>
        <SleepingHero lang={lang} content={currentContent.hero} />

        <!-- Educational Section: Why Sleep Matters -->
        <section id="education" class="bg-gradient-to-b from-white to-neutral-50 py-16 md:py-20">
            <div class="mx-auto px-4 max-w-6xl">
                <div class="mb-12 text-center">
                    <div class="inline-flex items-center gap-2 bg-primary/10 mb-4 px-4 py-2 rounded-full">
                        <Moon className="w-4 h-4 text-primary" />
                        <span class="font-medium text-primary text-sm uppercase tracking-wider">Sleep & Recovery</span>
                    </div>
                    <h2 class="mb-4 font-bold text-neutral-900 text-3xl md:text-4xl">
                        {currentSleepContent.sectionTitle}
                    </h2>
                    <p class="mx-auto max-w-2xl text-neutral-600 text-lg">
                        {currentSleepContent.sectionSubtitle}
                    </p>
                </div>

                <!-- Quote -->
                <blockquote class="bg-primary/5 mx-auto mb-12 p-6 border-l-4 border-primary rounded-r-lg max-w-3xl">
                    <p class="text-neutral-700 text-lg italic">
                        "{currentSleepContent.quote}"
                    </p>
                </blockquote>

                <!-- Stats -->
                <div class="gap-6 grid md:grid-cols-3 mb-12">
                    {currentSleepContent.stats.items.map((item) => (
                        <div class="bg-white shadow-sm p-6 border border-neutral-200 rounded-xl text-center">
                            <div class="mb-2 font-bold text-primary text-4xl">{item.stat}</div>
                            <p class="text-neutral-600">{item.label}</p>
                        </div>
                    ))}
                </div>

                <!-- Why Sleep Matters Cards -->
                <div class="gap-6 grid md:grid-cols-2 lg:grid-cols-4 mb-12">
                    {currentSleepContent.benefits.map((benefit) => (
                        <div class="bg-white shadow-sm hover:shadow-md p-6 border border-neutral-200 rounded-xl transition-shadow">
                            <div class="flex justify-center items-center bg-primary/10 mb-4 rounded-full w-12 h-12">
                                {benefit.icon === "heart" && <Heart className="w-6 h-6 text-primary" />}
                                {benefit.icon === "zap" && <Zap className="w-6 h-6 text-primary" />}
                                {benefit.icon === "brain" && <Brain className="w-6 h-6 text-primary" />}
                                {benefit.icon === "moon" && <Moon className="w-6 h-6 text-primary" />}
                            </div>
                            <h3 class="mb-2 font-semibold text-neutral-900 text-lg">{benefit.title}</h3>
                            <p class="text-neutral-600 text-sm">{benefit.description}</p>
                        </div>
                    ))}
                </div>

                <!-- Safety Warning -->
                <div class="bg-red-50 mx-auto mb-12 p-6 border border-red-200 rounded-xl max-w-3xl">
                    <div class="flex items-start gap-4">
                        <AlertTriangle className="flex-shrink-0 w-6 h-6 text-red-600" />
                        <div>
                            <h4 class="mb-2 font-bold text-red-800">{currentSleepContent.warning.title}</h4>
                            <p class="text-red-700">{currentSleepContent.warning.text}</p>
                        </div>
                    </div>
                </div>

                <!-- Night Splint Solution -->
                <div class="bg-primary/5 mx-auto p-6 md:p-8 border border-primary/20 rounded-xl max-w-4xl">
                    <h3 class="flex items-center gap-2 mb-4 font-bold text-neutral-900 text-xl">
                        <Bed className="w-6 h-6 text-primary" />
                        {currentSleepContent.nightSplint.title}
                    </h3>
                    <p class="mb-6 text-neutral-700">{currentSleepContent.nightSplint.description}</p>
                    <ul class="space-y-3">
                        {currentSleepContent.nightSplint.benefits.map((item) => (
                            <li class="flex items-start gap-3">
                                <Check className="flex-shrink-0 mt-0.5 w-5 h-5 text-primary" />
                                <span class="text-neutral-700">{item}</span>
                            </li>
                        ))}
                    </ul>
                </div>

                <!-- Sleep Tips -->
                <div class="bg-white shadow-sm mx-auto mt-8 p-6 md:p-8 border border-neutral-200 rounded-xl max-w-3xl">
                    <h3 class="flex items-center gap-2 mb-4 font-bold text-neutral-900 text-xl">
                        <Moon className="w-6 h-6 text-primary" />
                        {currentSleepContent.tips.title}
                    </h3>
                    <ul class="gap-3 grid md:grid-cols-2">
                        {currentSleepContent.tips.items.map((item) => (
                            <li class="flex items-start gap-3">
                                <Check className="flex-shrink-0 mt-0.5 w-5 h-5 text-primary" />
                                <span class="text-neutral-700">{item}</span>
                            </li>
                        ))}
                    </ul>
                </div>
            </div>
        </section>

        <RemoveBootBenefits lang={lang} content={currentContent.benefits} />

        <!-- Product Introduction - Soft Sell -->
        <ProductIntroduction lang={lang} variant="sleeping" />

        <!-- Surgeon Endorsements -->
        <section class="bg-white py-12 md:py-16">
            <div class="mx-auto px-4 max-w-7xl">
                <div class="mb-8 text-center">
                    <h2 class="mb-4 font-bold text-neutral-900 text-2xl md:text-3xl">
                        Trusted by Medical Professionals
                    </h2>
                    <p class="text-neutral-600">
                        Surgeons and clinicians recommend the Thetis splint for safe sleeping
                    </p>
                </div>
                <SurgeonsCarousel client:load />
            </div>
        </section>

        <!-- Patient Reviews -->
        <section class="bg-gradient-to-b from-white to-neutral-50 py-12 md:py-16">
            <div class="mx-auto px-4 max-w-7xl">
                <div class="mb-8 text-center">
                    <div class="inline-flex items-center gap-2 bg-primary/10 mb-4 px-4 py-2 rounded-full">
                        <Check className="w-4 h-4 text-primary" />
                        <span class="font-medium text-primary text-sm uppercase tracking-wider">Real Patient Experiences</span>
                    </div>
                    <h2 class="mb-4 font-bold text-neutral-900 text-2xl md:text-3xl">
                        What Patients Say About Sleep
                    </h2>
                </div>
                <EnhancedReviewCarousel client:load />
                <div class="mt-8 text-center">
                    <a
                        href="/reviews"
                        class="inline-flex items-center gap-2 hover:bg-primary px-6 py-3 border-2 border-primary rounded-lg font-semibold text-primary hover:text-white transition-colors"
                    >
                        View All Reviews
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                        </svg>
                    </a>
                </div>
            </div>
        </section>

        <!-- Athletes Section -->
        <section class="bg-neutral-50 py-12 md:py-16">
            <div class="mx-auto px-4 max-w-7xl">
                <div class="mb-8 text-center">
                    <h2 class="mb-4 font-bold text-neutral-900 text-2xl md:text-3xl">
                        Trusted by Professional Athletes
                    </h2>
                    <p class="text-neutral-600">
                        Athletes recovering from Achilles rupture trust the Thetis splint
                    </p>
                </div>
                <AthletesCarousel client:load />
            </div>
        </section>

        <SleepingFAQs lang={lang} client:load />

        <!-- Subscribe Block -->
        <div class="bg-neutral-50 py-8 md:py-12">
            <div class="mx-auto px-4 max-w-3xl">
                <SubscribeBlock source="sleeping_page" />
            </div>
        </div>

        <SleepingOrderCallout lang={lang} />
    </main>

    <StickyAddToCart
        variant="splint"
        lang={lang}
        splintHref={splintRoute?.href || "/achilles-rupture-splint"}
        client:load
    />

    <ExitIntentPopup client:load />
</Layout>

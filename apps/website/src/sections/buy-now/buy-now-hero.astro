---
import { Image } from "astro:assets";
import nightSplint from "@/assets/night-splint/achilles_rupture_night_splint_bed_thetis_medical.jpg";
import ReviewsLink from "@/components/ReviewsLink";
import CheckWithCareTeam from "@/components/buy-button/CheckWithCareTeam";
import BuyButtonVariants from "@/components/products/buy-button/BuyButtonVariants";
import type { Lang } from "@/config/languages.ts";

const { lang = "en" } = Astro.props as { lang: Lang };

const content = {
    en: {
        title: "Splint for Achilles Tendon Rupture",
        description:
            "Protect your healing tendon while you sleep with our splint. Designed to maintain optimal foot position and prevent re-rupture during your recovery journey.",
        imageAlt: "Splint Render",
    },
    de: {
        title: "Schiene für Achillessehnenruptur",
        description:
            "Schützen Sie Ihre heilende Sehne während des Schlafens mit unserer Schiene. Entwickelt, um die optimale Fußposition zu erhalten und eine erneute Ruptur während Ihrer Genesungsreise zu verhindern.",
        imageAlt: "Schienen-Rendering",
    },
    fr: {
        title: "Attelle pour Rupture du Tendon d'Achille",
        description:
            "Protégez votre tendon en cours de guérison pendant votre sommeil avec notre attelle. Conçue pour maintenir une position optimale du pied et prévenir la re-rupture pendant votre parcours de récupération.",
        imageAlt: "Rendu d'Attelle",
    },
    es: {
        title: "Férula para Rotura del Tendón de Aquiles",
        description:
            "Proteja su tendón en curación mientras duerme con nuestra férula. Diseñada para mantener la posición óptima del pie y prevenir la re-rotura durante su viaje de recuperación.",
        imageAlt: "Renderizado de Férula",
    },
    it: {
        title: "Tutore per Rottura del Tendine di Achille",
        description:
            "Proteggi il tuo tendine in guarigione mentre dormi con il nostro tutore. Progettato per mantenere la posizione ottimale del piede e prevenire la re-rottura durante il tuo percorso di recupero.",
        imageAlt: "Rendering del Tutore",
    },
};

const currentContent = content[lang as keyof typeof content];
---

<section class="mt-0 pb-12">
    <div class="mx-auto px-4 max-w-5xl">
        <div class="flex lg:flex-row flex-col items-start gap-8">
            {/* Product Image Column */}
            <div class="hidden lg:block lg:w-3/5">
                <Image
                    height={700}
                    width={700}
                    class="shadow-md rounded-lg w-full object-cover aspect-square"
                    src={nightSplint}
                    alt={currentContent.imageAlt}
                />
                {/* Add thumbnail gallery here if needed */}
            </div>

            {/* Product Info Column */}
            <div class="top-24 sticky flex flex-col lg:w-2/5">
                <h1 class="font-semibold text-gray-900 text-3xl">
                    {currentContent.title}
                </h1>

                <div class="space-y-2 my-4 text-gray-600 text-lg">
                    <p>
                        {currentContent.description}
                    </p>
                </div>
                <ReviewsLink lang={lang} size="lg" />
                <CheckWithCareTeam lang={lang} client:load />
                <BuyButtonVariants lang={lang} client:load />
            </div>
        </div>
    </div>
</section>

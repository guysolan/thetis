---
import HighlightedParagraph from "@/components/HighlightedParagraph";
import ColorGradient from "@/components/ColorGradient.astro";
import type { Lang } from "../../config/languages";
import { Droplets, ShowerHead, AlertTriangle, ArrowDown } from "lucide-react";

interface Props {
    lang: Lang;
    content: {
        title: any;
        description: string;
    };
}

const { lang = "en", content } = Astro.props;

const heroContent = {
    en: {
        badge: "Common Recovery Question",
        subtitle: "You're not alone - this is one of the most searched questions during Achilles recovery",
        painPoints: [
            "Your foot is trapped in a boot 24/7",
            "It's getting sweaty, smelly, and uncomfortable",
            "You're worried about hygiene and skin health"
        ],
        cta: "Learn how to wash safely",
        stats: [
            { number: "5,000+", label: "patients helped" },
            { number: "0", label: "re-ruptures reported" }
        ]
    },
    de: {
        badge: "Häufige Genesungsfrage",
        subtitle: "Sie sind nicht allein - dies ist eine der meistgesuchten Fragen während der Achillessehnen-Genesung",
        painPoints: [
            "Ihr Fuß ist 24/7 im Stiefel gefangen",
            "Er wird schwitzig, riecht und ist unbequem",
            "Sie machen sich Sorgen um Hygiene und Hautgesundheit"
        ],
        cta: "Erfahren Sie, wie Sie sicher waschen",
        stats: [
            { number: "5.000+", label: "Patienten geholfen" },
            { number: "0", label: "Re-Rupturen gemeldet" }
        ]
    },
    fr: {
        badge: "Question courante de récupération",
        subtitle: "Vous n'êtes pas seul - c'est l'une des questions les plus recherchées pendant la récupération d'Achille",
        painPoints: [
            "Votre pied est piégé dans une botte 24h/24",
            "Il devient moite, malodorant et inconfortable",
            "Vous vous inquiétez de l'hygiène et de la santé de la peau"
        ],
        cta: "Apprenez à vous laver en toute sécurité",
        stats: [
            { number: "5 000+", label: "patients aidés" },
            { number: "0", label: "re-ruptures signalées" }
        ]
    },
    es: {
        badge: "Pregunta común de recuperación",
        subtitle: "No está solo - esta es una de las preguntas más buscadas durante la recuperación del Aquiles",
        painPoints: [
            "Su pie está atrapado en una bota 24/7",
            "Se está poniendo sudoroso, maloliente e incómodo",
            "Le preocupa la higiene y la salud de la piel"
        ],
        cta: "Aprenda a lavarse de forma segura",
        stats: [
            { number: "5.000+", label: "pacientes ayudados" },
            { number: "0", label: "re-rupturas reportadas" }
        ]
    },
    it: {
        badge: "Domanda comune sul recupero",
        subtitle: "Non sei solo - questa è una delle domande più cercate durante il recupero dell'Achille",
        painPoints: [
            "Il tuo piede è intrappolato in uno stivale 24/7",
            "Sta diventando sudato, puzzolente e scomodo",
            "Ti preoccupi dell'igiene e della salute della pelle"
        ],
        cta: "Scopri come lavarti in sicurezza",
        stats: [
            { number: "5.000+", label: "pazienti aiutati" },
            { number: "0", label: "ri-rotture segnalate" }
        ]
    }
};

const currentHeroContent = heroContent[lang as keyof typeof heroContent] || heroContent.en;
---

<ColorGradient>
    <div class="mx-auto px-4 py-12 md:py-16 max-w-5xl text-center">
        <!-- Badge -->
        <div class="inline-flex items-center gap-2 bg-primary/10 mb-6 px-4 py-2 rounded-full">
            <ShowerHead className="w-4 h-4 text-primary" />
            <span class="font-medium text-primary text-sm uppercase tracking-wider">{currentHeroContent.badge}</span>
        </div>

        <!-- Main Title -->
        <h1 class="mb-6 font-bold text-gray-900 text-4xl md:text-5xl lg:text-6xl leading-tight">
            <HighlightedParagraph paragraph={content.title} client:load />
        </h1>

        <!-- Subtitle -->
        <p class="mx-auto mb-8 max-w-2xl text-gray-600 text-lg md:text-xl">
            {currentHeroContent.subtitle}
        </p>

        <!-- Pain Points -->
        <div class="bg-amber-50 mx-auto mb-8 p-6 border border-amber-200 rounded-xl max-w-2xl">
            <div class="flex items-center justify-center gap-2 mb-4">
                <AlertTriangle className="w-5 h-5 text-amber-600" />
                <span class="font-semibold text-amber-800">Sound familiar?</span>
            </div>
            <ul class="space-y-3 text-left">
                {currentHeroContent.painPoints.map((point) => (
                    <li class="flex items-start gap-3">
                        <span class="text-amber-600 mt-1">•</span>
                        <span class="text-amber-700">{point}</span>
                    </li>
                ))}
            </ul>
        </div>

        <!-- Stats -->
        <div class="flex justify-center gap-8 mb-8">
            {currentHeroContent.stats.map((stat) => (
                <div class="text-center">
                    <div class="font-bold text-primary text-2xl md:text-3xl">{stat.number}</div>
                    <div class="text-gray-600 text-sm">{stat.label}</div>
                </div>
            ))}
        </div>

        <!-- CTA to scroll down -->
        <a 
            href="#education"
            class="inline-flex items-center gap-2 bg-primary hover:bg-primary/90 px-6 py-3 rounded-lg font-semibold text-white transition-colors"
        >
            {currentHeroContent.cta}
            <ArrowDown className="w-4 h-4" />
        </a>
    </div>
</ColorGradient>

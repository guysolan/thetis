<section id="faq-slide" class="faq slide">
    <div class="questions">
        <h2>{t.faq.title}</h2>
        {
            t.faq.questions.map((q) => (
                <a href={`#${q.id}`}>
                    <h3>{q.text}</h3>
                </a>
            ))
        }
    </div>
    <div class="answers">
        {
            Object.entries(t.faq.answers).map(([id, answer]) => (
                <div id={id}>
                    <h2>{answer.title}</h2>
                    {answer.content.map((item) => {
                        if (typeof item === "string") {
                            return <p set:html={item} />;
                        } else if (item.type === "list") {
                            return (
                                <ul class="flex flex-col gap-y-4 my-2">
                                    {item.items.map((li) => (
                                        <li class="!my-1 !py-0" set:html={li} />
                                    ))}
                                </ul>
                            );
                        }
                    })}
                </div>
            ))
        }

        <div id="q4"></div>
        <h2>{t.faq.answers.q4.title}</h2>

        <div class="flex flex-col gap-y-8 mx-auto mt-8 w-full">
            {
                exercisePhases.map((phase) => (
                    <div class="bg-primary/10 border border-primary/30 rounded-lg">
                        <div class="flex items-center gap-2 mb-4 p-4 pb-2 border-primary/30 border-b">
                            <phase.icon class="w-5 h-5 text-primary" />
                            <span class="font-medium text-primary text-lg">
                                {phase.time}
                            </span>
                        </div>
                        <div class="space-y-4 p-4 pt-0">
                            {phase.exercises.map((exercise) => (
                                <div>
                                    <div class="font-medium text-md text-neutral-700">
                                        {exercise.title}
                                    </div>
                                    <ul class="my-2 ml-4 text-sm list-disc list-inside">
                                        {exercise.items.map((item) => (
                                            <li class="!my-1 !py-0">{item}</li>
                                        ))}
                                    </ul>
                                </div>
                            ))}
                        </div>
                    </div>
                ))
            }
        </div>

        <style>
            @media print {
                .timeline-block {
                    break-inside: avoid;
                    page-break-inside: avoid;
                }
            }

            html {
                scroll-behavior: smooth;
            }
        </style>

        <p class="mt-4 text-muted-foreground text-sm">
            {t.faq.answers.q4.content[0]}
        </p>
    </div>
</section>

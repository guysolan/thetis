---
import BuyNowCallout from "@/components/products/night-splint/BuyNowCallout.astro";
import HighlightedWord from "@/components/HighlightedWord.tsx";
import type { Lang } from "@/config/languages.ts";
import { getRouteBySlugAndLanguage } from "@/content/routes.tsx";

const { lang = "en" } = Astro.props as { lang?: Lang };

const buyNowRoute = getRouteBySlugAndLanguage("splint", lang);
const wholesaleRoute = getRouteBySlugAndLanguage("order-wholesale", lang);

const content: Record<
    Lang,
    {
        title: string;
        buttonText: string;
        secondaryButtonText: string;
        body: { highlighted: boolean; text: string }[];
    }
> = {
    en: {
        title: "Get the Complete Recovery Solution",
        buttonText: "Buy Now",
        secondaryButtonText: "Order for Clinic",
        body: [
            {
                highlighted: false,
                text: "Better than VACOped, better than generic boots. Get a ",
            },
            {
                highlighted: true,
                text: "complete recovery solution",
            },
            {
                highlighted: false,
                text: " for sleeping, washing, and swimming with ",
            },
            {
                highlighted: true,
                text: "proper Achilles support",
            },
            {
                highlighted: false,
                text: " throughout your recovery journey.",
            },
        ],
    },
    de: {
        title: "Holen Sie sich die komplette Genesungslösung",
        buttonText: "Jetzt Kaufen",
        secondaryButtonText: "Für Klinik Bestellen",
        body: [
            {
                highlighted: false,
                text: "Besser als VACOped, besser als generische Stiefel. Holen Sie sich eine ",
            },
            {
                highlighted: true,
                text: "komplette Genesungslösung",
            },
            {
                highlighted: false,
                text: " zum Schlafen, Waschen und Schwimmen mit ",
            },
            {
                highlighted: true,
                text: "ordentlicher Achillessehnen-Unterstützung",
            },
            {
                highlighted: false,
                text: " während Ihrer gesamten Genesung.",
            },
        ],
    },
    fr: {
        title: "Obtenez la solution de récupération complète",
        buttonText: "Acheter Maintenant",
        secondaryButtonText: "Commander pour Clinique",
        body: [
            {
                highlighted: false,
                text: "Mieux que VACOped, mieux que les bottes génériques. Obtenez une ",
            },
            {
                highlighted: true,
                text: "solution de récupération complète",
            },
            {
                highlighted: false,
                text: " pour dormir, se laver et nager avec un ",
            },
            {
                highlighted: true,
                text: "vrai soutien d'Achille",
            },
            {
                highlighted: false,
                text: " tout au long de votre récupération.",
            },
        ],
    },
    es: {
        title: "Obtenga la solución de recuperación completa",
        buttonText: "Comprar Ahora",
        secondaryButtonText: "Pedir para Clínica",
        body: [
            {
                highlighted: false,
                text: "Mejor que VACOped, mejor que botas genéricas. Obtenga una ",
            },
            {
                highlighted: true,
                text: "solución de recuperación completa",
            },
            {
                highlighted: false,
                text: " para dormir, lavarse y nadar con ",
            },
            {
                highlighted: true,
                text: "soporte real de Aquiles",
            },
            {
                highlighted: false,
                text: " durante todo su proceso de recuperación.",
            },
        ],
    },
    it: {
        title: "Ottieni la soluzione di recupero completa",
        buttonText: "Compra Ora",
        secondaryButtonText: "Ordina per Clinica",
        body: [
            {
                highlighted: false,
                text: "Meglio di VACOped, meglio degli stivali generici. Ottieni una ",
            },
            {
                highlighted: true,
                text: "soluzione di recupero completa",
            },
            {
                highlighted: false,
                text: " per dormire, lavarsi e nuotare con ",
            },
            {
                highlighted: true,
                text: "vero supporto dell'Achille",
            },
            {
                highlighted: false,
                text: " durante tutto il tuo percorso di recupero.",
            },
        ],
    },
};
---

<BuyNowCallout
    buttonText={content[lang].buttonText}
    buttonHref={buyNowRoute?.href || "/splint"}
    secondaryButtonText={content[lang].secondaryButtonText}
    secondaryButtonHref={wholesaleRoute?.href || "/order-wholesale"}
>
    <span slot="title">{content[lang].title}</span>
    <span slot="body">
        {
            content[lang].body.map((item) => (
                <span>
                    {item.highlighted ? (
                        <HighlightedWord>{item.text}</HighlightedWord>
                    ) : (
                        item.text
                    )}
                </span>
            ))
        }
    </span>
</BuyNowCallout>

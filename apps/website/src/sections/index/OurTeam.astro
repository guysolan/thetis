const t = content[lang as keyof typeof content];

const getIcon = (iconName: string) => {
    switch (iconName) {
        case "stethoscope":
            return Stethoscope;
        case "heart":
            return Heart;
        case "code":
            return Code;
        default:
            return Users;
    }
};
---

<section class="bg-gradient-to-b from-primary/5 to-transparent py-16 md:py-24">
    <div class="mx-auto px-4 max-w-6xl">
        <!-- Header -->
        <div class="mb-12 text-center">
            <div
                class="flex justify-center items-center bg-primary/10 mx-auto mb-6 rounded-full w-16 h-16"
            >
                <Users className="w-8 h-8 text-primary" />
            </div>
            <p
                class="mb-4 font-medium text-primary text-sm uppercase tracking-widest"
            >
                {t.tagline}
            </p>
            <h2
                class="mb-6 font-bold text-neutral-900 dark:text-neutral-100 text-3xl md:text-4xl"
            >
                {t.title}
                <span class="text-primary">{t.highlight}</span>
            </h2>
            <p
                class="mx-auto mb-6 max-w-3xl text-neutral-600 dark:text-neutral-400 text-lg leading-relaxed"
            >
                {t.description}
            </p>
        </div>

        <!-- Team Members -->
        <div class="gap-8 grid md:grid-cols-3 mb-12">
            {
                t.team.map((member) => {
                    const IconComponent = getIcon(member.icon);
                    return (
                        <div class="bg-white dark:bg-neutral-800 hover:shadow-lg p-6 border border-neutral-200 dark:border-neutral-700 rounded-xl text-center transition-shadow">
                            <div class="flex justify-center items-center bg-primary/10 dark:bg-primary/20 mx-auto mb-4 rounded-full w-16 h-16">
                                <IconComponent className="w-8 h-8 text-primary" />
                            </div>
                            <h3 class="mb-1 font-bold text-neutral-900 dark:text-neutral-100 text-xl">
                                {member.name}
                            </h3>
                            <p class="mb-2 font-semibold text-primary text-xs uppercase tracking-wide">
                                {member.label}
                            </p>
                            <p class="mb-3 font-medium text-neutral-700 dark:text-neutral-300 text-sm">
                                {member.role}
                            </p>
                        </div>
                    );
                })
            }
        </div>

        <!-- Connection Statement -->
        <div
            class="bg-primary/10 dark:bg-primary/20 p-6 md:p-8 border border-primary/20 dark:border-primary/30 rounded-xl text-center"
        >
            <p
                class="font-medium text-neutral-700 dark:text-neutral-300 text-lg leading-relaxed"
            >
                {t.connection}
            </p>
        </div>
    </div>
</section>

---

<section class="bg-gray-50 dark:bg-gray-800 mx-auto px-6 py-24 container">
    <div class="mx-auto max-w-5xl">
        <div class="mb-20 text-center">
            <span
                class="font-semibold text-primary text-sm uppercase tracking-wider"
                >{currentContent.sectionTitle}</span
            >
            <h2
                class="mt-2 font-semibold text-gray-900 dark:text-white text-3xl"
            >
                {currentContent.mainTitle}
            </h2>
            <p
                class="mx-auto mt-6 max-w-3xl text-gray-600 dark:text-gray-300 text-lg"
            >
                {currentContent.description}
            </p>
        </div>

        <div class="gap-16 grid grid-cols-1 lg:grid-cols-2">
            <!-- Image side -->
            <div class="flex flex-col justify-center">
                <img
                    src="/images/night_splint_bed_top_square.jpg"
                    alt={currentContent.imageAlt}
                    class="shadow-sm rounded-xl w-full"
                />

                <div class="gap-4 grid grid-cols-2 mt-4">
                    <div
                        class="bg-white dark:bg-gray-700 shadow-md hover:shadow-lg p-4 border-2 border-primary rounded-lg text-center hover:scale-105 transition-all duration-200 transform"
                    >
                        <p class="font-bold text-primary text-3xl">3,000+</p>
                        <p
                            class="mt-1 font-medium text-gray-700 dark:text-gray-300 text-sm"
                        >
                            {currentContent.patientRecorded}
                        </p>
                    </div>
                    <div
                        class="bg-white dark:from-gray-700 shadow-md hover:shadow-lg p-4 border-2 border-primary rounded-lg text-center hover:scale-105 transition-all duration-200 transform"
                    >
                        <p class="font-bold text-primary text-3xl">Zero</p>
                        <p
                            class="mt-1 font-medium text-gray-700 dark:text-gray-300 text-sm"
                        >
                            {currentContent.reportedInjuries}
                        </p>
                    </div>
                </div>
            </div>

            <!-- Data side -->
            <div class="bg-white dark:bg-gray-700 shadow-sm p-8 rounded-xl">
                <h3
                    class="mb-8 font-medium text-gray-900 dark:text-white text-xl"
                >
                    {currentContent.safetyAnalysis}
                </h3>

                <div class="space-y-8">
                    <div>
                        <div class="flex justify-between mb-2">
                            <span
                                class="font-medium text-gray-700 dark:text-gray-300 text-sm"
                                >{currentContent.sampleSizeAdequacy}</span
                            >
                            <span class="font-medium text-primary text-sm"
                                >99.9%</span
                            >
                        </div>
                        <div
                            class="bg-gray-100 dark:bg-gray-600 rounded-full h-2 overflow-hidden"
                        >
                            <div
                                class="bg-primary rounded-full h-2"
                                style="width: 99.9%"
                            >
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="flex justify-between mb-2">
                            <span
                                class="font-medium text-gray-700 dark:text-gray-300 text-sm"
                                >{currentContent.statisticalPower}</span
                            >
                            <span class="font-medium text-primary text-sm"
                                >99.7%</span
                            >
                        </div>
                        <div
                            class="bg-gray-100 dark:bg-gray-600 rounded-full h-2 overflow-hidden"
                        >
                            <div
                                class="bg-primary rounded-full h-2"
                                style="width: 99.7%"
                            >
                            </div>
                        </div>
                    </div>

                    <div>
                        <div class="flex justify-between mb-2">
                            <span
                                class="font-medium text-gray-700 dark:text-gray-300 text-sm"
                                >{currentContent.confidenceLevel}</span
                            >
                            <span class="font-medium text-primary text-sm"
                                >95%</span
                            >
                        </div>
                        <div
                            class="bg-gray-100 dark:bg-gray-600 rounded-full h-2 overflow-hidden"
                        >
                            <div
                                class="bg-primary rounded-full h-2"
                                style="width: 95%"
                            >
                            </div>
                        </div>
                    </div>
                </div>

                <div
                    class="mt-8 pt-6 border-gray-100 dark:border-gray-600 border-t"
                >
                    <h4 class="mb-3 font-medium text-gray-900 dark:text-white">
                        {currentContent.keyFinding}
                    </h4>
                    <p class="text-gray-600 dark:text-gray-300">
                        {currentContent.keyFindingText}
                        <span class="font-semibold text-primary"
                            >{currentContent.lessThan}</span
                        >{currentContent.keyFindingEnd}
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

---
import BuyNowCallout from "@/components/products/night-splint/BuyNowCallout.astro";
import HighlightedWord from "@/components/HighlightedWord.tsx";
import type { Lang } from "@/config/languages.ts";
import { getRouteBySlugAndLanguage } from "@/content/routes.tsx";

const { lang = "en" } = Astro.props as { lang?: Lang };

const buyNowRoute = getRouteBySlugAndLanguage("splint", lang);
const wholesaleRoute = getRouteBySlugAndLanguage("order-wholesale", lang);

const content: Record<
    Lang,
    {
        title: string;
        buttonText: string;
        secondaryButtonText: string;
        body: { highlighted: boolean; text: string }[];
    }
> = {
    en: {
        title: "Keep Your Bed Clean",
        buttonText: "Buy Now",
        secondaryButtonText: "Order for Clinic",
        body: [
            {
                highlighted: false,
                text: "Stop bringing ",
            },
            {
                highlighted: true,
                text: "dirty boots",
            },
            {
                highlighted: false,
                text: " into your bed. Our night splint with ",
            },
            {
                highlighted: true,
                text: "washable liner",
            },
            {
                highlighted: false,
                text: " keeps your sheets ",
            },
            {
                highlighted: true,
                text: "clean and fresh",
            },
            {
                highlighted: false,
                text: " throughout recovery.",
            },
        ],
    },
    de: {
        title: "Halten Sie Ihr Bett sauber",
        buttonText: "Jetzt Kaufen",
        secondaryButtonText: "Für Klinik Bestellen",
        body: [
            {
                highlighted: false,
                text: "Hören Sie auf, ",
            },
            {
                highlighted: true,
                text: "schmutzige Stiefel",
            },
            {
                highlighted: false,
                text: " ins Bett zu bringen. Unsere Nachtschiene mit ",
            },
            {
                highlighted: true,
                text: "waschbarer Innenschicht",
            },
            {
                highlighted: false,
                text: " hält Ihre Laken ",
            },
            {
                highlighted: true,
                text: "sauber und frisch",
            },
            {
                highlighted: false,
                text: " während der Genesung.",
            },
        ],
    },
    fr: {
        title: "Gardez votre lit propre",
        buttonText: "Acheter Maintenant",
        secondaryButtonText: "Commander pour Clinique",
        body: [
            {
                highlighted: false,
                text: "Arrêtez d'amener des ",
            },
            {
                highlighted: true,
                text: "bottes sales",
            },
            {
                highlighted: false,
                text: " dans votre lit. Notre attelle de nuit avec ",
            },
            {
                highlighted: true,
                text: "doublure lavable",
            },
            {
                highlighted: false,
                text: " garde vos draps ",
            },
            {
                highlighted: true,
                text: "propres et frais",
            },
            {
                highlighted: false,
                text: " pendant la récupération.",
            },
        ],
    },
    es: {
        title: "Mantenga su cama limpia",
        buttonText: "Comprar Ahora",
        secondaryButtonText: "Pedir para Clínica",
        body: [
            {
                highlighted: false,
                text: "Deje de traer ",
            },
            {
                highlighted: true,
                text: "botas sucias",
            },
            {
                highlighted: false,
                text: " a su cama. Nuestra férula nocturna con ",
            },
            {
                highlighted: true,
                text: "forro lavable",
            },
            {
                highlighted: false,
                text: " mantiene sus sábanas ",
            },
            {
                highlighted: true,
                text: "limpias y frescas",
            },
            {
                highlighted: false,
                text: " durante la recuperación.",
            },
        ],
    },
    it: {
        title: "Mantieni il tuo letto pulito",
        buttonText: "Compra Ora",
        secondaryButtonText: "Ordina per Clinica",
        body: [
            {
                highlighted: false,
                text: "Smetti di portare ",
            },
            {
                highlighted: true,
                text: "stivali sporchi",
            },
            {
                highlighted: false,
                text: " nel tuo letto. La nostra stecca notturna con ",
            },
            {
                highlighted: true,
                text: "rivestimento lavabile",
            },
            {
                highlighted: false,
                text: " mantiene le lenzuola ",
            },
            {
                highlighted: true,
                text: "pulite e fresche",
            },
            {
                highlighted: false,
                text: " durante il recupero.",
            },
        ],
    },
};
---

<BuyNowCallout
    buttonText={content[lang].buttonText}
    buttonHref={buyNowRoute?.href || "/splint"}
    secondaryButtonText={content[lang].secondaryButtonText}
    secondaryButtonHref={wholesaleRoute?.href || "/order-wholesale"}
>
    <span slot="title">{content[lang].title}</span>
    <span slot="body">
        {
            content[lang].body.map((item) => (
                <span>
                    {item.highlighted ? (
                        <HighlightedWord>{item.text}</HighlightedWord>
                    ) : (
                        item.text
                    )}
                </span>
            ))
        }
    </span>
</BuyNowCallout>

---
import type { Lang } from "@/config/languages.ts";

const { lang = "en" } = Astro.props as { lang?: Lang };

const content: Record<
    Lang,
    {
        title: string;
        description: string;
        phases: Array<{
            weeks: string;
            title: string;
            description: string;
            splintUse: string;
        }>;
    }
> = {
    en: {
        title: "When to Use Your Night Splint",
        description:
            "Your recovery timeline and when the night splint can help you sleep better",
        phases: [
            {
                weeks: "Weeks 0-2",
                title: "Early Recovery",
                description:
                    "Immediate post-injury or post-surgery. Boot required during day.",
                splintUse:
                    "Check with surgeon first. Splint may be approved for night use if surgeon agrees.",
            },
            {
                weeks: "Weeks 2-6",
                title: "Critical Healing Phase",
                description:
                    "Tendon ends are healing. Protection is essential. Boot during day.",
                splintUse:
                    "Perfect time for night splint use. Most patients get approval at this stage. Dramatically improves sleep quality.",
            },
            {
                weeks: "Weeks 6-9",
                title: "Progressive Recovery",
                description:
                    "Starting to bear weight. Still need protection at night.",
                splintUse:
                    "Continue using night splint. Much more comfortable than boot for sleeping.",
            },
            {
                weeks: "Weeks 9-12",
                title: "Boot Transition",
                description:
                    "Preparing to transition out of boot. Still need night protection.",
                splintUse:
                    "Night splint continues to provide protection while allowing better sleep as you recover.",
            },
        ],
    },
    de: {
        title: "Wann Sie Ihre Nachtschiene verwenden sollten",
        description:
            "Ihr Genesungszeitplan und wann die Nachtschiene Ihnen helfen kann, besser zu schlafen",
        phases: [
            {
                weeks: "Wochen 0-2",
                title: "Frühe Genesung",
                description:
                    "Unmittelbar nach Verletzung oder Operation. Stiefel tagsüber erforderlich.",
                splintUse:
                    "Zuerst mit Chirurg prüfen. Schiene kann für Nachtgebrauch genehmigt werden, wenn Chirurg zustimmt.",
            },
            {
                weeks: "Wochen 2-6",
                title: "Kritische Heilungsphase",
                description:
                    "Sehnenenden heilen. Schutz ist wichtig. Stiefel tagsüber.",
                splintUse:
                    "Perfekte Zeit für Nachtschiene. Die meisten Patienten erhalten zu diesem Zeitpunkt die Genehmigung. Verbessert die Schlafqualität erheblich.",
            },
            {
                weeks: "Wochen 6-9",
                title: "Fortschreitende Genesung",
                description:
                    "Beginn des Gewichtsaufbaus. Nachts noch Schutz erforderlich.",
                splintUse:
                    "Nachtschiene weiterhin verwenden. Viel bequemer als Stiefel zum Schlafen.",
            },
            {
                weeks: "Wochen 9-12",
                title: "Stiefel-Übergang",
                description:
                    "Vorbereitung auf Übergang aus Stiefel. Nachts noch Schutz erforderlich.",
                splintUse:
                    "Nachtschiene bietet weiterhin Schutz und ermöglicht besseren Schlaf während der Genesung.",
            },
        ],
    },
    fr: {
        title: "Quand utiliser votre attelle de nuit",
        description:
            "Votre calendrier de récupération et quand l'attelle de nuit peut vous aider à mieux dormir",
        phases: [
            {
                weeks: "Semaines 0-2",
                title: "Récupération précoce",
                description:
                    "Immédiatement après la blessure ou la chirurgie. Botte requise pendant la journée.",
                splintUse:
                    "Vérifiez d'abord avec le chirurgien. L'attelle peut être approuvée pour usage nocturne si le chirurgien est d'accord.",
            },
            {
                weeks: "Semaines 2-6",
                title: "Phase de guérison critique",
                description:
                    "Les extrémités du tendon guérissent. La protection est essentielle. Botte pendant la journée.",
                splintUse:
                    "Moment idéal pour l'utilisation de l'attelle de nuit. La plupart des patients obtiennent l'approbation à ce stade. Améliore considérablement la qualité du sommeil.",
            },
            {
                weeks: "Semaines 6-9",
                title: "Récupération progressive",
                description:
                    "Commence à supporter le poids. Protection nocturne encore nécessaire.",
                splintUse:
                    "Continuez à utiliser l'attelle de nuit. Beaucoup plus confortable que la botte pour dormir.",
            },
            {
                weeks: "Semaines 9-12",
                title: "Transition de la botte",
                description:
                    "Préparation à la transition hors de la botte. Protection nocturne encore nécessaire.",
                splintUse:
                    "L'attelle de nuit continue de fournir une protection tout en permettant un meilleur sommeil pendant la récupération.",

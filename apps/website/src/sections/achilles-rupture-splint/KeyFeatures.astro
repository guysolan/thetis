---

<style>
    .feature-card {
        border-color: transparent;
        transition: all 0.5s ease-in-out;
    }

    .feature-card.highlighted {
        border-color: hsl(161, 60%, 40%);
    }
    .feature-card.highlighted svg {
        transition: all 0.5s ease-in-out;
        scale: 1.1;
    }
</style>

<section class="py-16">
    <div class="mx-auto px-4 container">
        <div class="mx-auto mb-12 max-w-3xl text-center">
            <h2
                class="mb-4 font-semibold text-neutral-950 dark:text-neutral-50 text-3xl md:text-4xl leading-[120%]"
            >
                <HighlightedParagraph paragraph={currentContent.title} />
            </h2>
            <p
                class="text-gray-800 dark:text-neutral-200 text-lg leading-relaxed"
            >
                {currentContent.description}
            </p>
        </div>

        <div
            class="gap-8 grid md:grid-cols-3 mx-auto max-w-5xl"
            id="feature-cards"
        >
            {
                currentContent.features.map((feature, index) => {
                    const icons = [
                        // Lightweight Design
                        `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>`,
                        // Easy to Use
                        `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>`,
                        // Proper Positioning
                        `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>`,
                        // Breathable
                        `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 15a4 4 0 004 4h9a5 5 0 10-.1-9.999 5.002 5.002 0 10-9.78 2.096A4.001 4.001 0 003 15z"></path>`,
                        // Sleep-Friendly
                        `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>`,
                        // Secure Support
                        `<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>`,
                    ];

                    return (
                        <div class="p-6 border-2 border-transparent rounded-lg text-center transition-all duration-300 feature-card">
                            <div class="flex justify-center items-center bg-primary/10 dark:bg-primary/20 mx-auto mb-4 rounded-full w-16 h-16">
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-8 h-8 text-primary group-hover:scale-110 transition-transform duration-300"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    set:html={icons[index]}
                                />
                            </div>
                            <h3 class="mb-2 font-semibold text-neutral-900 dark:text-neutral-50 text-lg">
                                {feature.title}
                            </h3>
                            <p class="text-gray-600 dark:text-neutral-400">
                                {feature.description}
                            </p>
                        </div>
                    );
                })
            }
        </div>
    </div>
</section>

<script>
    function highlightNextCard() {
        const cards = document.querySelectorAll(".feature-card");
        const currentIndex = Array.from(cards).findIndex((card) =>
            card.classList.contains("highlighted"),
        );

        // Remove highlight from current card
        if (currentIndex !== -1) {
            cards[currentIndex].classList.remove("highlighted");
        }

        // Add highlight to next card
        const nextIndex = (currentIndex + 1) % cards.length;
        cards[nextIndex].classList.add("highlighted");
    }

    // Start with first card highlighted
    const firstCard = document.querySelector(".feature-card");
    if (firstCard) {
        firstCard.classList.add("highlighted");
    }

    // Change highlight every 3 seconds
    setInterval(highlightNextCard, 1000);
</script>

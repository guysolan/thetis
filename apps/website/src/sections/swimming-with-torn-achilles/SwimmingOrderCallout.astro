---
import BuyNowCallout from "@/components/products/night-splint/BuyNowCallout.astro";
import HighlightedWord from "@/components/HighlightedWord.tsx";
import type { Lang } from "@/config/languages.ts";
import { getRouteBySlugAndLanguage } from "@/content/routes.tsx";

const { lang = "en" } = Astro.props as { lang?: Lang };

const buyNowRoute = getRouteBySlugAndLanguage("splint", lang);
const wholesaleRoute = getRouteBySlugAndLanguage("order-wholesale", lang);

const content: Record<
    Lang,
    {
        title: string;
        buttonText: string;
        secondaryButtonText: string;
        body: { highlighted: boolean; text: string }[];
    }
> = {
    en: {
        title: "Ready to Get Back in the Water?",
        buttonText: "Buy Now",
        secondaryButtonText: "Order for Clinic",
        body: [
            {
                highlighted: false,
                text: "Don't let your Achilles injury keep you from staying ",
            },
            {
                highlighted: true,
                text: "active",
            },
            {
                highlighted: false,
                text: " and ",
            },
            {
                highlighted: true,
                text: "fit",
            },
            {
                highlighted: false,
                text: ". Swim safely with proper ",
            },
            {
                highlighted: true,
                text: "Achilles support",
            },
            {
                highlighted: false,
                text: " in pools or the sea.",
            },
        ],
    },
    de: {
        title: "Bereit, wieder ins Wasser zu gehen?",
        buttonText: "Jetzt Kaufen",
        secondaryButtonText: "Für Klinik Bestellen",
        body: [
            {
                highlighted: false,
                text: "Lassen Sie Ihre Achillessehnenverletzung Sie nicht davon abhalten, ",
            },
            {
                highlighted: true,
                text: "aktiv",
            },
            {
                highlighted: false,
                text: " und ",
            },
            {
                highlighted: true,
                text: "fit",
            },
            {
                highlighted: false,
                text: " zu bleiben. Schwimmen Sie sicher mit ordentlicher ",
            },
            {
                highlighted: true,
                text: "Achillessehnen-Unterstützung",
            },
            {
                highlighted: false,
                text: " in Pools oder im Meer.",
            },
        ],
    },
    fr: {
        title: "Prêt à retourner dans l'eau?",
        buttonText: "Acheter Maintenant",
        secondaryButtonText: "Commander pour Clinique",
        body: [
            {
                highlighted: false,
                text: "Ne laissez pas votre blessure d'Achille vous empêcher de rester ",
            },
            {
                highlighted: true,
                text: "actif",
            },
            {
                highlighted: false,
                text: " et ",
            },
            {
                highlighted: true,
                text: "en forme",
            },
            {
                highlighted: false,
                text: ". Nagez en toute sécurité avec un bon ",
            },
            {
                highlighted: true,
                text: "soutien d'Achille",
            },
            {
                highlighted: false,
                text: " en piscines ou en mer.",
            },
        ],
    },
    es: {
        title: "¿Listo para volver al agua?",
        buttonText: "Comprar Ahora",
        secondaryButtonText: "Pedir para Clínica",
        body: [
            {
                highlighted: false,
                text: "No deje que su lesión de Aquiles le impida mantenerse ",
            },
            {
                highlighted: true,
                text: "activo",
            },
            {
                highlighted: false,
                text: " y ",
            },
            {
                highlighted: true,
                text: "en forma",
            },
            {
                highlighted: false,
                text: ". Nade con seguridad con un buen ",
            },
            {
                highlighted: true,
                text: "soporte de Aquiles",
            },
            {
                highlighted: false,
                text: " en piscinas o el mar.",
            },
        ],
    },
    it: {
        title: "Pronto a tornare in acqua?",
        buttonText: "Compra Ora",
        secondaryButtonText: "Ordina per Clinica",
        body: [
            {
                highlighted: false,
                text: "Non lasciare che la tua lesione all'Achille ti impedisca di rimanere ",
            },
            {
                highlighted: true,
                text: "attivo",
            },
            {
                highlighted: false,
                text: " e ",
            },
            {
                highlighted: true,
                text: "in forma",
            },
            {
                highlighted: false,
                text: ". Nuota in sicurezza con un buon ",
            },
            {
                highlighted: true,
                text: "supporto dell'Achille",
            },
            {
                highlighted: false,
                text: " in piscine o mare.",
            },
        ],
    },
};
---

<BuyNowCallout
    buttonText={content[lang].buttonText}
    buttonHref={buyNowRoute?.href || "/splint"}
    secondaryButtonText={content[lang].secondaryButtonText}
    secondaryButtonHref={wholesaleRoute?.href || "/order-wholesale"}
>
    <span slot="title">{content[lang].title}</span>
    <span slot="body">
        {
            content[lang].body.map((item) => (
                <span>
                    {item.highlighted ? (
                        <HighlightedWord>{item.text}</HighlightedWord>
                    ) : (
                        item.text
                    )}
                </span>
            ))
        }
    </span>
</BuyNowCallout>

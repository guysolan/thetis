---

<div class="mx-auto px-4 py-16 container">
    <div class="mx-auto mb-16 max-w-3xl text-center">
        <h2
            class="mb-4 font-semibold text-neutral-950 text-3xl md:text-4xl leading-[120%]"
        >
            <HighlightedParagraph paragraph={content.title} />
        </h2>
        <p class="text-gray-800 text-lg leading-relaxed">
            {content.subtitle}
        </p>
    </div>

    <div class="space-y-16 mx-auto max-w-4xl">
        <!-- Critical Safety -->
        <div>
            <h3 class="mb-6 font-semibold text-neutral-900 text-2xl">
                {currentContent.safetyTitle}
            </h3>
            <div class="space-y-4">
                <div class="pl-4 border-red-500 border-l-4">
                    <p class="font-semibold text-neutral-900 text-lg">
                        {currentContent.rule1Title}
                    </p>
                    <p class="mt-1 text-gray-700">
                        {currentContent.rule1Text}
                    </p>
                </div>

                <div class="pl-4 border-red-500 border-l-4">
                    <p class="font-semibold text-neutral-900 text-lg">
                        {currentContent.rule2Title}
                    </p>
                    <p class="mt-1 text-gray-700">
                        {currentContent.rule2Text}
                    </p>
                </div>

                <div class="pl-4 border-orange-500 border-l-4">
                    <p class="font-semibold text-neutral-900 text-lg">
                        {currentContent.rule3Title}
                    </p>
                    <p class="mt-1 text-gray-700">
                        {currentContent.rule3Text}
                    </p>
                </div>
            </div>
        </div>

        <!-- Why It Works -->
        <div>
            <h3 class="mb-4 font-semibold text-neutral-900 text-2xl">
                {currentContent.whyTitle}
            </h3>
            <p class="text-gray-700 text-lg leading-relaxed">
                {currentContent.whyText}
            </p>
        </div>

        <!-- Pool vs Sea -->
        <div>
            <h3 class="mb-6 font-semibold text-neutral-900 text-2xl">
                {currentContent.whereTitle}
            </h3>
            <div class="gap-8 grid md:grid-cols-2">
                <div>
                    <p class="mb-2 font-semibold text-neutral-900 text-lg">
                        🏊‍♂️ {currentContent.poolTitle}
                    </p>
                    <p class="text-gray-700">
                        {currentContent.poolText}
                    </p>
                </div>
                <div>
                    <p class="mb-2 font-semibold text-neutral-900 text-lg">
                        🌊 {currentContent.seaTitle}
                    </p>
                    <p class="text-gray-700">
                        {currentContent.seaText}
                    </p>
                </div>
            </div>
        </div>

        <!-- Splint vs Limbo -->
        <div>
            <h3 class="mb-4 font-semibold text-neutral-900 text-2xl">
                {currentContent.vsTitle}
            </h3>
            <p class="mb-4 text-gray-700 text-lg leading-relaxed">
                {currentContent.vsText}
            </p>
        </div>

        <!-- Interesting Fact -->
        <div class="bg-primary/5 p-8 border-primary border-l-4 rounded-r">
            <p class="mb-2 font-semibold text-neutral-900 text-lg">
                💡 {currentContent.factTitle}
            </p>
            <p class="text-gray-700 leading-relaxed">
                {currentContent.factText}
            </p>
        </div>

        <!-- Maintenance -->

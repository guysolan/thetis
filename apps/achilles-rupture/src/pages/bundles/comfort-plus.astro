---
import BaseHead from "../../components/BaseHead.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { SITE_TITLE } from "../../consts";

const pageTitle = "Comfort Plus Bundle - Achilles Recovery Equipment";
const pageDescription = "Maximize comfort throughout your Achilles rupture recovery. Includes all essentials plus EVENup leveler, crutch handles, and elevation wedge.";
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead

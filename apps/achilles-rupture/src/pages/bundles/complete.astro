import { SITE_TITLE } from "../../consts";
import Layout from '../../layouts/Layout.astro';

const pageTitle = "Complete Recovery Bundle - Achilles Recovery Equipment";
const pageDescription = "Everything for optimal Achilles rupture recovery. All essentials, comfort items, plus hygiene and care accessories for a comprehensive recovery experience.";

const bundleItems = [
    {
        name: 'Walking Boot',
        isChoice: true,
        options: [
            {
                name: 'Aircast + Heel Wedges',
                price: '$150-180',
                image: '/images/aircast-boot.jpg',
                description: 'Popular choice, requires separate wedges',
                buyLink: 'https://www.amazon.com/dp/B00296Z9L6'
            },
            {
                name: 'VACOped Boot',
                price: '$250-300',
                image: '/images/vacoped-boot.jpg',
                description: 'All-in-one with built-in wedge system',
                buyLink: 'https://www.amazon.com/dp/B07DHLPVLF'
            }
        ]
    },
    {
        name: 'Thetis Medical Night Splint',
        price: '$90-120',
        image: '/images/thetis-night-splint-side.jpg',
        description: 'Only Achilles-specific night splint. Purpose-built for comfortable sleep.',
        buyLink: 'https://thetismedical.com/night-splint',
        amazonLink: 'https://www.amazon.com/dp/B09N5KH4F3'
    },
    {
        name: 'EVENup Shoe Leveler',
        price: '$35-40',
        image: '/images/even-up.jpg',
        description: 'Prevents back pain and hip issues from uneven gait',
        buyLink: 'https://www.amazon.com/dp/B004HY68DO'
    },
    {
        name: 'Waterproof Boot Cover',
        price: '$25-45',
        image: '/images/boot-bag.jpg',
        description: 'Essential for safe showering and preventing infection',
        buyLink: 'https://www.amazon.com/dp/B0BN9XWHJT'
    },
    {
        name: 'Ergonomic Crutch Handles',
        price: '$20-35',
        image: '/images/soft-crutch-handles.jpg',
        description: '40% reduction in forearm pain, memory foam comfort',
        buyLink: 'https://www.amazon.com/dp/B0716XTJ8L'
    },
    {
        name: 'Elevation Wedge',
        price: '$45-75',
        image: '/images/elevation-wedge.jpg',
        description: 'Medical-grade elevation to reduce swelling',
        buyLink: 'https://www.amazon.com/dp/B01FTYB0O6'
    },
    {
        name: 'Merino Wool Socks (2 pairs)',
        price: '$20-35',
        description: 'Temperature regulation, antimicrobial properties',
        buyLink: 'https://www.amazon.com/s?k=merino+wool+socks',
        noImage: true,
        emoji: 'üß¶'
    },
    {
        name: 'Antifungal Powder',
        price: '$12-20',
        description: 'Prevents athlete\'s foot and odor in boot',
        buyLink: 'https://www.amazon.com/dp/B00GYPZREU',
        noImage: true,
        emoji: 'üí®'
    }
];

const totalPrice = '$450-600';
---

<Layout title="Complete Recovery Bundle - Achilles Recovery Equipment">
    <main class="mx-auto px-4 py-8 max-w-6xl container">
        <!-- Breadcrumb -->
        <nav class="mb-6 text-sm">
            <a href="/recovery-equipment-guide" class="text-purple-600 hover:underline">Equipment Guide</a>
            <span class="mx-2">/</span>
            <span class="text-gray-600">Complete Recovery Bundle</span>
        </nav>

        <h1 class="mb-8 font-bold text-4xl">Complete Recovery Bundle</h1>
        
        <div class="gap-8 grid lg:grid-cols-3">
            <!-- Products List -->
            <div class="space-y-6 lg:col-span-2">
                {bundleItems.map((item) => (
                    item.isChoice ? (
                        <div class="bg-white shadow p-6 border border-gray-200 rounded-lg">
                            <div class="flex items-center gap-2 mb-4">
                                <span class="text-2xl">ü•á</span>
                                <h3 class="font-bold text-xl">Walking Boot (Choose One)</h3>
                            </div>
                            <div class="gap-4 grid md:grid-cols-2">
                                {item.options.map((option) => (
                                    <div class="p-4 border border-gray-200 rounded-lg">
                                        <img 
                                            src={option.image} 
                                            alt={option.name}
                                            class="mb-3 w-full h-32 object-contain"
                                        />
                                        <h4 class="mb-1 font-semibold">{option.name}</h4>
                                        <p class="mb-2 text-gray-600 text-sm">{option.description}</p>
                                        <div class="flex justify-between items-center mb-3">
                                            <span class="font-bold text-lg">{option.price}</span>
                                        </div>
                                        <a 
                                            href={option.buyLink}
                                            target="_blank"
                                            rel="noopener noreferrer"
                                            class="block bg-purple-600 hover:bg-purple-700 px-4 py-2 rounded w-full text-white text-sm text-center transition-colors"
                                        >
                                            Buy This Option
                                        </a>
                                    </div>
                                ))}
                            </div>
                        </div>
                    ) : (
                        <div class="bg-white shadow p-6 border border-gray-200 rounded-lg">
                            <div class="flex gap-4">
                                {item.noImage ? (
                                    <div class="flex justify-center items-center bg-gray-100 rounded-lg w-24 h-24">
                                        <span class="text-4xl">{item.emoji}</span>
                                    </div>
                                ) : (
                                    <img 
                                        src={item.image} 
                                        alt={item.name}
                                        class="w-24 h-24 object-contain"
                                    />
                                )}
                                <div class="flex-1">
                                    <div class="flex items-center gap-2 mb-2">
                                        <span class="text-xl">
                                            {item.name.includes('Night Splint') ? 'ü•á' : 
                                             item.name.includes('EVENup') || item.name.includes('Waterproof') ? 'ü•à' : 
                                             item.name.includes('Crutch') || item.name.includes('Elevation') ? 'ü•â' : '‚≠ê'}
                                        </span>
                                        <h3 class="font-semibold text-lg">{item.name}</h3>
                                    </div>
                                    <p class="mb-3 text-gray-600 text-sm">{item.description}</p>
                                    <div class="flex justify-between items-center">
                                        <span class="font-bold">{item.price}</span>
                                        <div class="flex gap-2">
                                            {item.amazonLink && (
                                                <a 
                                                    href={item.amazonLink}
                                                    target="_blank"
                                                    rel="noopener noreferrer"
                                                    class="bg-gray-600 hover:bg-gray-700 px-3 py-1 rounded text-white text-sm transition-colors"
                                                >
                                                    Amazon
                                                </a>
                                            )}
                                            <a 
                                                href={item.buyLink}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="bg-purple-600 hover:bg-purple-700 px-3 py-1 rounded text-white text-sm transition-colors"
                                            >
                                                {item.name.includes('Night Splint') ? 'Buy Direct' : 
                                                 item.name.includes('Merino') ? 'Browse Options' : 'Buy Now'}
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    )
                ))}
            </div>

            <!-- Bundle Summary -->
            <div class="lg:col-span-1">
                <div class="top-4 sticky bg-gray-50 p-6 rounded-lg">
                    <h2 class="mb-4 font-bold text-2xl">Bundle Summary</h2>
                    <div class="space-y-3 mb-6">
                        <div class="flex justify-between">
                            <span>8 Recovery Items</span>
                            <span class="font-semibold">{totalPrice}</span>
                        </div>
                    </div>
                    
                    <div class="mb-6 pt-4 border-t">
                        <h3 class="mb-3 font-semibold">What You Get:</h3>
                        <ul class="space-y-2 text-sm">
                            <li class="flex items-start gap-2">
                                <span class="text-green-600">‚úì</span>
                                <span>Everything from Comfort Plus Bundle</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-green-600">‚úì</span>
                                <span>Complete odor & moisture control</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-green-600">‚úì</span>
                                <span>Temperature regulation in boot</span>
                            </li>
                            <li class="flex items-start gap-2">
                                <span class="text-green-600">‚úì</span>
                                <span>Prevention of fungal infections</span>
                            </li>
                        </ul>
                    </div>

                    <div class="bg-green-100 mb-6 p-4 rounded-lg">
                        <p class="text-green-900 text-sm">
                            <strong>Best for:</strong> Patients who want maximum comfort and hygiene throughout their entire recovery journey.
                        </p>
                    </div>

                    <blockquote class="mb-6 pl-4 border-green-600 border-l-4 text-gray-700 text-sm italic">
                        "Magificent thinking and huge contribution to wellbeing when the little things seem to be non trivial any more" - Zahi
                    </blockquote>

                    <a href="/recovery-equipment-guide" class="text-purple-600 text-sm hover:underline">
                        ‚Üê Back to Equipment Guide
                    </a>
                </div>
            </div>
        </div>

        <!-- Special Note -->
        <div class="bg-blue-50 mt-12 p-6 rounded-lg">
            <h3 class="mb-3 font-bold text-xl">Why Include Hygiene Items?</h3>
            <div class="gap-4 grid md:grid-cols-2 text-gray-700">
                <div>
                    <h4 class="mb-2 font-semibold">üß¶ Merino Wool Benefits</h4>
                    <ul class="space-y-1 text-sm">
                        <li>‚Ä¢ Natural antimicrobial properties</li>
                        <li>‚Ä¢ Wicks moisture away from skin</li>
                        <li>‚Ä¢ Temperature regulation in all seasons</li>
                        <li>‚Ä¢ Reduces boot odor significantly</li>
                    </ul>
                </div>
                <div>
                    <h4 class="mb-2 font-semibold">üí® Antifungal Protection</h4>
                    <ul class="space-y-1 text-sm">
                        <li>‚Ä¢ Prevents athlete's foot in moist boot environment</li>
                        <li>‚Ä¢ Reduces risk of skin breakdown</li>
                        <li>‚Ä¢ Keeps feet dry and comfortable</li>
                        <li>‚Ä¢ Essential for 12+ weeks of boot wear</li>
                    </ul>
                </div>
            </div>
            <p class="mt-4 text-gray-600 text-sm italic">
                "After 12 weeks in a boot, you'll understand why these 'extras' are actually essentials" - Recovery patients
            </p>
        </div>
    </main>
</Layout>
    "@context": "https://schema.org",
    "@graph": [
        {
            "@type": "ItemList",
            name: "Best Achilles Rupture Recovery Equipment 2025",
            description: pageDescription,
            numberOfItems: 8,
            itemListElement: [
                {
                    "@type": "ListItem",
                    position: 1,
                    item: {
                        "@type": "Product",
                        name: "Thetis Medical Night Splint",
                        description:
                            "The only night splint specifically designed for Achilles rupture recovery",
                        brand: {
                            "@type": "Brand",
                            name: "Thetis Medical",
                        },
                        aggregateRating: {
                            "@type": "AggregateRating",
                            ratingValue: "4.8",
                            bestRating: "5",
                            ratingCount: "127",
                        },

---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ContentListing from "../components/ContentListing.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
import { getCollection } from "astro:content";

const guides = await getCollection("guide");
const articles = await getCollection("article");
const allPosts = [
    ...guides.map((g) => ({ ...g, type: "guide" })),
    ...articles.map((a) => ({ ...a, type: "article" })),
].sort(
    (a, b) =>
        new Date(b.data.publishedAt).getTime() -
        new Date(a.data.publishedAt).getTime(),
);
---

<!doctype html>
<html lang="en">
    <head>
        <BaseHead
            title={`${SITE_TITLE} - Recovery Guide & Resources`}
            description={SITE_DESCRIPTION}
        />
        <meta property="og:type" content="website" />
        <meta
            property="og:title"
            content={`${SITE_TITLE} - Recovery Guide & Resources`}
        />
        <meta property="og:description" content={SITE_DESCRIPTION} />
        <link
            rel="canonical"
            href={new URL(Astro.url.pathname, Astro.site).toString()}
        />
    </head>
    <body>
        <Header />

        <main id="main-content">
            <!-- Featured Equipment Guide Section -->
            <section class="bg-gradient-to-r from-purple-50 to-blue-50 mb-8 py-12">
                <div class="mx-auto px-4 max-w-6xl container">
                    <div class="mb-8 text-center">
                        <span class="inline-block bg-purple-600 mb-4 px-4 py-1 rounded-full font-semibold text-white text-sm">
                            🏆 NEW: 2025 Equipment Awards
                        </span>
                        <h2 class="mb-4 font-bold text-3xl md:text-4xl">
                            Essential Recovery Equipment Ranked by Experts
                        </h2>
                        <p class="mx-auto mb-8 max-w-3xl text-gray-600 text-xl">
                            Discover the surgeon-recommended equipment that makes Achilles rupture recovery safer, more comfortable, and faster. 
                            Based on clinical evidence and real patient reviews.
                        </p>
                        <div class="flex flex-wrap justify-center gap-4">
                            <a href="/recovery-equipment-guide" 
                               class="inline-flex items-center bg-purple-600 hover:bg-purple-700 px-6 py-3 rounded-lg font-semibold text-white transition-colors">
                                View Equipment Guide →
                            </a>
                            <a href="https://thetismedical.com/night-splint" 
                               class="inline-flex items-center bg-white hover:bg-purple-50 px-6 py-3 border-2 border-purple-600 rounded-lg font-semibold text-purple-600 transition-colors">
                                Get #1 Rated Night Splint
                            </a>
                        </div>
                    </div>
                    <div class="gap-6 grid md:grid-cols-3 mt-12">
                        <div class="bg-white shadow-sm p-6 rounded-lg text-center">
                            <span class="block mb-2 text-3xl">😴</span>
                            <h3 class="mb-2 font-semibold">Better Sleep</h3>
                            <p class="text-gray-600 text-sm">Specialized night splint for comfortable, safe sleep</p>
                        </div>
                        <div class="bg-white shadow-sm p-6 rounded-lg text-center">
                            <span class="block mb-2 text-3xl">🚶</span>
                            <h3 class="mb-2 font-semibold">Balanced Walking</h3>
                            <p class="text-gray-600 text-sm">Equipment to prevent secondary injuries</p>
                        </div>
                        <div class="bg-white shadow-sm p-6 rounded-lg text-center">
                            <span class="block mb-2 text-3xl">💰</span>
                            <h3 class="mb-2 font-semibold">Save Money</h3>
                            <p class="text-gray-600 text-sm">Know what's essential vs. nice-to-have</p>
                        </div>
                    </div>
                </div>
            </section>

            <ContentListing
                posts={allPosts}
                title="🦿 Understanding Achilles Tendon Rupture Recovery"
            />
        </main>
        <Footer />
    </body>
</html>

---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('guide')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="w-[960px]">
			<section>
				<ul class="flex flex-wrap gap-8 m-0 p-0 list-none">
					{
						posts.map((post) => (
							<li class="[&:first-child]:mb-4 w-[calc(50%_-_1rem)] [&:first-child]:w-full [&:first-child]:text-center">
								<a href={`/guides/${post.id}/`} class="block transition-all duration-200">
									<img 
										width={720} 
										height={360} 
										src={post.data.heroImage} 
										alt="" 
										class="hover:shadow-lg mb-2 rounded-xl [&:first-child]:w-full"
									/>
									<h4 class="m-0 text-black hover:text-accent [&:first-child]:text-[2.369rem] leading-none title">
										{post.data.title}
									</h4>
									<p class="m-0 text-gray hover:text-accent date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

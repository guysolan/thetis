---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';

const posts = (await getCollection('article')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="w-[960px]">
			<section>
				<ul class="flex flex-wrap gap-8 m-0 p-0 list-none">
					{
						posts.map((post) => (
							<li class="[&:first-child]:mx-auto [&:first-child]:mb-4 w-[calc(50%-1rem)] [&:first-child]:w-full">
								<a href={`/articles/${post.id}/`} class="relative flex flex-col transition-all duration-200 group">
									<div class="relative">
									<img 
										width={720} 
										height={360} 
										src={post.data.heroImage} 
										alt="" 
										class="hover:shadow-lg mb-2 rounded-xl w-full [&:not(:first-child)]:h-[200px] aspect-video object-cover"
									/>
									{post.data.tags && (
										<div class="bottom-0 absolute flex gap-2 bg-gray-100 bg-opacity-50 px-4 py-4 pt-2 rounded-b-xl w-full">
											{post.data.tags.map((tag) => (
												<span class="border-gray-200 bg-gray-100 px-2 py-1 border rounded-md text-gray-700 text-sm">
													{tag}
												</span>
											))}
										</div>
									)}
									</div>
									<h4 class="m-0 text-black hover:text-accent [.first-child_&]:text-[2.369rem] leading-none title">
										{post.data.title}
									</h4>
									<p class="inline-flex items-center m-0 [&:not(:first-child)]:mr-auto text-gray hover:text-accent date">Read Now <span class="transition-all duration-200">
											<svg class="group-hover:-rotate-45 ml-1 w-5 h-5 transform transition-transform" viewBox="0 0 24 24" fill="none" stroke="currentColor">
											<path d="M5 12h14M12 5l7 7-7 7" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
										</svg>
										</span></p>
									
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>

---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const { title, description } = Astro.props;
const currentPath = Astro.url.pathname;
const showBanner = currentPath !== '/recovery-equipment-guide';
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
	</head>

	<body>
		<Header />
		
		{showBanner && (
			<!-- Equipment Guide Banner -->
			<section class="bg-gradient-to-r from-purple-50 to-blue-50 mb-4 py-4">
				<div class="mx-auto px-4 max-w-6xl container">
					<div class="flex md:flex-row flex-col justify-between items-center gap-4">
						<div class="flex items-center gap-3">
							<span class="inline-block bg-purple-600 px-3 py-1 rounded-full font-semibold text-white text-xs">
								🏆 NEW
							</span>
							<p class="font-medium text-sm">
								2025 Equipment Awards: Expert-ranked recovery gear
							</p>
						</div>
						<div class="flex gap-3">
							<a href="/recovery-equipment-guide" 
							   class="inline-flex items-center bg-purple-600 hover:bg-purple-700 px-4 py-2 rounded-lg font-semibold text-white text-sm transition-colors">
								View Guide →
							</a>
							<a href="https://thetismedical.com/night-splint" 
							   class="inline-flex items-center bg-white hover:bg-purple-50 px-4 py-2 border border-purple-600 rounded-lg font-semibold text-purple-600 text-sm transition-colors">
								Get Night Splint
							</a>
						</div>
					</div>
				</div>
			</section>
		)}
		
		<main class="w-full">
			<slot />
		</main>
		<Footer />
	</body>
</html>
